/* But SHOW pagination inside raven-right-controls */
.raven-right-controls nav.pagination,
.raven-right-controls .raven-inline-pagination,
nav.pagination.raven-inline-pagination {
    display: flex !important;
}

/* Bottom pagination hidden - only top pagination visible */

/* Style the cloned pagination inside right controls */
.raven-right-controls nav.pagination.raven-inline-pagination,
.raven-right-controls .raven-inline-pagination {
