        // Handle search form submission
        function handleSearchSubmit(e) {
            var form = e.target;
            if (!form.classList.contains('raven-search-form') && !form.closest('.raven-header')) {
                return;
            }

            var searchInput = form.querySelector('input[name="search"]');
