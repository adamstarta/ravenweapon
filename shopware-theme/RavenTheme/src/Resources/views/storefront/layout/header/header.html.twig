    .raven-nav-link:hover::after, .raven-nav-link.active::after {
        width: 100%;
    }
    .raven-nav-link:hover {
        color: #111827 !important;
    }

    /* Mega Menu Dropdown Styles */
    .raven-nav-item {
        position: relative;
    }
    .raven-mega-menu {
        position: absolute;
        top: 100%;
        left: 50%;
        transform: translateX(-50%);
        min-width: 220px;
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.15);
        border: 1px solid #e5e7eb;
        padding: 12px 0;
        opacity: 0;
        visibility: hidden;
        transition: all 0.2s ease;
        z-index: 1000;
        margin-top: 8px;
    }
    /* Right-aligned dropdown for items near right edge (like Ausrüstung) */
    .raven-nav-item.dropdown-align-right .raven-mega-menu {
        left: auto !important;
        right: 24px !important;
        transform: none !important;
