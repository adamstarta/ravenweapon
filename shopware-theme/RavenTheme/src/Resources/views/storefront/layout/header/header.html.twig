    }
    @media (max-width: 1400px) {
        .raven-nav-item.dropdown-align-right .raven-mega-menu {
            right: 32px !important;
            max-width: calc(100vw - 64px);
        }
    }
    @media (max-width: 1200px) {
        .raven-nav-item.dropdown-align-right .raven-mega-menu {
            right: 48px !important;
            max-width: calc(100vw - 80px);
        }
    }
    /* Left-aligned dropdown for items near left edge (like Waffen) */
    .raven-nav-item.dropdown-align-left .raven-mega-menu {
        left: 24px !important;
        right: auto !important;
        transform: none !important;
        max-width: calc(100vw - 48px);
    }
    @media (max-width: 1400px) {
        .raven-nav-item.dropdown-align-left .raven-mega-menu {
            left: 16px !important;
            max-width: calc(100vw - 64px);
        }
    }
    @media (max-width: 1200px) {
        .raven-nav-item.dropdown-align-left .raven-mega-menu {
            left: 8px !important;
            max-width: calc(100vw - 80px);
        }
