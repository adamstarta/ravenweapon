{% sw_extends '@Storefront/storefront/base.html.twig' %}

{% block base_main_inner %}
<main class="raven-manufacturer-coming-soon">
    {# Header Section #}
    <section style="background: #f5f5f5; padding: 2rem 0;">
        <div class="max-w-7xl mx-auto px-6 lg:px-24">
            <h1 style="font-family: 'Inter', -apple-system, sans-serif; font-size: 2rem; font-weight: 700; color: #111; margin: 0;">
                {% if subcategoryName is defined and subcategoryName %}
                    {{ subcategoryName }}
                {% else %}
                    {{ manufacturerName }}
                {% endif %}
            </h1>
            <div style="font-size: 0.875rem; color: #666; margin-top: 0.5rem;">
                <a href="{{ path('frontend.home.page') }}" style="color: #666; text-decoration: none;">Home</a>
                <span style="margin: 0 0.5rem;">|</span>
                {% if subcategoryName is defined and subcategoryName %}
                    <a href="/{{ manufacturerSlug }}/" style="color: #666; text-decoration: none;">{{ manufacturerName }}</a>
                    <span style="margin: 0 0.5rem;">|</span>
                    <span>{{ subcategoryName }}</span>
                {% else %}
                    <span>{{ manufacturerName }}</span>
                {% endif %}
            </div>
        </div>
    </section>

    {# Coming Soon Content #}
    <section style="background: white; padding: 5rem 0;">
        <div class="max-w-7xl mx-auto px-6 lg:px-24">
            <div style="text-align: center; max-width: 500px; margin: 0 auto;">
                {# Icon #}
                <div style="margin-bottom: 2rem;">
                    <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="#D4A847" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" style="margin: 0 auto;">
                        <circle cx="12" cy="12" r="10"/>
                        <polyline points="12 6 12 12 16 14"/>
                    </svg>
                </div>

                {# Text #}
                <h2 style="font-family: 'Inter', -apple-system, sans-serif; font-size: 1.75rem; font-weight: 700; color: #111; margin: 0 0 1rem;">
                    {% if subcategoryName is defined and subcategoryName %}
                        {{ subcategoryName }} - Produkte folgen in Kürze
                    {% else %}
                        Produkte folgen in Kürze
                    {% endif %}
                </h2>
                <p style="font-size: 1rem; color: #666; line-height: 1.6; margin-bottom: 2rem;">
                    {% if subcategoryName is defined and subcategoryName %}
                        Wir arbeiten daran, <strong>{{ subcategoryName }}</strong> Produkte von <strong>{{ manufacturerName }}</strong> in unser Sortiment aufzunehmen. Schauen Sie bald wieder vorbei!
                    {% else %}
                        Wir arbeiten daran, Produkte von <strong>{{ manufacturerName }}</strong> in unser Sortiment aufzunehmen. Schauen Sie bald wieder vorbei!
                    {% endif %}
                </p>

                {# CTA Buttons #}
                <div style="display: flex; flex-wrap: wrap; gap: 1rem; justify-content: center;">
                    {% if subcategoryName is defined and subcategoryName and manufacturer %}
                        <a href="/{{ manufacturerSlug }}/" style="display: inline-flex; align-items: center; gap: 0.5rem; padding: 0.875rem 1.5rem; background: #D4A847; color: #111; font-weight: 600; border-radius: 8px; text-decoration: none; transition: background 0.2s;">
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <line x1="19" y1="12" x2="5" y2="12"/>
                                <polyline points="12 19 5 12 12 5"/>
                            </svg>
                            Alle {{ manufacturerName }} Produkte
                        </a>
                    {% else %}
                        <a href="{{ path('frontend.home.page') }}" style="display: inline-flex; align-items: center; gap: 0.5rem; padding: 0.875rem 1.5rem; background: #D4A847; color: #111; font-weight: 600; border-radius: 8px; text-decoration: none; transition: background 0.2s;">
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
                                <polyline points="9 22 9 12 15 12 15 22"/>
                            </svg>
                            Zur Startseite
                        </a>
                    {% endif %}
                    <a href="/Alle-Produkte/" style="display: inline-flex; align-items: center; gap: 0.5rem; padding: 0.875rem 1.5rem; background: white; color: #111; font-weight: 600; border: 1px solid #e5e7eb; border-radius: 8px; text-decoration: none; transition: border-color 0.2s;">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <circle cx="9" cy="21" r="1"/>
                            <circle cx="20" cy="21" r="1"/>
                            <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/>
                        </svg>
                        Alle Produkte
                    </a>
                </div>
            </div>
        </div>
    </section>
</main>
{% endblock %}
