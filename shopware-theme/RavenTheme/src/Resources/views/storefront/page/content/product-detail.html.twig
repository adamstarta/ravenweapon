            return false;
        }
        if (!title) {
            alert('Bitte geben Sie einen Titel ein');
            return false;
        }
        if (!content) {
            alert('Bitte schreiben Sie eine Bewertung');
            return false;
        }
        if (!name) {
            alert('Bitte geben Sie Ihren Namen ein');
            return false;
        }
        if (!email || !email.includes('@')) {
