{% sw_extends '@Storefront/storefront/page/content/product-detail.html.twig' %}

{% block base_main_inner %}
{# Product Schema.org JSON-LD for Google Rich Snippets #}
<script type="application/ld+json">
{
    "@context": "https://schema.org",
    "@type": "Product",
    "name": "{{ page.product.translated.name|e('js') }}",
    "description": "{{ page.product.translated.description|striptags|slice(0, 200)|e('js') }}",
    "image": "{% if page.product.cover.media.url %}{{ page.product.cover.media.url }}{% endif %}",
    "sku": "{{ page.product.productNumber }}",
    "brand": {
        "@type": "Brand",
        "name": "{% if page.product.manufacturer %}{{ page.product.manufacturer.translated.name|e('js') }}{% else %}Raven Weapon{% endif %}"
    },
    "offers": {
        "@type": "Offer",
        "url": "{{ app.request.uri }}",
        "priceCurrency": "CHF",
        "price": "{{ page.product.calculatedPrice.unitPrice }}",
        "availability": "{% if page.product.availableStock > 0 %}https://schema.org/InStock{% else %}https://schema.org/OutOfStock{% endif %}",
        "seller": {
            "@type": "Organization",
            "name": "Raven Weapon AG"
        }
    }
    {% if page.product.ratingAverage > 0 %},
    "aggregateRating": {
        "@type": "AggregateRating",
        "ratingValue": "{{ page.product.ratingAverage }}",
        "reviewCount": "{{ page.product.reviews.total|default(1) }}"
    }
    {% endif %}
}
</script>
<!-- RAVENTHEME_PRODUCT_SCHEMA_ACTIVE -->
{# CSS to hide Shopware's default breadcrumb on product detail - we have our own styled one #}
<style>
    body .breadcrumb-container,
    body > .container > nav.breadcrumb,
    header + nav[aria-label="Breadcrumb"],
    .header-main ~ nav[aria-label="Breadcrumb"]:not(.breadcrumb-nav),
    .is-ctl-product nav.breadcrumb:not(.breadcrumb-nav),
    main > .cms-page > .cms-section:first-child nav.breadcrumb:not(.breadcrumb-nav) {
        display: none !important;
    }
</style>
<div class="raven-product-detail container py-5 md:py-8">
    {# NATIVE BREADCRUMB: Uses data from ProductDetailSubscriber (breadcrumbCategories extension) #}
    {# Each category has seoUrls loaded - NO hardcoded mappings needed #}
    <nav class="breadcrumb-nav text-sm text-gray-500 mb-5" aria-label="Breadcrumb" style="font-family: 'Inter', sans-serif;">
        <a href="{{ path('frontend.home.page') }}" class="hover:text-amber-600 transition-colors" style="text-decoration: none;">Home</a>
        {% if page.extensions.breadcrumbCategories is defined and page.extensions.breadcrumbCategories|length > 0 %}
            {% for cat in page.extensions.breadcrumbCategories %}
                {# Skip root category (level 1 = Catalogue #1) #}
                {% if cat.level is defined and cat.level > 1 %}
                    <span class="mx-2 text-gray-400">/</span>
                    {# Get category URL from seoUrls (generated by our script) #}
                    {% set catUrl = '' %}
                    {% if cat.seoUrls is defined and cat.seoUrls|length > 0 %}
                        {% for seo in cat.seoUrls %}
                            {% if seo.isCanonical and catUrl == '' %}
                                {% set catUrl = '/' ~ seo.seoPathInfo|trim('/') ~ '/' %}
                            {% endif %}
                        {% endfor %}
                        {% if catUrl == '' %}
                            {% set catUrl = '/' ~ cat.seoUrls|first.seoPathInfo|trim('/') ~ '/' %}
                        {% endif %}
                    {% endif %}
                    {# Fallback to navigation route if no SEO URL #}
                    {% if catUrl == '' %}
                        {% set catUrl = path('frontend.navigation.page', { navigationId: cat.id }) %}
                    {% endif %}
                    <a href="{{ catUrl }}" class="hover:text-amber-600 transition-colors" style="text-decoration: none;">{{ cat.translated.name|default(cat.name) }}</a>
                {% endif %}
            {% endfor %}
        {% endif %}
        <span class="mx-2 text-gray-400">/</span>
        <span class="text-gray-700 font-medium">{{ page.product.translated.name|slice(0, 50) }}{% if page.product.translated.name|length > 50 %}...{% endif %}</span>
    </nav>

    {# ========== RAVEN VARIANT OPTIONS - Image-based thumbnails for Lockhart Tactical products ========== #}
    {# Only Raven products have image-based variants with thumbnails #}
    {% set hasRavenVariants = page.product.translated.customFields.raven_has_variants|default(false) %}
    {% set ravenVariantOptions = page.product.translated.customFields.raven_variant_options|default([]) %}
    {# Parse JSON if string, otherwise use as-is #}
    {% set variantOptions = ravenVariantOptions is iterable ? ravenVariantOptions : [] %}

    {# Determine initial main image - use first variant if available, otherwise cover #}
    {% set initialMainImage = page.product.cover.media.url|default('') %}
    {% if hasRavenVariants and variantOptions|length > 0 and variantOptions[0].imageUrl is defined %}
        {% set initialMainImage = variantOptions[0].imageUrl %}
    {% endif %}

    {# Product Grid: Image Left, Info Right #}
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-12">

        {# LEFT: Product Image Gallery #}
        <div class="product-image-section">
            {# Main Image with Zoom #}
            <div class="product-main-image bg-white rounded-xl p-8 shadow-sm mb-4" id="image-zoom-container">
                {% if page.product.cover.media %}
                <img id="product-main-image"
                     src="{{ initialMainImage }}"
                     alt="{{ page.product.translated.name }}"
                     class="w-full h-auto object-contain zoom-image"
                     style="max-height: 500px;">
                {# Zoom Lens (hidden by default) #}
                <div id="zoom-lens" class="zoom-lens"></div>
                {# Zoomed Result Box #}
                <div id="zoom-result" class="zoom-result">
                    <img id="zoom-result-img" src="{{ initialMainImage }}" alt="Zoomed">
                </div>
                {% else %}
                <img src="{{ asset('bundles/raventheme/assets/placeholder.png') }}"
                     alt="{{ page.product.translated.name }}"
                     class="w-full h-auto object-contain">
                {% endif %}
            </div>

            {# Thumbnail Gallery Slider - Hide for Raven products with variant buttons (they use variant thumbnails instead) #}
            {% if page.product.media|length > 1 and not hasRavenVariants %}
            <div class="product-gallery-slider">
                <button type="button" class="gallery-nav gallery-nav-prev" id="gallery-prev" aria-label="Vorheriges Bild">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <polyline points="15 18 9 12 15 6"></polyline>
                    </svg>
                </button>
                <div class="gallery-thumbnails-wrapper" id="gallery-wrapper">
                    <div class="gallery-thumbnails" id="gallery-thumbnails">
                        {# Cover image first #}
                        {% if page.product.cover.media %}
                        <button type="button" class="gallery-thumb active" data-image-url="{{ page.product.cover.media.url }}" aria-label="Bild 1">
                            <img src="{{ page.product.cover.media.thumbnails|first.url|default(page.product.cover.media.url) }}" alt="Thumbnail 1">
                        </button>
                        {% endif %}
                        {# Other images #}
                        {% set thumbIndex = 2 %}
                        {% for media in page.product.media %}
                            {% if media.media.id != page.product.cover.media.id %}
                            <button type="button" class="gallery-thumb" data-image-url="{{ media.media.url }}" aria-label="Bild {{ thumbIndex }}">
                                <img src="{{ media.media.thumbnails|first.url|default(media.media.url) }}" alt="Thumbnail {{ thumbIndex }}">
                            </button>
                            {% set thumbIndex = thumbIndex + 1 %}
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>
                <button type="button" class="gallery-nav gallery-nav-next" id="gallery-next" aria-label="Nächstes Bild">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <polyline points="9 18 15 12 9 6"></polyline>
                    </svg>
                </button>
            </div>
            {% endif %}
        </div>

        {# RIGHT: Product Info #}
        <div class="product-info-section">
            {# Manufacturer Name #}
            <p class="cat-label text-sm text-gray-500 mb-3" style="font-family: 'Inter', sans-serif; text-transform: uppercase; letter-spacing: 0.05em;">
                {% if page.product.manufacturer.translated.name %}
                    {{ page.product.manufacturer.translated.name }}
                {% else %}
                    Produkt
                {% endif %}
            </p>

            {# Product Name - strip manufacturer name from title #}
            {% set productName = page.product.translated.name %}
            {% set manufacturerName = page.product.manufacturer.translated.name|default('') %}
            {% if manufacturerName and productName starts with manufacturerName %}
                {% set productName = productName|slice(manufacturerName|length)|trim %}
            {% endif %}
            <h1 class="prod-title text-gray-900 mb-6" style="font-family: 'Chakra Petch', sans-serif; font-weight: 700; font-size: 2.25rem; line-height: 1.2;">
                {{ productName }}
            </h1>

            {# Price - Swiss Format: CHF 3'150.00 (always with decimals) #}
            <div class="raven-product-price" style="font-family: 'Inter', sans-serif; color: #E53935; font-weight: 700; font-size: 28px; line-height: 1.2; font-variant-numeric: tabular-nums; margin-bottom: 2rem;">
                {% set detailPrice = page.product.calculatedPrice.unitPrice %}
                CHF {{ detailPrice|number_format(2, '.', "'") }}
                <span class="text-sm text-gray-500 font-normal ml-2">inkl. MwSt.</span>
            </div>

            {# ========== RAVEN VARIANT SELECTOR - Image thumbnails for Lockhart Tactical ========== #}
            {# Uses variantOptions defined at top of template (Raven products only) #}
            {% if hasRavenVariants and variantOptions|length > 0 %}
            <div class="mb-8">
                <p class="text-sm text-gray-500 mb-3" style="font-family: 'Inter', sans-serif; text-transform: uppercase; letter-spacing: 0.05em;">
                    Variante: <span id="selected-variant-name" class="font-semibold text-gray-800">{{ variantOptions[0].name|default('Standard') }}</span>
                </p>
                <div class="raven-variant-swatches" id="variant-swatches" data-product-id="{{ page.product.id }}">
                    {% for variantData in variantOptions %}
                        {% set variantName = variantData.name|default('Variante ' ~ loop.index) %}
                        {% set variantImageUrl = variantData.imageUrl|default('') %}
                        {% set variantThumbUrl = variantData.thumbUrl|default(variantImageUrl) %}

                        {% if variantImageUrl %}
                        <button type="button"
                                class="raven-variant-thumb {% if loop.first %}selected{% endif %}"
                                data-variant-name="{{ variantName }}"
                                data-image-url="{{ variantImageUrl }}"
                                title="{{ variantName }}">
                            <img src="{{ variantThumbUrl }}" alt="{{ variantName }}">
                        </button>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
            {% endif %}

            {# ========== SNIGEL COLOR SELECTOR - Dynamic from custom fields ========== #}
            {% set snigelHasColors = page.product.translated.customFields.snigel_has_color_variants|default(false) %}
            {% set snigelColorOptions = page.product.translated.customFields.snigel_color_options|default([]) %}
            {% set snigelColorLabel = page.product.translated.customFields.snigel_color_label|default('FARBE') %}
            {% set snigelColorCount = page.product.translated.customFields.snigel_color_count|default(0) %}

            {% if snigelHasColors and snigelColorOptions|length > 0 and not hasRavenVariants %}
            <div class="mb-6" id="snigel-color-container">
                <p class="text-sm text-gray-500 mb-3" style="font-family: 'Inter', sans-serif; text-transform: uppercase; letter-spacing: 0.05em;">
                    {% if snigelColorLabel == 'FARBE' or snigelColorLabel == 'Color' %}Farbe{% else %}{{ snigelColorLabel }}{% endif %}: <span id="selected-color-name" class="font-semibold text-gray-800">{{ snigelColorOptions[0].name|default('Standard') }}</span>
                </p>
                {# Only show selector buttons if 2+ colors, otherwise just show info text above #}
                {% if snigelColorOptions|length > 1 %}
                <div class="flex flex-wrap gap-3" id="snigel-color-swatches">
                    {% for colorData in snigelColorOptions %}
                        <button type="button"
                                class="color-tag {% if loop.first %}selected{% endif %}"
                                data-color-name="{{ colorData.name }}"
                                data-image-url="{{ colorData.imageUrl|default('') }}"
                                title="{{ colorData.name }}">
                            {{ colorData.name }}
                        </button>
                    {% endfor %}
                </div>
                {% endif %}
            </div>
            {% endif %}

            {# Size/Parts Variants - DYNAMIC from custom fields (rendered via JavaScript) #}
            {% set rawSnigelSizes = page.product.translated.customFields.snigel_size_options|default('') %}
            {% set hasSizeVariants = page.product.translated.customFields.snigel_has_sizes|default(false) %}
            {% set snigelVariants = page.product.translated.customFields.snigel_variants|default('') %}
            {% set snigelVariantType = page.product.translated.customFields.snigel_variant_type|default('GRÖSSE') %}

            {% if hasSizeVariants and rawSnigelSizes %}
            {# Determine variant label based on type #}
            {% set variantLabel = 'Grösse' %}
            {% if snigelVariantType == 'TEILE' or snigelVariantType == 'Parts' %}
                {% set variantLabel = 'Teile' %}
            {% elseif snigelVariantType == 'FARBE' or snigelVariantType == 'Color' %}
                {% set variantLabel = 'Farbe' %}
            {% endif %}

            <div class="mb-8" id="size-variant-container"
                 data-sizes="{{ rawSnigelSizes|e('html_attr') }}"
                 data-variants="{{ snigelVariants|e('html_attr') }}"
                 data-variant-type="{{ snigelVariantType|e('html_attr') }}">
                <p class="text-sm text-gray-500 mb-3" style="font-family: 'Inter', sans-serif; text-transform: uppercase; letter-spacing: 0.05em;">
                    {{ variantLabel }}: <span id="selected-size-name" class="font-semibold text-gray-800">Standard</span>
                </p>
                <div class="flex flex-wrap gap-3" id="size-swatches">
                    {# Size/Parts buttons will be rendered by JavaScript #}
                </div>
            </div>
            {% endif %}

            {# Add to Cart Section #}
            <form action="{{ path('frontend.checkout.line-item.add') }}"
                  method="post"
                  class="mb-10 mt-6"
                  data-add-to-cart="true">
                <input type="hidden" name="lineItems[{{ page.product.id }}][id]" value="{{ page.product.id }}">
                <input type="hidden" name="lineItems[{{ page.product.id }}][type]" value="product">
                <input type="hidden" name="lineItems[{{ page.product.id }}][referencedId]" value="{{ page.product.id }}">
                <input type="hidden" name="lineItems[{{ page.product.id }}][stackable]" value="1">
                <input type="hidden" name="lineItems[{{ page.product.id }}][removable]" value="1">

                {# Hidden inputs for selected variant - pre-populated with first option, updated by JavaScript #}
                {% set defaultVariant = '' %}
                {% if ravenVariantOptions|length > 0 %}
                    {% set defaultVariant = ravenVariantOptions[0].name|default('') %}
                {% elseif snigelColorOptions|length > 0 %}
                    {% set defaultVariant = snigelColorOptions[0].name|default('') %}
                {% endif %}
                <input type="hidden" name="selectedColor" id="selected-color-input" value="{{ defaultVariant }}">
                <input type="hidden" name="selectedSize" id="selected-size-input" value="">
                <input type="hidden" name="selectedSizePrice" id="selected-size-price-input" value="">
                <input type="hidden" name="variantenDisplay" id="varianten-display-input" value="{{ defaultVariant }}">

                {# Quantity and Add to Cart in Row #}
                <div class="flex items-center gap-4">
                    {# Quantity Selector - Connected Boxes #}
                    <div class="flex items-center" style="gap: 0;">
                        <button type="button"
                                id="qty-decrease"
                                class="quantity-btn"
                                style="width: 44px; height: 44px; border: 1px solid #D1D5DB; border-radius: 8px 0 0 8px; background: white; font-weight: 600; font-size: 18px; cursor: pointer; transition: all 0.2s; display: flex; align-items: center; justify-content: center;"
                                onclick="let qtyInput = document.getElementById('quantity'); if(qtyInput.value > 1) qtyInput.value = parseInt(qtyInput.value) - 1;">
                            −
                        </button>
                        <input type="number"
                               id="quantity"
                               name="lineItems[{{ page.product.id }}][quantity]"
                               value="1"
                               min="1"
                               max="{{ page.product.availableStock }}"
                               class="quantity-input"
                               style="width: 50px; height: 44px; border-top: 1px solid #D1D5DB; border-bottom: 1px solid #D1D5DB; border-left: none; border-right: none; border-radius: 0; text-align: center; font-weight: 600; font-size: 16px; font-family: 'Inter', sans-serif; line-height: 44px; padding: 0; -moz-appearance: textfield; -webkit-appearance: none; appearance: none;"
                               readonly>
                        <button type="button"
                                id="qty-increase"
                                class="quantity-btn"
                                style="width: 44px; height: 44px; border: 1px solid #D1D5DB; border-radius: 0 8px 8px 0; background: white; font-weight: 600; font-size: 18px; cursor: pointer; transition: all 0.2s; display: flex; align-items: center; justify-content: center;"
                                onclick="let qtyInput = document.getElementById('quantity'); if(qtyInput.value < {{ page.product.availableStock }}) qtyInput.value = parseInt(qtyInput.value) + 1;">
                            +
                        </button>
                    </div>

                    {# Add to Cart Button #}
                    <button type="submit"
                            class="add-to-cart-btn raven-btn-primary flex-1 py-3 rounded-lg text-gray-900 font-bold text-base flex items-center justify-center gap-2"
                            style="background: linear-gradient(to top, #F2B90D 12%, #F6CE55 88%); border: 1px solid #C59A0F; box-shadow: 0 2px 6px rgba(0,0,0,0.25); position: relative; overflow: hidden; transition: all 0.2s; height: 44px;">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 640" class="w-5 h-5" fill="currentColor">
                            <path d="M0 72C0 58.7 10.7 48 24 48L69.3 48C96.4 48 119.6 67.4 124.4 94L124.8 96L524.7 96C549.8 96 568.7 118.9 564 143.6L537.6 280.6C529.6 322 493.4 352 451.2 352L171.4 352L176.5 380.3C178.6 391.7 188.5 400 200.1 400L456 400C469.3 400 480 410.7 480 424C480 437.3 469.3 448 456 448L200.1 448C165.3 448 135.5 423.1 129.3 388.9L77.2 102.6C76.5 98.8 73.2 96 69.3 96L24 96C10.7 96 0 85.3 0 72zM162.6 304L451.2 304C470.4 304 486.9 290.4 490.5 271.6L514.9 144L133.5 144L162.6 304zM208 480C234.5 480 256 501.5 256 528C256 554.5 234.5 576 208 576C181.5 576 160 554.5 160 528C160 501.5 181.5 480 208 480zM432 480C458.5 480 480 501.5 480 528C480 554.5 458.5 576 432 576C405.5 576 384 554.5 384 528C384 501.5 405.5 480 432 480z"/>
                        </svg>
                        In den Warenkorb
                        <span class="btn-gloss" style="position: absolute; inset: 0; border-radius: 0.5rem; background: linear-gradient(180deg, rgba(255,255,255,0.55) 0%, rgba(255,255,255,0.25) 35%, rgba(255,255,255,0.00) 60%); pointer-events: none;"></span>
                    </button>
                </div>
            </form>

            {# Product Description with See More #}
            {% if page.product.translated.description %}
            <div class="border-t border-gray-200 pt-8 mt-4">
                <h2 class="prod-title text-xl text-gray-900 mb-3" style="font-family: 'Chakra Petch', sans-serif; font-weight: 700;">
                    Beschreibung
                </h2>
                <div class="description-wrapper" id="description-wrapper">
                    <div class="description-content text-gray-700 leading-relaxed" id="description-content" style="font-family: 'Inter', sans-serif;">
                        {{ page.product.translated.description|raw }}
                    </div>
                    <div class="description-fade" id="description-fade"></div>
                </div>
                <button type="button" class="see-more-btn" id="see-more-btn" style="display: none;">
                    <span id="see-more-text">Mehr anzeigen</span>
                    <svg id="see-more-icon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <polyline points="6 9 12 15 18 9"></polyline>
                    </svg>
                </button>
            </div>
            {% endif %}

            {# Manufacturer section removed per request #}

            {# Product Number #}
            {% if page.product.productNumber %}
            <div class="mt-4">
                <p class="text-sm text-gray-500" style="font-family: 'Inter', sans-serif;">
                    Artikelnummer: <span class="font-medium text-gray-700">{{ page.product.productNumber }}</span>
                </p>
            </div>
            {% endif %}

            {# Stock Display #}
            {% set stockCount = page.product.availableStock|default(page.product.stock|default(0)) %}
            {% set isCloseout = page.product.isCloseout|default(false) %}
            <div class="mt-3">
                <p class="text-sm text-gray-500" style="font-family: 'Inter', sans-serif;">
                    Lagerbestand:
                    {% if stockCount > 0 %}
                        <span class="font-medium text-gray-700">{{ stockCount }} Auf Lager</span>
                    {% elseif not isCloseout %}
                        {# Stock = 0 but can still order (backorder) #}
                        <span class="font-medium" style="color: #b45309; background-color: #fef3c7; padding: 2px 8px; border-radius: 4px;">Auf Nachbestellung verfügbar</span>
                    {% else %}
                        {# Stock = 0 and cannot order #}
                        <span class="font-medium" style="color: #dc2626; background-color: #fef2f2; padding: 2px 8px; border-radius: 4px;">Ausverkauft</span>
                    {% endif %}
                </p>
            </div>

            {# Weight and Dimensions - weight stored in kg, always display in grams #}
            {% if page.product.weight or (page.product.length and page.product.width and page.product.height) %}
            <div class="mt-3">
                {% if page.product.weight %}
                <p class="text-sm text-gray-500" style="font-family: 'Inter', sans-serif;">
                    Gewicht: <span class="font-medium text-gray-700">
                        {{ (page.product.weight * 1000)|number_format(0) }} g
                    </span>
                </p>
                {% endif %}
                {% if page.product.length and page.product.width and page.product.height %}
                <p class="text-sm text-gray-500 mt-1" style="font-family: 'Inter', sans-serif;">
                    Abmessungen: <span class="font-medium text-gray-700">{{ (page.product.length / 10)|number_format(1, '.', "'") }} x {{ (page.product.width / 10)|number_format(1, '.', "'") }} x {{ (page.product.height / 10)|number_format(1, '.', "'") }} cm</span>
                </p>
                {% endif %}
            </div>
            {% endif %}
        </div>
    </div>

    {# Reviews Section - Below main product grid #}
    <div class="product-reviews-section mt-12 bg-white rounded-xl p-6 shadow-sm">
        <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-bold text-gray-900" style="font-family: 'Chakra Petch', sans-serif;">
                Kundenbewertungen
            </h3>
            <button type="button" onclick="openReviewModal()" class="text-sm text-amber-600 hover:text-amber-700 font-medium flex items-center gap-1" style="background: none; border: none; cursor: pointer;">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                    <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                </svg>
                Bewertung schreiben
            </button>
        </div>

        {% set reviewCount = page.product.productReviews|length %}
        {% set avgRating = page.product.ratingAverage|default(0) %}

        {% if reviewCount > 0 %}
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            {# Left: Rating Summary #}
            <div>
                <div class="flex items-center gap-4 mb-4">
                    <div class="flex items-center gap-1" id="star-rating-display">
                        {% for i in 1..5 %}
                            {% if avgRating >= i %}
                                <svg class="star-icon filled" viewBox="0 0 24 24"><path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/></svg>
                            {% elseif avgRating >= (i - 0.5) %}
