                    const sizeValue = this.dataset.sizeValue;

                    if (sizeName && selectedSizeName) {
                        selectedSizeName.textContent = sizeName;
                    }

                    // *** DYNAMIC PRICE UPDATE ***
                    const variantPrice = priceMap[sizeName] || priceMap[sizeName.toLowerCase()] || priceMap[sizeName.toUpperCase()];
                    if (variantPrice && priceDisplay) {
                        const priceText = formatSwissPrice(variantPrice);
                        priceDisplay.innerHTML = priceText + '<span class="text-sm text-gray-500 font-normal ml-2">inkl. MwSt.</span>';
