            const allThumbnails = thumbnailsContainer ? thumbnailsContainer.querySelectorAll('.gallery-thumb') : [];

            // Function to filter thumbnails by color code and return first matching URL
            function filterThumbnailsByColor(colorCode) {
                if (!thumbnailsContainer || allThumbnails.length === 0) return null;

                let firstVisibleThumb = null;
                allThumbnails.forEach(thumb => {
                    const thumbUrl = thumb.dataset.imageUrl || '';
                    const thumbColorCode = extractColorCode(thumbUrl);

                    // Show thumbnail if it matches the color code
                    if (thumbColorCode === colorCode) {
                        thumb.style.display = '';
                        if (!firstVisibleThumb) firstVisibleThumb = thumb;
                    } else {
                        thumb.style.display = 'none';
                    }
                });

                // Update active state and return the first visible thumbnail URL
                if (firstVisibleThumb) {
                    firstVisibleThumb.classList.add('active');
                    allThumbnails.forEach(t => {
                        if (t !== firstVisibleThumb) t.classList.remove('active');
                    });
