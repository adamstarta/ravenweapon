        // Extract color code from Snigel image URL (e.g., A01, A09, AA09, B01, B09, etc.)
        function extractColorCode(url) {
            if (!url) return null;
            const filename = url.split('/').pop();

            // First try: AA followed by 2 digits (AA09, AA01, etc.) - double A pattern
            let match = filename.match(/AA(\d{2})/);
            if (match) return match[1];

            // Second try: Single A followed by 2 digits (A01, A09, etc.)
            match = filename.match(/[^A]A(\d{2})|^A(\d{2})/);
            if (match) return match[1] || match[2];

            // Third try: B followed immediately by 2 digits (B01, B09, B56, etc.)
            match = filename.match(/B(\d{2})/);
            if (match) return match[1];

            // Fourth try: -XX- pattern where XX is color code (like -09-)
            match = filename.match(/-(\d{2})-/);
            if (match && match[1] !== '00') return match[1];

            return null;
        }

        function initVariantSwatches() {
            const swatchContainer = document.getElementById('variant-swatches');
            const mainImage = document.getElementById('product-main-image');
            const zoomResultImg = document.getElementById('zoom-result-img');
            const selectedVariantName = document.getElementById('selected-variant-name');
            const thumbnailsContainer = document.getElementById('gallery-thumbnails');

