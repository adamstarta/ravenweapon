        // Format price Swiss style: CHF 2'977.35 (always with decimals)
        function formatSwissPrice(price) {
            const formatted = price.toFixed(2);
            const [whole, decimal] = formatted.split('.');
            const wholeFormatted = whole.replace(/\B(?=(\d{3})+(?!\d))/g, "'");
            return 'CHF ' + wholeFormatted + '.' + decimal;
        }

