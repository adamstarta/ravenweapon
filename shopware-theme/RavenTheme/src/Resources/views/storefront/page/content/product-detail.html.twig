    // ========== GALLERY SLIDER FUNCTIONALITY ==========
    (function() {
        function initGallerySlider() {
            const mainImage = document.getElementById('product-main-image');
            const zoomResultImg = document.getElementById('zoom-result-img');
            const thumbnailsContainer = document.getElementById('gallery-thumbnails');
            const wrapper = document.getElementById('gallery-wrapper');
            const prevBtn = document.getElementById('gallery-prev');
            const nextBtn = document.getElementById('gallery-next');

            if (!thumbnailsContainer || !mainImage) return;

            const thumbnails = thumbnailsContainer.querySelectorAll('.gallery-thumb');
            if (thumbnails.length === 0) return;

            let currentIndex = 0;
            const thumbWidth = 78; // 70px + 8px gap
            let visibleThumbs = 5;

            function updateVisibleThumbs() {
                if (wrapper) {
                    visibleThumbs = Math.floor(wrapper.offsetWidth / thumbWidth);
                    if (visibleThumbs < 1) visibleThumbs = 1;
                }
            }

            function updateSliderPosition() {
                const maxScroll = Math.max(0, thumbnails.length - visibleThumbs);
                let scrollIndex = Math.min(currentIndex, maxScroll);
                if (scrollIndex < 0) scrollIndex = 0;

                thumbnailsContainer.style.transform = `translateX(-${scrollIndex * thumbWidth}px)`;

                // Update nav buttons
                if (prevBtn) prevBtn.disabled = (scrollIndex === 0);
                if (nextBtn) nextBtn.disabled = (scrollIndex >= maxScroll);
            }

            function selectThumbnail(index) {
                // Update active state
                thumbnails.forEach((thumb, i) => {
                    thumb.classList.toggle('active', i === index);
                });

                // Update main image
                const imageUrl = thumbnails[index].dataset.imageUrl;
                if (imageUrl && mainImage) {
                    mainImage.src = imageUrl;
                    if (zoomResultImg) zoomResultImg.src = imageUrl;
                }

                currentIndex = index;

                // Auto-scroll to show active thumbnail
                const scrollStart = parseInt(thumbnailsContainer.style.transform.replace(/[^0-9-]/g, '')) || 0;
                const scrollIndex = Math.abs(scrollStart) / thumbWidth;

                if (index < scrollIndex) {
                    currentIndex = index;
                    updateSliderPosition();
                } else if (index >= scrollIndex + visibleThumbs) {
                    currentIndex = index - visibleThumbs + 1;
                    updateSliderPosition();
                }
            }

            // Click handlers for thumbnails
            thumbnails.forEach((thumb, index) => {
                thumb.addEventListener('click', () => selectThumbnail(index));
            });

            // Nav button handlers
            if (prevBtn) {
                prevBtn.addEventListener('click', () => {
                    if (currentIndex > 0) {
                        currentIndex--;
                        updateSliderPosition();
                    }
                });
            }

            if (nextBtn) {
                nextBtn.addEventListener('click', () => {
                    const maxScroll = Math.max(0, thumbnails.length - visibleThumbs);
                    if (currentIndex < maxScroll) {
                        currentIndex++;
                        updateSliderPosition();
                    }
                });
            }

            // Initialize
            updateVisibleThumbs();
            updateSliderPosition();

            // Update on resize
            window.addEventListener('resize', () => {
                updateVisibleThumbs();
                updateSliderPosition();
            });
        }

        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', initGallerySlider);
        } else {
            initGallerySlider();
        }
    })();

