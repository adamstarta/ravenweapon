{% sw_extends '@Storefront/storefront/page/account/payment/index.html.twig' %}

{% block page_account %}
<div class="raven-account-dashboard">
    <div class="account-container">
        {# Sidebar #}
        <aside class="account-sidebar">
            <div class="sidebar-header">
                <div class="user-avatar">
                    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                        <circle cx="12" cy="8" r="4"/>
                        <path d="M4 21v-1a4 4 0 0 1 4-4h8a4 4 0 0 1 4 4v1"/>
                    </svg>
                </div>
                <div class="user-info">
                    <p class="user-greeting">Willkommen zurück</p>
                    <h3 class="user-name">{{ context.customer.firstName }} {{ context.customer.lastName }}</h3>
                </div>
            </div>

            <nav class="sidebar-nav">
                <a href="{{ path('frontend.account.home.page') }}" class="nav-item">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <rect x="3" y="3" width="7" height="7"></rect>
                        <rect x="14" y="3" width="7" height="7"></rect>
                        <rect x="14" y="14" width="7" height="7"></rect>
                        <rect x="3" y="14" width="7" height="7"></rect>
                    </svg>
                    Übersicht
                </a>

                <a href="{{ path('frontend.account.profile.page') }}" class="nav-item">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                        <circle cx="12" cy="7" r="4"></circle>
                    </svg>
                    Mein Profil
                </a>

                <a href="{{ path('frontend.account.address.page') }}" class="nav-item">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                        <circle cx="12" cy="10" r="3"></circle>
                    </svg>
                    Adressen
                </a>

                <a href="{{ path('frontend.account.order.page') }}" class="nav-item">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"></path>
                        <line x1="3" y1="6" x2="21" y2="6"></line>
                        <path d="M16 10a4 4 0 0 1-8 0"></path>
                    </svg>
                    Bestellungen
                </a>
            </nav>

            <div class="sidebar-footer">
                <a href="{{ path('frontend.account.logout.page') }}" class="logout-btn">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
                        <polyline points="16 17 21 12 16 7"></polyline>
                        <line x1="21" y1="12" x2="9" y2="12"></line>
                    </svg>
                    Abmelden
                </a>
            </div>
        </aside>

        {# Main Content #}
        <main class="account-main">
            <div class="page-header">
                <h1 class="page-title">Zahlungsarten</h1>
                <p class="page-subtitle">Wählen Sie Ihre bevorzugte Zahlungsmethode</p>
            </div>

            {# Current Payment Method #}
            <div class="current-payment-section">
                <div class="section-card">
                    <div class="section-card-header">
                        <div class="section-icon">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <polyline points="20 6 9 17 4 12"></polyline>
                            </svg>
                        </div>
                        <h2 class="section-card-title">Aktuelle Zahlungsart</h2>
                    </div>

                    {% if context.customer.defaultPaymentMethod %}
                    <div class="current-method">
                        <div class="method-icon">
                            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <rect x="1" y="4" width="22" height="16" rx="2" ry="2"></rect>
                                <line x1="1" y1="10" x2="23" y2="10"></line>
                            </svg>
                        </div>
                        <div class="method-details">
                            <h3 class="method-name">{{ context.customer.defaultPaymentMethod.translated.name }}</h3>
                            <p class="method-description">{{ context.customer.defaultPaymentMethod.translated.description|striptags }}</p>
                        </div>
                        <span class="active-badge">Aktiv</span>
                    </div>
                    {% else %}
                    <div class="no-method">
                        <p>Keine Zahlungsart ausgewählt</p>
                    </div>
                    {% endif %}
                </div>
            </div>

            {# Available Payment Methods #}
            <div class="payment-methods-section">
                <div class="section-card">
                    <div class="section-card-header">
                        <div class="section-icon">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <rect x="1" y="4" width="22" height="16" rx="2" ry="2"></rect>
                                <line x1="1" y1="10" x2="23" y2="10"></line>
                            </svg>
                        </div>
                        <h2 class="section-card-title">Verfügbare Zahlungsarten</h2>
                    </div>

                    <form action="{{ path('frontend.account.payment.save') }}" method="post" class="payment-form" data-form-csrf-handler="true">
                        <div class="payment-methods-list">
                            {% for paymentMethod in page.paymentMethods %}
                            <label class="payment-method-option{% if context.customer.defaultPaymentMethodId == paymentMethod.id %} selected{% endif %}">
                                <input type="radio"
                                       name="paymentMethodId"
                                       value="{{ paymentMethod.id }}"
                                       {% if context.customer.defaultPaymentMethodId == paymentMethod.id %} checked{% endif %}>
                                <div class="method-radio"></div>
                                <div class="method-content">
                                    <div class="method-header">
                                        <span class="method-name">{{ paymentMethod.translated.name }}</span>
                                        {% if context.customer.defaultPaymentMethodId == paymentMethod.id %}
                                        <span class="current-badge">Aktuell</span>
                                        {% endif %}
                                    </div>
                                    {% if paymentMethod.translated.description %}
                                    <p class="method-desc">{{ paymentMethod.translated.description|striptags }}</p>
                                    {% endif %}
                                </div>
                            </label>
                            {% else %}
                            <div class="no-methods">
                                <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
                                    <rect x="1" y="4" width="22" height="16" rx="2" ry="2"></rect>
                                    <line x1="1" y1="10" x2="23" y2="10"></line>
                                </svg>
                                <p>Keine Zahlungsarten verfügbar</p>
                            </div>
                            {% endfor %}
                        </div>

                        {% if page.paymentMethods|length > 0 %}
                        <div class="form-actions">
                            <button type="submit" class="btn-primary">
                                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M19 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11l5 5v11a2 2 0 0 1-2 2z"></path>
                                    <polyline points="17 21 17 13 7 13 7 21"></polyline>
                                    <polyline points="7 3 7 8 15 8"></polyline>
                                </svg>
                                Zahlungsart speichern
                            </button>
                        </div>
                        {% endif %}
                    </form>
                </div>
            </div>
        </main>
    </div>
</div>

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Chakra+Petch:wght@400;500;600;700&family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

<style>
/* ============================================
   RAVEN ACCOUNT - PAYMENT PAGE
   ============================================ */

:root {
    --raven-gold: #D4A847;
    --raven-gold-light: #E8C76B;
    --raven-gold-dark: #B8922E;
    --raven-charcoal: #1A1A1A;
    --raven-gray-700: #374151;
    --raven-gray-500: #6b7280;
    --raven-gray-400: #9ca3af;
    --raven-gray-300: #d1d5db;
    --raven-gray-100: #f3f4f6;
    --raven-gray-50: #f9fafb;
    --raven-cream: #FDFCF9;
    --raven-white: #ffffff;
}

.raven-account-dashboard {
    min-height: calc(100vh - 200px);
    background: linear-gradient(180deg, var(--raven-cream) 0%, #F5F3EE 100%);
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
    padding: 2rem 1rem;
}

@media (min-width: 768px) {
    .raven-account-dashboard {
        padding: 3rem 2rem;
    }
}

.account-container {
    max-width: 1400px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
}

@media (min-width: 1024px) {
    .account-container {
        grid-template-columns: 280px 1fr;
        gap: 3rem;
    }
}

/* ============ SIDEBAR ============ */
.account-sidebar {
    background: var(--raven-white);
    border-radius: 20px;
    padding: 1.5rem;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
    height: fit-content;
    position: sticky;
    top: 2rem;
}

.sidebar-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--raven-gray-100);
    margin-bottom: 1.5rem;
}

.user-avatar {
    width: 56px;
    height: 56px;
    background: linear-gradient(135deg, var(--raven-gold) 0%, var(--raven-gold-light) 100%);
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--raven-charcoal);
}

.user-info { flex: 1; }

.user-greeting {
    font-size: 0.75rem;
    color: var(--raven-gray-500);
    margin: 0 0 0.25rem 0;
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

.user-name {
    font-family: 'Chakra Petch', sans-serif;
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--raven-charcoal);
    margin: 0;
}

.sidebar-nav {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
}

.nav-item {
    display: flex;
    align-items: center;
    gap: 0.875rem;
    padding: 0.875rem 1rem;
    border-radius: 12px;
    color: var(--raven-gray-700);
    text-decoration: none;
    font-size: 0.9375rem;
    font-weight: 500;
    transition: all 0.2s ease;
}

.nav-item:hover {
    background: var(--raven-gray-50);
    color: var(--raven-charcoal);
}

.nav-item.active {
    background: linear-gradient(135deg, rgba(212, 168, 71, 0.15) 0%, rgba(232, 199, 107, 0.1) 100%);
    color: var(--raven-gold-dark);
}

.nav-item.active svg { color: var(--raven-gold); }

.nav-item svg {
    flex-shrink: 0;
    color: var(--raven-gray-400);
    transition: color 0.2s ease;
}

.nav-item:hover svg { color: var(--raven-gray-700); }

.sidebar-footer {
    margin-top: 1.5rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--raven-gray-100);
}

.logout-btn {
    display: flex;
    align-items: center;
    gap: 0.875rem;
    padding: 0.875rem 1rem;
    border-radius: 12px;
    color: var(--raven-gray-500);
    text-decoration: none;
    font-size: 0.9375rem;
    font-weight: 500;
    transition: all 0.2s ease;
    width: 100%;
}

.logout-btn:hover {
    background: #FEF2F2;
    color: #DC2626;
}

.logout-btn:hover svg { color: #DC2626; }

/* ============ MAIN CONTENT ============ */
.account-main { min-width: 0; }

.page-header { margin-bottom: 2rem; }

.page-title {
    font-family: 'Chakra Petch', sans-serif;
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--raven-charcoal);
    margin: 0 0 0.5rem 0;
    text-transform: uppercase;
    letter-spacing: 0.02em;
}

.page-subtitle {
    font-size: 1rem;
    color: var(--raven-gray-500);
    margin: 0;
}

/* ============ SECTIONS ============ */
.current-payment-section {
    margin-bottom: 1.5rem;
}

.section-card {
    background: var(--raven-white);
    border-radius: 20px;
    padding: 1.5rem;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
}

.section-card-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1.5rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid var(--raven-gray-100);
}

.section-icon {
    width: 48px;
    height: 48px;
    background: linear-gradient(135deg, rgba(212, 168, 71, 0.15) 0%, rgba(232, 199, 107, 0.1) 100%);
    border-radius: 14px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.section-icon svg {
    color: var(--raven-gold);
}

.section-card-title {
    font-family: 'Chakra Petch', sans-serif;
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--raven-charcoal);
    margin: 0;
    text-transform: uppercase;
    letter-spacing: 0.02em;
}

/* ============ CURRENT METHOD ============ */
.current-method {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.25rem;
    background: linear-gradient(135deg, rgba(212, 168, 71, 0.08) 0%, rgba(232, 199, 107, 0.05) 100%);
    border: 2px solid rgba(212, 168, 71, 0.3);
    border-radius: 16px;
}

.method-icon {
    width: 56px;
    height: 56px;
    background: var(--raven-white);
    border-radius: 14px;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
}

.method-icon svg {
    color: var(--raven-gold);
}

.method-details {
    flex: 1;
}

.method-name {
    font-family: 'Chakra Petch', sans-serif;
    font-size: 1rem;
    font-weight: 600;
    color: var(--raven-charcoal);
    margin: 0 0 0.25rem 0;
}

.method-description {
    font-size: 0.875rem;
    color: var(--raven-gray-500);
    margin: 0;
    line-height: 1.5;
}

.active-badge {
    background: linear-gradient(135deg, #10B981 0%, #34D399 100%);
    color: white;
    font-size: 0.6875rem;
    font-weight: 700;
    padding: 0.375rem 0.75rem;
    border-radius: 20px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

.no-method {
    text-align: center;
    padding: 2rem;
    color: var(--raven-gray-400);
}

/* ============ PAYMENT METHODS LIST ============ */
.payment-methods-list {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
}

.payment-method-option {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    padding: 1.25rem;
    background: var(--raven-gray-50);
    border: 2px solid transparent;
    border-radius: 16px;
    cursor: pointer;
    transition: all 0.2s ease;
}

.payment-method-option:hover {
    background: var(--raven-white);
    border-color: var(--raven-gray-200);
}

.payment-method-option.selected {
    background: linear-gradient(135deg, rgba(212, 168, 71, 0.08) 0%, rgba(232, 199, 107, 0.05) 100%);
    border-color: var(--raven-gold);
}

.payment-method-option input[type="radio"] {
    display: none;
}

.method-radio {
    width: 24px;
    height: 24px;
    border: 2px solid var(--raven-gray-300);
    border-radius: 50%;
    flex-shrink: 0;
    position: relative;
    transition: all 0.2s ease;
    margin-top: 2px;
}

.payment-method-option:hover .method-radio {
    border-color: var(--raven-gold);
}

.payment-method-option input[type="radio"]:checked + .method-radio {
    border-color: var(--raven-gold);
    background: var(--raven-gold);
}

.payment-method-option input[type="radio"]:checked + .method-radio::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 8px;
    height: 8px;
    background: var(--raven-white);
    border-radius: 50%;
}

.method-content {
    flex: 1;
}

.method-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.25rem;
}

.method-content .method-name {
    font-family: 'Inter', sans-serif;
    font-size: 0.9375rem;
    font-weight: 600;
    color: var(--raven-charcoal);
    margin: 0;
}

.current-badge {
    background: linear-gradient(135deg, var(--raven-gold) 0%, var(--raven-gold-light) 100%);
    color: var(--raven-charcoal);
    font-size: 0.625rem;
    font-weight: 700;
    padding: 0.25rem 0.5rem;
    border-radius: 6px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

.method-desc {
    font-size: 0.8125rem;
    color: var(--raven-gray-500);
    margin: 0;
    line-height: 1.5;
}

.no-methods {
    text-align: center;
    padding: 3rem 1rem;
    color: var(--raven-gray-400);
}

.no-methods svg {
    margin-bottom: 1rem;
    opacity: 0.5;
}

.no-methods p {
    font-size: 0.9375rem;
    margin: 0;
}

/* ============ FORM ACTIONS ============ */
.form-actions {
    margin-top: 1.5rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--raven-gray-100);
}

.btn-primary {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.875rem 1.5rem;
    background: linear-gradient(135deg, var(--raven-gold) 0%, var(--raven-gold-light) 50%, var(--raven-gold) 100%);
    background-size: 200% 100%;
    border: 2px solid var(--raven-gold-dark);
    border-radius: 12px;
    color: var(--raven-charcoal);
    font-size: 0.9375rem;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.3s ease;
}

.btn-primary:hover {
    background-position: 100% 0;
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(212, 168, 71, 0.4);
}

/* Hide default elements */
.account-content,
.account-sidebar-menu,
.account-welcome,
.account-payment {
    display: none !important;
}

/* Full page background */
.raven-account-page-bg {
    background: linear-gradient(180deg, #FDFCF9 0%, #F5F3EE 100%) !important;
    min-height: 100vh;
}
</style>

<script>
document.body.classList.add('raven-account-page-bg');

// Handle radio selection visual feedback
document.querySelectorAll('.payment-method-option input[type="radio"]').forEach(radio => {
    radio.addEventListener('change', function() {
        document.querySelectorAll('.payment-method-option').forEach(option => {
            option.classList.remove('selected');
        });
        if (this.checked) {
            this.closest('.payment-method-option').classList.add('selected');
        }
    });
});
</script>
{% endblock page_account %}
