{% sw_extends '@Storefront/storefront/page/account/profile/index.html.twig' %}

{% block page_account %}
<div class="raven-account-dashboard">
    <div class="account-container">
        {# Sidebar #}
        <aside class="account-sidebar">
            <div class="sidebar-header">
                <div class="user-avatar">
                    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                        <circle cx="12" cy="8" r="4"/>
                        <path d="M4 21v-1a4 4 0 0 1 4-4h8a4 4 0 0 1 4 4v1"/>
                    </svg>
                </div>
                <div class="user-info">
                    <p class="user-greeting">Willkommen zurück</p>
                    <h3 class="user-name">{{ context.customer.firstName }} {{ context.customer.lastName }}</h3>
                </div>
            </div>

            <nav class="sidebar-nav">
                <a href="{{ path('frontend.account.home.page') }}" class="nav-item">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <rect x="3" y="3" width="7" height="7"></rect>
                        <rect x="14" y="3" width="7" height="7"></rect>
                        <rect x="14" y="14" width="7" height="7"></rect>
                        <rect x="3" y="14" width="7" height="7"></rect>
                    </svg>
                    Übersicht
                </a>

                <a href="{{ path('frontend.account.profile.page') }}" class="nav-item active">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                        <circle cx="12" cy="7" r="4"></circle>
                    </svg>
                    Mein Profil
                </a>

                <a href="{{ path('frontend.account.address.page') }}" class="nav-item">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                        <circle cx="12" cy="10" r="3"></circle>
                    </svg>
                    Adressen
                </a>

                <a href="{{ path('frontend.account.order.page') }}" class="nav-item">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"></path>
                        <line x1="3" y1="6" x2="21" y2="6"></line>
                        <path d="M16 10a4 4 0 0 1-8 0"></path>
                    </svg>
                    Bestellungen
                </a>
            </nav>

            <div class="sidebar-footer">
                <a href="{{ path('frontend.account.logout.page') }}" class="logout-btn">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
                        <polyline points="16 17 21 12 16 7"></polyline>
                        <line x1="21" y1="12" x2="9" y2="12"></line>
                    </svg>
                    Abmelden
                </a>
            </div>
        </aside>

        {# Main Content #}
        <main class="account-main">
            <div class="page-header">
                <h1 class="page-title">Mein Profil</h1>
                <p class="page-subtitle">Verwalten Sie Ihre persönlichen Daten</p>
            </div>

            {# Personal Data Card #}
            <div class="profile-section">
                <div class="section-card">
                    <div class="section-card-header">
                        <div class="section-icon">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                                <circle cx="12" cy="7" r="4"></circle>
                            </svg>
                        </div>
                        <h2 class="section-card-title">Persönliche Daten</h2>
                    </div>

                    <form action="{{ path('frontend.account.profile.save') }}" method="post" class="profile-form" data-form-csrf-handler="true">
                        <div class="form-row">
                            <div class="form-group">
                                <label for="salutationId">Anrede</label>
                                <select name="salutationId" id="salutationId" class="form-select">
                                    {% for salutation in page.salutations %}
                                        <option value="{{ salutation.id }}"{% if context.customer.salutationId == salutation.id %} selected{% endif %}>
                                            {{ salutation.translated.displayName }}
                                        </option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>

                        <div class="form-row two-cols">
                            <div class="form-group">
                                <label for="firstName">Vorname *</label>
                                <input type="text" name="firstName" id="firstName" value="{{ context.customer.firstName }}" required class="form-input">
                            </div>
                            <div class="form-group">
                                <label for="lastName">Nachname *</label>
                                <input type="text" name="lastName" id="lastName" value="{{ context.customer.lastName }}" required class="form-input">
                            </div>
                        </div>

                        <p class="form-hint">* Pflichtfelder</p>

                        <button type="submit" class="btn-primary">
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M19 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11l5 5v11a2 2 0 0 1-2 2z"></path>
                                <polyline points="17 21 17 13 7 13 7 21"></polyline>
                                <polyline points="7 3 7 8 15 8"></polyline>
                            </svg>
                            Änderungen speichern
                        </button>
                    </form>
                </div>
            </div>

            {# Login Data Card #}
            <div class="profile-section">
                <div class="section-card">
                    <div class="section-card-header">
                        <div class="section-icon">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                                <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                            </svg>
                        </div>
                        <h2 class="section-card-title">Anmeldedaten</h2>
                    </div>

                    <div class="login-data">
                        <div class="data-item">
                            <span class="data-label">E-Mail-Adresse</span>
                            <span class="data-value">{{ context.customer.email }}</span>
                        </div>

                        <p class="login-hint">Um Ihre E-Mail-Adresse oder Ihr Passwort zu ändern, nutzen Sie bitte die entsprechenden Formulare unten.</p>
                    </div>

                    {# Email Change Form #}
                    <div class="change-section">
                        <h3 class="change-section-title">E-Mail-Adresse ändern</h3>
                        <form action="{{ path('frontend.account.profile.email.save') }}" method="post" class="change-form" data-form-csrf-handler="true">
                            <div class="form-row">
                                <div class="form-group">
                                    <label for="email">Neue E-Mail-Adresse *</label>
                                    <input type="email" name="email[email]" id="email" required class="form-input" placeholder="neue@email.de">
                                </div>
                                <div class="form-group">
                                    <label for="emailConfirmation">E-Mail bestätigen *</label>
                                    <input type="email" name="email[emailConfirmation]" id="emailConfirmation" required class="form-input" placeholder="neue@email.de">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="emailPassword">Aktuelles Passwort *</label>
                                <div class="password-wrapper">
                                    <input type="password" name="email[password]" id="emailPassword" required class="form-input">
                                    <button type="button" class="password-toggle" onclick="togglePassword('emailPassword', this)" aria-label="Passwort anzeigen">
                                        <svg class="eye-open" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path><circle cx="12" cy="12" r="3"></circle></svg>
                                        <svg class="eye-closed" style="display:none;" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19m-6.72-1.07a3 3 0 1 1-4.24-4.24"></path><line x1="1" y1="1" x2="23" y2="23"></line></svg>
                                    </button>
                                </div>
                            </div>
                            <button type="submit" class="btn-secondary">
                                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                                    <polyline points="22,6 12,13 2,6"></polyline>
                                </svg>
                                E-Mail ändern
                            </button>
                        </form>
                    </div>

                    {# Password Change Form #}
                    <div class="change-section">
                        <h3 class="change-section-title">Passwort ändern</h3>
                        <form action="{{ path('frontend.account.profile.password.save') }}" method="post" class="change-form" data-form-csrf-handler="true">
                            <div class="form-group">
                                <label for="currentPassword">Aktuelles Passwort *</label>
                                <div class="password-wrapper">
                                    <input type="password" name="password[password]" id="currentPassword" required class="form-input">
                                    <button type="button" class="password-toggle" onclick="togglePassword('currentPassword', this)" aria-label="Passwort anzeigen">
                                        <svg class="eye-open" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path><circle cx="12" cy="12" r="3"></circle></svg>
                                        <svg class="eye-closed" style="display:none;" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19m-6.72-1.07a3 3 0 1 1-4.24-4.24"></path><line x1="1" y1="1" x2="23" y2="23"></line></svg>
                                    </button>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group">
                                    <label for="newPassword">Neues Passwort *</label>
                                    <div class="password-wrapper">
                                        <input type="password" name="password[newPassword]" id="newPassword" required class="form-input">
                                        <button type="button" class="password-toggle" onclick="togglePassword('newPassword', this)" aria-label="Passwort anzeigen">
                                            <svg class="eye-open" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path><circle cx="12" cy="12" r="3"></circle></svg>
                                            <svg class="eye-closed" style="display:none;" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19m-6.72-1.07a3 3 0 1 1-4.24-4.24"></path><line x1="1" y1="1" x2="23" y2="23"></line></svg>
                                        </button>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="newPasswordConfirm">Passwort bestätigen *</label>
                                    <div class="password-wrapper">
                                        <input type="password" name="password[newPasswordConfirm]" id="newPasswordConfirm" required class="form-input">
                                        <button type="button" class="password-toggle" onclick="togglePassword('newPasswordConfirm', this)" aria-label="Passwort anzeigen">
                                            <svg class="eye-open" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path><circle cx="12" cy="12" r="3"></circle></svg>
                                            <svg class="eye-closed" style="display:none;" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19m-6.72-1.07a3 3 0 1 1-4.24-4.24"></path><line x1="1" y1="1" x2="23" y2="23"></line></svg>
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn-secondary">
                                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                                    <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                                </svg>
                                Passwort ändern
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Chakra+Petch:wght@400;500;600;700&family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

<style>
{% include '@RavenTheme/storefront/page/account/_account-styles.html.twig' ignore missing %}

/* ============ PROFILE PAGE SPECIFIC ============ */
.profile-section {
    margin-bottom: 1.5rem;
}

.section-card {
    background: var(--raven-white, #ffffff);
    border-radius: 20px;
    padding: 1.5rem;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
}

.section-card-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1.5rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid #f3f4f6;
}

.section-icon {
    width: 48px;
    height: 48px;
    background: linear-gradient(135deg, rgba(212, 168, 71, 0.15) 0%, rgba(232, 199, 107, 0.1) 100%);
    border-radius: 14px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.section-icon svg {
    color: #D4A847;
}

.section-card-title {
    font-family: 'Chakra Petch', sans-serif;
    font-size: 1.125rem;
    font-weight: 600;
    color: #1A1A1A;
    margin: 0;
    text-transform: uppercase;
    letter-spacing: 0.02em;
}

.profile-form .form-row {
    margin-bottom: 1.25rem;
}

.profile-form .form-row.two-cols {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
}

@media (max-width: 640px) {
    .profile-form .form-row.two-cols {
        grid-template-columns: 1fr;
    }
}

.profile-form .form-group label {
    display: block;
    font-weight: 600;
    color: #1A1A1A;
    font-size: 0.8125rem;
    margin-bottom: 0.5rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

.profile-form .form-input,
.profile-form .form-select {
    width: 100%;
    padding: 0.875rem 1rem;
    font-size: 1rem;
    border: 2px solid #d1d5db;
    border-radius: 12px;
    background: #ffffff;
    color: #1A1A1A;
    transition: all 0.25s ease;
    font-family: inherit;
    box-sizing: border-box;
}

.profile-form .form-input:focus,
.profile-form .form-select:focus {
    outline: none;
    border-color: #D4A847;
    box-shadow: 0 0 0 4px rgba(212, 168, 71, 0.15);
}

.form-hint {
    font-size: 0.8125rem;
    color: #6b7280;
    margin: 0 0 1.5rem 0;
}

.btn-primary {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.875rem 1.5rem;
    background: linear-gradient(135deg, #D4A847 0%, #E8C76B 50%, #D4A847 100%);
    background-size: 200% 100%;
    border: 2px solid #B8922E;
    border-radius: 12px;
    color: #1A1A1A;
    font-size: 0.9375rem;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.3s ease;
}

.btn-primary:hover {
    background-position: 100% 0;
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(212, 168, 71, 0.4);
}

.login-data {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
}

.data-item {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
}

.data-label {
    font-size: 0.75rem;
    font-weight: 600;
    color: #6b7280;
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

.data-value {
    font-size: 1rem;
    color: #1A1A1A;
    font-weight: 500;
}

.login-actions {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
}

.btn-secondary {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.25rem;
    background: transparent;
    border: 2px solid #d1d5db;
    border-radius: 12px;
    color: #374151;
    font-size: 0.875rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.2s ease;
}

.btn-secondary:hover {
    border-color: #D4A847;
    color: #B8922E;
    background: rgba(212, 168, 71, 0.05);
}

.login-hint {
    font-size: 0.875rem;
    color: #6b7280;
    margin: 0;
}

/* ============ CHANGE SECTIONS ============ */
.change-section {
    margin-top: 1.5rem;
    padding-top: 1.5rem;
    border-top: 1px solid #f3f4f6;
}

.change-section-title {
    font-family: 'Chakra Petch', sans-serif;
    font-size: 0.875rem;
    font-weight: 600;
    color: #1A1A1A;
    margin: 0 0 1rem 0;
    text-transform: uppercase;
    letter-spacing: 0.02em;
}

.change-form .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
    margin-bottom: 1rem;
}

@media (max-width: 640px) {
    .change-form .form-row {
        grid-template-columns: 1fr;
    }
}

.change-form .form-group {
    margin-bottom: 1rem;
}

.change-form .form-group label {
    display: block;
    font-weight: 600;
    color: #1A1A1A;
    font-size: 0.75rem;
    margin-bottom: 0.5rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

.change-form .form-input {
    width: 100%;
    padding: 0.75rem 1rem;
    font-size: 0.9375rem;
    border: 2px solid #d1d5db;
    border-radius: 10px;
    background: #ffffff;
    color: #1A1A1A;
    transition: all 0.25s ease;
    font-family: inherit;
    box-sizing: border-box;
}

.change-form .form-input:focus {
    outline: none;
    border-color: #D4A847;
    box-shadow: 0 0 0 4px rgba(212, 168, 71, 0.15);
}

.change-form .btn-secondary {
    cursor: pointer;
}

/* Password toggle visibility */
.password-wrapper {
    position: relative;
    display: flex;
    align-items: center;
}

.password-wrapper .form-input {
    padding-right: 3rem !important;
}

.password-toggle {
    position: absolute;
    right: 1rem;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    padding: 0;
    cursor: pointer;
    color: #9ca3af;
    transition: color 0.2s ease;
    display: flex;
    align-items: center;
    justify-content: center;
}

.password-toggle:hover {
    color: #D4A847;
}

.password-toggle svg {
    width: 20px;
    height: 20px;
}

/* ============ ACCOUNT DASHBOARD BASE STYLES ============ */
:root {
    --raven-gold: #D4A847;
    --raven-gold-light: #E8C76B;
    --raven-gold-dark: #B8922E;
    --raven-charcoal: #1A1A1A;
    --raven-gray-700: #374151;
    --raven-gray-500: #6b7280;
    --raven-gray-400: #9ca3af;
    --raven-gray-300: #d1d5db;
    --raven-gray-100: #f3f4f6;
    --raven-gray-50: #f9fafb;
    --raven-cream: #FDFCF9;
    --raven-white: #ffffff;
}

.raven-account-dashboard {
    min-height: calc(100vh - 200px);
    background: linear-gradient(180deg, var(--raven-cream) 0%, #F5F3EE 100%);
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
    padding: 2rem 1rem;
}

@media (min-width: 768px) {
    .raven-account-dashboard {
        padding: 3rem 2rem;
    }
}

.account-container {
    max-width: 1400px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
}

@media (min-width: 1024px) {
    .account-container {
