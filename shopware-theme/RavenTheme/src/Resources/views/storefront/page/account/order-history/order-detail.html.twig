{% sw_extends '@Storefront/storefront/page/account/order-history/order-detail.html.twig' %}

{% block page_account_main_content %}
<div class="raven-account-dashboard">
    <div class="account-container">
        {# Sidebar #}
        <aside class="account-sidebar">
            <div class="sidebar-header">
                <div class="user-avatar">
                    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                        <circle cx="12" cy="8" r="4"/>
                        <path d="M4 21v-1a4 4 0 0 1 4-4h8a4 4 0 0 1 4 4v1"/>
                    </svg>
                </div>
                <div class="user-info">
                    <p class="user-greeting">Willkommen zurück</p>
                    <h3 class="user-name">{{ context.customer.firstName }} {{ context.customer.lastName }}</h3>
                </div>
            </div>

            <nav class="sidebar-nav">
                <a href="{{ path('frontend.account.home.page') }}" class="nav-item">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <rect x="3" y="3" width="7" height="7"></rect>
                        <rect x="14" y="3" width="7" height="7"></rect>
                        <rect x="14" y="14" width="7" height="7"></rect>
                        <rect x="3" y="14" width="7" height="7"></rect>
                    </svg>
                    Übersicht
                </a>

                <a href="{{ path('frontend.account.profile.page') }}" class="nav-item">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                        <circle cx="12" cy="7" r="4"></circle>
                    </svg>
                    Mein Profil
                </a>

                <a href="{{ path('frontend.account.address.page') }}" class="nav-item">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                        <circle cx="12" cy="10" r="3"></circle>
                    </svg>
                    Adressen
                </a>

                <a href="{{ path('frontend.account.order.page') }}" class="nav-item active">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"></path>
                        <line x1="3" y1="6" x2="21" y2="6"></line>
                        <path d="M16 10a4 4 0 0 1-8 0"></path>
                    </svg>
                    Bestellungen
                </a>
            </nav>

            <div class="sidebar-footer">
                <a href="{{ path('frontend.account.logout.page') }}" class="logout-btn">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
                        <polyline points="16 17 21 12 16 7"></polyline>
                        <line x1="21" y1="12" x2="9" y2="12"></line>
                    </svg>
                    Abmelden
                </a>
            </div>
        </aside>

        {# Main Content #}
        <main class="account-main">
            {% set order = page.order %}

            <div class="page-header">
                <a href="{{ path('frontend.account.order.page') }}" class="back-link">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <polyline points="15 18 9 12 15 6"></polyline>
                    </svg>
                    Zurück zu Bestellungen
                </a>
                <h1 class="page-title">Bestellung #{{ order.orderNumber }}</h1>
                <p class="page-subtitle">Bestellt am {{ order.orderDateTime|format_datetime('medium', 'short', locale='de') }}</p>
            </div>

            {# Order Status #}
            <div class="order-detail-section">
                <div class="section-card">
                    <div class="order-status-header">
                        <div class="status-info">
                            <span class="status-label">Bestellstatus</span>
                            {% set stateColor = 'default' %}
                            {% set stateName = order.stateMachineState.translated.name|default('Unbekannt') %}
                            {% set technicalName = order.stateMachineState.technicalName|default('') %}

                            {% if technicalName == 'completed' or technicalName == 'done' %}
                                {% set stateColor = 'success' %}
                            {% elseif technicalName == 'cancelled' or technicalName == 'failed' %}
                                {% set stateColor = 'error' %}
                            {% elseif technicalName == 'in_progress' or technicalName == 'processing' %}
                                {% set stateColor = 'warning' %}
                            {% elseif technicalName == 'open' or technicalName == 'pending' %}
                                {% set stateColor = 'info' %}
                            {% elseif technicalName == 'paid' or technicalName == 'authorized' %}
                                {% set stateColor = 'success' %}
                            {% endif %}

                            <span class="status-badge {{ stateColor }}">{{ stateName }}</span>
                        </div>

                        {% if order.transactions.first %}
                        <div class="status-info">
                            <span class="status-label">Zahlungsstatus</span>
                            {% set paymentState = order.transactions.first.stateMachineState %}
                            {% set paymentColor = 'default' %}
                            {% if paymentState.technicalName == 'paid' %}
                                {% set paymentColor = 'success' %}
                            {% elseif paymentState.technicalName == 'open' %}
                                {% set paymentColor = 'info' %}
                            {% elseif paymentState.technicalName == 'cancelled' or paymentState.technicalName == 'failed' %}
                                {% set paymentColor = 'error' %}
                            {% endif %}
                            <span class="status-badge {{ paymentColor }}">{{ paymentState.translated.name }}</span>
                        </div>
                        {% endif %}

                        {% if order.deliveries.first %}
                        <div class="status-info">
                            <span class="status-label">Versandstatus</span>
                            {% set deliveryState = order.deliveries.first.stateMachineState %}
                            {% set deliveryColor = 'default' %}
                            {% if deliveryState.technicalName == 'shipped' %}
                                {% set deliveryColor = 'success' %}
                            {% elseif deliveryState.technicalName == 'open' %}
                                {% set deliveryColor = 'info' %}
                            {% endif %}
                            <span class="status-badge {{ deliveryColor }}">{{ deliveryState.translated.name }}</span>
                        </div>
                        {% endif %}
                    </div>
                </div>
            </div>

            {# Order Items #}
            <div class="order-detail-section">
                <h2 class="section-title">Bestellte Artikel</h2>
                <div class="section-card">
                    <div class="order-items-list">
                        {% for lineItem in order.lineItems %}
                        <div class="order-item-detail">
                            <div class="item-image">
                                {% set orderDetailImage = lineItem.payload.variantImageUrl|default(lineItem.cover.url)|default('') %}
                                {% if orderDetailImage %}
                                    <img src="{{ orderDetailImage }}" alt="{{ lineItem.label }}">
                                {% else %}
                                    <div class="no-image">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                                            <circle cx="8.5" cy="8.5" r="1.5"></circle>
                                            <polyline points="21 15 16 10 5 21"></polyline>
                                        </svg>
                                    </div>
                                {% endif %}
                            </div>
                            <div class="item-info">
                                <h4 class="item-name">{{ lineItem.label }}</h4>
                                {% if lineItem.payload.productNumber is defined %}
                                <p class="item-sku">Art.Nr: {{ lineItem.payload.productNumber }}</p>
                                {% endif %}
                            </div>
                            <div class="item-quantity">
                                <span class="qty-label">Menge</span>
                                <span class="qty-value">{{ lineItem.quantity }}</span>
                            </div>
                            <div class="item-price">
                                <span class="price-label">Preis</span>
                                <span class="price-value">{{ lineItem.totalPrice|currency }}</span>
                            </div>
                        </div>
                        {% endfor %}
                    </div>

                    {# Order Summary #}
                    <div class="order-summary">
                        <div class="summary-row">
                            <span>Zwischensumme</span>
                            <span>{{ order.amountNet|currency }}</span>
                        </div>
                        {% for delivery in order.deliveries %}
                        <div class="summary-row">
                            <span>Versandkosten ({{ delivery.shippingMethod.translated.name }})</span>
                            <span>{{ delivery.shippingCosts.totalPrice|currency }}</span>
                        </div>
                        {% endfor %}
                        {% for tax in order.price.calculatedTaxes %}
                        <div class="summary-row tax">
                            <span>inkl. {{ tax.taxRate }}% MwSt.</span>
                            <span>{{ tax.tax|currency }}</span>
                        </div>
                        {% endfor %}
                        <div class="summary-row total">
                            <span>Gesamtsumme</span>
                            <span>{{ order.amountTotal|currency }}</span>
                        </div>
                    </div>
                </div>
            </div>

            {# Addresses #}
            <div class="order-detail-section addresses-section">
                <div class="addresses-grid">
                    {# Billing Address #}
                    <div class="address-card">
                        <h3 class="address-title">
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                                <polyline points="14 2 14 8 20 8"></polyline>
                                <line x1="16" y1="13" x2="8" y2="13"></line>
                                <line x1="16" y1="17" x2="8" y2="17"></line>
                            </svg>
                            Rechnungsadresse
                        </h3>
                        {% set billingAddress = order.addresses.get(order.billingAddressId) %}
                        <div class="address-content">
                            <p class="address-name">{{ billingAddress.firstName }} {{ billingAddress.lastName }}</p>
                            {% if billingAddress.company %}
                            <p>{{ billingAddress.company }}</p>
                            {% endif %}
                            <p>{{ billingAddress.street }}</p>
                            <p>{{ billingAddress.zipcode }} {{ billingAddress.city }}</p>
                            <p>{{ billingAddress.country.translated.name }}</p>
                        </div>
                    </div>

                    {# Shipping Address #}
                    {% if order.deliveries.first %}
                    {% set shippingAddress = order.deliveries.first.shippingOrderAddress %}
                    <div class="address-card">
                        <h3 class="address-title">
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <rect x="1" y="3" width="15" height="13"></rect>
                                <polygon points="16 8 20 8 23 11 23 16 16 16 16 8"></polygon>
                                <circle cx="5.5" cy="18.5" r="2.5"></circle>
                                <circle cx="18.5" cy="18.5" r="2.5"></circle>
                            </svg>
                            Lieferadresse
                        </h3>
                        <div class="address-content">
                            <p class="address-name">{{ shippingAddress.firstName }} {{ shippingAddress.lastName }}</p>
                            {% if shippingAddress.company %}
                            <p>{{ shippingAddress.company }}</p>
                            {% endif %}
                            <p>{{ shippingAddress.street }}</p>
                            <p>{{ shippingAddress.zipcode }} {{ shippingAddress.city }}</p>
                            <p>{{ shippingAddress.country.translated.name }}</p>
                        </div>
                    </div>
                    {% endif %}
                </div>
            </div>

            {# Payment Method #}
            {% if order.transactions.first %}
            <div class="order-detail-section">
                <h2 class="section-title">Zahlungsmethode</h2>
                <div class="section-card payment-card">
                    <div class="payment-info">
                        <span class="payment-name">{{ order.transactions.first.paymentMethod.translated.name }}</span>
                    </div>
                </div>
            </div>
            {% endif %}
        </main>
    </div>
</div>

<style>
/* ============================================
   RAVEN ACCOUNT - ORDER DETAIL PAGE
   ============================================ */

:root {
    --raven-gold: #D4A847;
    --raven-gold-light: #E8C76B;
    --raven-gold-dark: #B8922E;
    --raven-charcoal: #1A1A1A;
    --raven-gray-700: #374151;
    --raven-gray-500: #6b7280;
    --raven-gray-400: #9ca3af;
    --raven-gray-300: #d1d5db;
    --raven-gray-100: #f3f4f6;
    --raven-gray-50: #f9fafb;
    --raven-cream: #FDFCF9;
    --raven-white: #ffffff;
}

.raven-account-dashboard {
    min-height: calc(100vh - 200px);
    background: linear-gradient(180deg, var(--raven-cream) 0%, #F5F3EE 100%);
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
    padding: 2rem 1rem;
}

@media (min-width: 768px) {
    .raven-account-dashboard { padding: 3rem 2rem; }
}

.account-container {
    max-width: 1400px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
}

@media (min-width: 1024px) {
    .account-container {
        grid-template-columns: 280px 1fr;
        gap: 3rem;
    }
}

/* ============ SIDEBAR ============ */
.account-sidebar {
    background: var(--raven-white);
    border-radius: 20px;
    padding: 1.5rem;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
    height: fit-content;
    position: sticky;
    top: 2rem;
}

.sidebar-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--raven-gray-100);
    margin-bottom: 1.5rem;
}

.user-avatar {
    width: 56px;
    height: 56px;
    background: linear-gradient(135deg, var(--raven-gold) 0%, var(--raven-gold-light) 100%);
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--raven-charcoal);
}

.user-info { flex: 1; }

.user-greeting {
    font-size: 0.75rem;
    color: var(--raven-gray-500);
    margin: 0 0 0.25rem 0;
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

.user-name {
    font-family: 'Chakra Petch', sans-serif;
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--raven-charcoal);
    margin: 0;
}

.sidebar-nav {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
}

.nav-item {
    display: flex;
    align-items: center;
    gap: 0.875rem;
    padding: 0.875rem 1rem;
    border-radius: 12px;
    color: var(--raven-gray-700);
    text-decoration: none;
    font-size: 0.9375rem;
    font-weight: 500;
    transition: all 0.2s ease;
}

.nav-item:hover {
    background: var(--raven-gray-50);
    color: var(--raven-charcoal);
}

.nav-item.active {
    background: linear-gradient(135deg, rgba(212, 168, 71, 0.15) 0%, rgba(232, 199, 107, 0.1) 100%);
    color: var(--raven-gold-dark);
}

.nav-item.active svg { color: var(--raven-gold); }
.nav-item svg { flex-shrink: 0; color: var(--raven-gray-400); transition: color 0.2s ease; }
.nav-item:hover svg { color: var(--raven-gray-700); }

.sidebar-footer {
    margin-top: 1.5rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--raven-gray-100);
}

.logout-btn {
    display: flex;
    align-items: center;
    gap: 0.875rem;
    padding: 0.875rem 1rem;
    border-radius: 12px;
    color: var(--raven-gray-500);
    text-decoration: none;
    font-size: 0.9375rem;
    font-weight: 500;
    transition: all 0.2s ease;
    width: 100%;
}

.logout-btn:hover { background: #FEF2F2; color: #DC2626; }
.logout-btn:hover svg { color: #DC2626; }

/* ============ MAIN CONTENT ============ */
.account-main { min-width: 0; }

.page-header { margin-bottom: 2rem; }

.back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--raven-gray-500);
    text-decoration: none;
    font-size: 0.875rem;
    font-weight: 500;
    margin-bottom: 1rem;
    transition: color 0.2s ease;
}

.back-link:hover { color: var(--raven-gold-dark); }

.page-title {
    font-family: 'Chakra Petch', sans-serif;
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--raven-charcoal);
    margin: 0 0 0.5rem 0;
    text-transform: uppercase;
    letter-spacing: 0.02em;
}

.page-subtitle {
    font-size: 1rem;
    color: var(--raven-gray-500);
    margin: 0;
}

/* ============ SECTIONS ============ */
.order-detail-section { margin-bottom: 2rem; }

.section-title {
    font-family: 'Chakra Petch', sans-serif;
    font-size: 1rem;
    font-weight: 600;
    color: var(--raven-charcoal);
    margin: 0 0 1rem 0;
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

.section-card {
    background: var(--raven-white);
    border-radius: 20px;
    padding: 1.5rem;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
}

/* ============ ORDER STATUS ============ */
.order-status-header {
    display: flex;
    flex-wrap: wrap;
    gap: 2rem;
}

.status-info {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
}

.status-label {
    font-size: 0.6875rem;
    font-weight: 600;
    color: var(--raven-gray-500);
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

.status-badge {
    font-size: 0.75rem;
    font-weight: 700;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    display: inline-block;
}

.status-badge.default { background: var(--raven-gray-100); color: var(--raven-gray-700); }
.status-badge.success { background: rgba(16, 185, 129, 0.15); color: #059669; }
.status-badge.warning { background: rgba(245, 158, 11, 0.15); color: #D97706; }
.status-badge.error { background: rgba(239, 68, 68, 0.15); color: #DC2626; }
.status-badge.info { background: rgba(59, 130, 246, 0.15); color: #2563EB; }

/* ============ ORDER ITEMS ============ */
.order-items-list { margin-bottom: 1.5rem; }

.order-item-detail {
    display: grid;
    grid-template-columns: 80px 1fr auto auto;
    gap: 1rem;
    align-items: center;
    padding: 1rem 0;
    border-bottom: 1px solid var(--raven-gray-100);
}

.order-item-detail:last-child { border-bottom: none; }

.item-image {
    width: 80px;
    height: 80px;
    border-radius: 12px;
    overflow: hidden;
    background: var(--raven-gray-50);
}

.item-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.item-image .no-image {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--raven-gray-300);
}

.item-info { min-width: 0; }

.item-name {
    font-size: 1rem;
    font-weight: 600;
    color: var(--raven-charcoal);
    margin: 0 0 0.25rem 0;
}

.item-sku {
    font-size: 0.8125rem;
    color: var(--raven-gray-500);
    margin: 0;
}

.item-quantity, .item-price {
    text-align: center;
}

.qty-label, .price-label {
    display: block;
    font-size: 0.6875rem;
    font-weight: 600;
    color: var(--raven-gray-500);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 0.25rem;
}

.qty-value {
    font-size: 1rem;
    font-weight: 600;
    color: var(--raven-charcoal);
}

.price-value {
    font-family: 'Chakra Petch', sans-serif;
    font-size: 1rem;
    font-weight: 700;
    color: var(--raven-charcoal);
}

/* ============ ORDER SUMMARY ============ */
.order-summary {
    border-top: 2px solid var(--raven-gray-100);
    padding-top: 1.5rem;
}

.summary-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.5rem 0;
    font-size: 0.9375rem;
    color: var(--raven-gray-700);
}

.summary-row.tax {
    font-size: 0.8125rem;
    color: var(--raven-gray-500);
}

.summary-row.total {
    border-top: 2px solid var(--raven-charcoal);
    margin-top: 0.75rem;
    padding-top: 1rem;
    font-family: 'Chakra Petch', sans-serif;
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--raven-charcoal);
}

/* ============ ADDRESSES ============ */
.addresses-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
}

@media (min-width: 768px) {
    .addresses-grid { grid-template-columns: 1fr 1fr; }
}

.address-card {
    background: var(--raven-white);
    border-radius: 16px;
    padding: 1.5rem;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
}

.address-title {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-family: 'Chakra Petch', sans-serif;
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--raven-charcoal);
    margin: 0 0 1rem 0;
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

.address-title svg { color: var(--raven-gold); }

.address-content p {
    font-size: 0.9375rem;
    color: var(--raven-gray-700);
    margin: 0 0 0.25rem 0;
    line-height: 1.5;
}

.address-name {
    font-weight: 600;
    color: var(--raven-charcoal) !important;
}

/* ============ PAYMENT ============ */
.payment-card { padding: 1.25rem 1.5rem; }

.payment-info { display: flex; align-items: center; gap: 1rem; }

.payment-name {
    font-size: 1rem;
    font-weight: 600;
    color: var(--raven-charcoal);
}

/* Hide default elements */
.account-content,
.account-sidebar-menu,
.account-welcome,
.order-detail-content,
.order-detail-header {
    display: none !important;
}

/* Full page background */
.raven-account-page-bg {
    background: linear-gradient(180deg, #FDFCF9 0%, #F5F3EE 100%) !important;
    min-height: 100vh;
}

/* ============ RESPONSIVE ============ */
@media (max-width: 768px) {
    .order-item-detail {
        grid-template-columns: 60px 1fr;
        gap: 0.75rem;
    }

    .item-image {
        width: 60px;
        height: 60px;
    }

