{% sw_extends '@Storefront/storefront/page/account/profile/reset-password.html.twig' %}

{# Hide header/navbar on auth pages #}
{% block base_header %}{% endblock %}

{# Hide footer on auth pages #}
{% block base_footer %}{% endblock %}

{% block base_content %}
<div class="raven-recover-page">
    {# Back to Login Button #}
    <a href="{{ path('frontend.account.login.page') }}" class="back-home-btn">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M19 12H5"></path>
            <polyline points="12 19 5 12 12 5"></polyline>
        </svg>
        Zurück zur Anmeldung
    </a>

    <div class="recover-wrapper">
        <div class="recover-card animate-fade-in-up">
            {# Logo inside card #}
            <div class="recover-logo" style="margin-bottom: 0.5rem; height: 60px; overflow: hidden; display: flex; align-items: center; justify-content: center; text-align: center;">
                <a href="{{ path('frontend.home.page') }}" style="display: flex; align-items: center; justify-content: center;">
                    <img src="{{ asset('bundles/raventheme/assets/raven-logo.png') }}" alt="Raven Weapon" style="height: 200px; width: auto; object-fit: contain; display: block; margin: 0 auto;">
                </a>
            </div>

            <div class="card-header">
                <h1>Neues Passwort erstellen</h1>
                <p>Geben Sie Ihr neues Passwort ein</p>
            </div>

            <form action="{{ path('frontend.account.recover.password.reset') }}"
                  method="post"
                  class="recover-form"
                  data-form-csrf-handler="true">

                <input type="hidden" name="password[hash]" value="{{ page.getHash }}" required>

                <div class="form-group">
                    <label for="newPassword">Neues Passwort</label>
                    <input type="password"
                           name="password[newPassword]"
                           id="newPassword"
                           placeholder="Mindestens 8 Zeichen"
                           autocomplete="new-password"
                           minlength="{{ config('core.loginRegistration.passwordMinLength') }}"
                           required>
                    <span class="form-hint">Mindestens {{ config('core.loginRegistration.passwordMinLength') }} Zeichen</span>
                </div>

                <div class="form-group">
                    <label for="newPasswordConfirm">Passwort bestätigen</label>
                    <input type="password"
                           name="password[newPasswordConfirm]"
                           id="newPasswordConfirm"
                           placeholder="Passwort wiederholen"
                           autocomplete="new-password"
                           required>
                </div>

                <button type="submit" class="recover-btn">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
                    </svg>
                    Passwort speichern
                </button>
            </form>

            <div class="recover-back">
                <a href="{{ path('frontend.account.login.page') }}" class="back-link">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M19 12H5"></path>
                        <polyline points="12 19 5 12 12 5"></polyline>
                    </svg>
                    Zurück zur Anmeldung
                </a>
            </div>
        </div>

        {# Trust Badges #}
        <div class="trust-badges animate-fade-in-up delay-200">
            <div class="trust-item">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect><path d="M7 11V7a5 5 0 0 1 10 0v4"></path></svg>
                SSL-verschlüsselt
            </div>
            <div class="trust-item">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path></svg>
                Sicher & Geschützt
            </div>
            <div class="trust-item">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="1" y="4" width="22" height="16" rx="2" ry="2"></rect><line x1="1" y1="10" x2="23" y2="10"></line></svg>
                Sichere Bezahlung
            </div>
        </div>
    </div>
</div>

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Chakra+Petch:wght@400;500;600;700&family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
<style>
/* ============================================
   RAVEN LUXURY PASSWORD RESET - Premium Design
   ============================================ */

:root {
    --raven-gold: #D4A847;
    --raven-gold-light: #E8C76B;
    --raven-gold-dark: #B8922E;
    --raven-charcoal: #1A1A1A;
    --raven-dark: #111111;
    --raven-gray-900: #1f2937;
    --raven-gray-700: #374151;
    --raven-gray-500: #6b7280;
    --raven-gray-300: #d1d5db;
    --raven-gray-100: #f3f4f6;
    --raven-cream: #FDFCF9;
    --raven-white: #ffffff;
}

/* Force full page background */
html, body {
    min-height: 100vh !important;
    margin: 0 !important;
    padding: 0 !important;
}

body {
    background: linear-gradient(180deg, var(--raven-cream) 0%, #F5F3EE 100%) !important;
}

/* ============ PAGE CONTAINER ============ */
.raven-recover-page {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 3rem 1.5rem;
    background: linear-gradient(180deg, var(--raven-cream) 0%, #F5F3EE 100%);
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
    position: relative;
}

.raven-recover-page::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: radial-gradient(circle at 1px 1px, rgba(0,0,0,0.03) 1px, transparent 0);
    background-size: 32px 32px;
    pointer-events: none;
}

/* ============ BACK BUTTON ============ */
.back-home-btn {
    position: fixed;
    top: 1.5rem;
    left: 1.5rem;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.25rem;
    background: var(--raven-white);
    border: 1px solid var(--raven-gray-300);
    border-radius: 12px;
    color: var(--raven-gray-700);
    font-size: 0.875rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.2s ease;
    z-index: 100;
    box-shadow: 0 2px 8px rgba(0,0,0,0.06);
}

.back-home-btn:hover {
    background: var(--raven-gray-100);
    color: var(--raven-charcoal);
    transform: translateX(-2px);
}

.recover-wrapper {
    width: 100%;
    max-width: 480px;
    position: relative;
    z-index: 1;
}

/* ============ LUXURY CARD ============ */
.recover-card {
    background: var(--raven-white);
    border-radius: 24px;
    padding: 2.5rem;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.08), 0 0 0 1px rgba(0, 0, 0, 0.04);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.recover-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 28px 80px rgba(0, 0, 0, 0.1), 0 0 0 1px rgba(0, 0, 0, 0.04);
}

@media (min-width: 640px) {
    .recover-card {
        padding: 3rem;
    }
}

/* ============ CARD HEADER ============ */
.card-header {
    margin-bottom: 2rem;
    text-align: center;
}

.card-header h1 {
    font-family: 'Chakra Petch', sans-serif;
    font-size: 2rem;
    font-weight: 700;
    color: var(--raven-charcoal);
    margin: 0 0 0.625rem 0;
    letter-spacing: 0.02em;
    text-transform: uppercase;
}

.card-header p {
    font-size: 0.9375rem;
    color: var(--raven-gray-500);
    margin: 0;
    line-height: 1.5;
}

/* ============ FORM STYLES ============ */
.recover-form .form-group {
    margin-bottom: 1.5rem;
}

.recover-form label {
    display: block;
    font-weight: 600;
    color: var(--raven-charcoal);
    font-size: 0.8125rem;
    margin-bottom: 0.625rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

.recover-form input[type="password"] {
    width: 100%;
    padding: 1rem 1.25rem;
    font-size: 1rem;
    border: 2px solid var(--raven-gray-300);
    border-radius: 14px;
    background: var(--raven-white);
    color: var(--raven-charcoal);
    transition: all 0.25s ease;
    font-family: inherit;
}

.recover-form input:hover {
    border-color: var(--raven-gray-500);
}

.recover-form input:focus {
    outline: none;
    border-color: var(--raven-gold);
    box-shadow: 0 0 0 4px rgba(212, 168, 71, 0.15);
}

.recover-form input::placeholder {
    color: var(--raven-gray-500);
}

.form-hint {
    display: block;
    font-size: 0.75rem;
    color: var(--raven-gray-500);
    margin-top: 0.5rem;
}

/* ============ LUXURY BUTTON ============ */
.recover-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.625rem;
    width: 100%;
    padding: 1.125rem 1.75rem;
    background: linear-gradient(135deg, var(--raven-gold) 0%, var(--raven-gold-light) 50%, var(--raven-gold) 100%);
    background-size: 200% 100%;
    border: 2px solid var(--raven-gold-dark);
    border-radius: 14px;
    color: var(--raven-charcoal);
    font-family: inherit;
    font-size: 1.0625rem;
    font-weight: 700;
    letter-spacing: 0.025em;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 6px 20px rgba(212, 168, 71, 0.35), inset 0 1px 0 rgba(255, 255, 255, 0.3);
}

.recover-btn:hover {
    background-position: 100% 0;
    transform: translateY(-2px);
    box-shadow: 0 10px 28px rgba(212, 168, 71, 0.45), inset 0 1px 0 rgba(255, 255, 255, 0.3);
}

.recover-btn:active {
    transform: translateY(0);
    box-shadow: 0 4px 16px rgba(212, 168, 71, 0.35);
}

/* ============ BACK LINK ============ */
.recover-back {
    margin-top: 1.75rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--raven-gray-100);
    text-align: center;
}

.back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9375rem;
    color: var(--raven-gray-500);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s ease;
}

.back-link:hover {
    color: var(--raven-gold-dark);
}

/* ============ TRUST BADGES ============ */
.trust-badges {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
    flex-wrap: wrap;
    margin-top: 2rem;
    padding: 1.25rem;
    background: rgba(255, 255, 255, 0.6);
    border-radius: 16px;
    border: 1px solid rgba(0, 0, 0, 0.04);
}

.trust-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.8125rem;
    font-weight: 500;
    color: var(--raven-gray-700);
}

.trust-item svg {
    color: var(--raven-gold);
}

/* ============ ANIMATIONS ============ */
.animate-fade-in-up {
    animation: fadeInUp 0.7s ease-out forwards;
}

.delay-200 {
    animation-delay: 0.3s;
    opacity: 0;
}

@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(24px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* ============ HIDE DEFAULT ELEMENTS ============ */
.account-reset-password,
.account-content {
    display: none !important;
}

/* ============ HIDE HEADER & FOOTER ON AUTH PAGES ============ */
.header-main,
.nav-main,
.header-row,
header,
.footer-main,
footer,
.js-cookie-permission-container,
.cookie-permission-container {
    display: none !important;
}

/* ============ RESPONSIVE ============ */
@media (max-width: 640px) {
    .recover-wrapper {
        max-width: 100%;
    }

    .recover-card {
        padding: 2rem;
        border-radius: 20px;
    }

    .card-header h1 {
        font-size: 1.625rem;
    }

    .back-home-btn {
        position: relative;
        top: auto;
        left: auto;
        margin-bottom: 1.5rem;
        width: fit-content;
    }

    .trust-badges {
        gap: 1rem;
        padding: 1rem;
    }

    .trust-item {
        font-size: 0.75rem;
    }
}
</style>
{% endblock %}
