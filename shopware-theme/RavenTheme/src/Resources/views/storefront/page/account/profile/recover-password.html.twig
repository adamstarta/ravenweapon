{% sw_extends '@Storefront/storefront/page/account/profile/recover-password.html.twig' %}

{# Hide header/navbar on auth pages #}
{% block base_header %}{% endblock %}

{# Hide footer on auth pages #}
{% block base_footer %}{% endblock %}

{% block base_content %}
<div class="raven-recover-page">
    {# Back to Login Button #}
    <a href="{{ path('frontend.account.login.page') }}" class="back-home-btn">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M19 12H5"></path>
            <polyline points="12 19 5 12 12 5"></polyline>
        </svg>
        Zurück zur Anmeldung
    </a>

    <div class="recover-wrapper">
        <div class="recover-card animate-fade-in-up">
            {# Logo inside card #}
            <div class="recover-logo" style="margin-bottom: 0.5rem; height: 60px; overflow: hidden; display: flex; align-items: center; justify-content: center; text-align: center;">
                <a href="{{ path('frontend.home.page') }}" style="display: flex; align-items: center; justify-content: center;">
                    <img src="{{ asset('bundles/raventheme/assets/raven-logo.png') }}" alt="Raven Weapon" style="height: 200px; width: auto; object-fit: contain; display: block; margin: 0 auto;">
                </a>
            </div>

            <div class="card-header">
                <h1>Passwort zurücksetzen</h1>
                <p>Geben Sie Ihre E-Mail-Adresse ein</p>
            </div>

            {# Success Message #}
            {% for message in app.flashes('success') %}
                <div class="recover-success">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                        <polyline points="22 4 12 14.01 9 11.01"></polyline>
                    </svg>
                    <div>
                        <strong>E-Mail wurde gesendet!</strong>
                        <p>Falls ein Konto mit dieser E-Mail-Adresse existiert, erhalten Sie in Kürze eine Nachricht mit einem Link zum Zurücksetzen Ihres Passworts.</p>
                    </div>
                </div>
            {% endfor %}

            {# Error Message #}
            {% for message in app.flashes('danger') %}
                <div class="recover-error">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <circle cx="12" cy="12" r="10"></circle>
                        <line x1="15" y1="9" x2="9" y2="15"></line>
                        <line x1="9" y1="9" x2="15" y2="15"></line>
                    </svg>
                    <div>
                        <strong>Ein Fehler ist aufgetreten</strong>
                        <p>{{ message }}</p>
                    </div>
                </div>
            {% endfor %}

            <div class="recover-info">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <circle cx="12" cy="12" r="10"></circle>
                    <line x1="12" y1="16" x2="12" y2="12"></line>
                    <line x1="12" y1="8" x2="12.01" y2="8"></line>
                </svg>
                <span>Wir senden Ihnen einen Link zum Zurücksetzen Ihres Passworts.</span>
            </div>

            <form action="{{ path('frontend.account.recover.request') }}"
                  method="post"
                  class="recover-form"
                  data-form-csrf-handler="true">

                <div class="form-group">
                    <label for="recoverMail">E-Mail-Adresse</label>
                    <input type="email"
                           name="email[email]"
                           id="recoverMail"
                           placeholder="ihre@email.de"
                           autocomplete="email"
                           required>
                </div>

                <button type="submit" class="recover-btn">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                        <polyline points="22,6 12,13 2,6"></polyline>
                    </svg>
                    Link anfordern
                </button>
            </form>

            <div class="recover-back">
                <a href="{{ path('frontend.account.login.page') }}" class="back-link">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M19 12H5"></path>
                        <polyline points="12 19 5 12 12 5"></polyline>
                    </svg>
                    Zurück zur Anmeldung
                </a>
            </div>
        </div>

        {# Trust Badges #}
        <div class="trust-badges animate-fade-in-up delay-200">
            <div class="trust-item">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect><path d="M7 11V7a5 5 0 0 1 10 0v4"></path></svg>
                SSL-verschlüsselt
            </div>
            <div class="trust-item">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path></svg>
                Sicher & Geschützt
            </div>
            <div class="trust-item">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="1" y="4" width="22" height="16" rx="2" ry="2"></rect><line x1="1" y1="10" x2="23" y2="10"></line></svg>
                Sichere Bezahlung
            </div>
        </div>
    </div>
</div>

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Chakra+Petch:wght@400;500;600;700&family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
<style>
/* ============================================
   RAVEN LUXURY PASSWORD RECOVERY - Premium Design
   ============================================ */

:root {
    --raven-gold: #D4A847;
    --raven-gold-light: #E8C76B;
    --raven-gold-dark: #B8922E;
    --raven-charcoal: #1A1A1A;
    --raven-dark: #111111;
    --raven-gray-900: #1f2937;
    --raven-gray-700: #374151;
    --raven-gray-500: #6b7280;
    --raven-gray-300: #d1d5db;
    --raven-gray-100: #f3f4f6;
    --raven-cream: #FDFCF9;
    --raven-white: #ffffff;
}

/* Force full page background */
html, body {
    min-height: 100vh !important;
    margin: 0 !important;
    padding: 0 !important;
}

body {
    background: linear-gradient(180deg, var(--raven-cream) 0%, #F5F3EE 100%) !important;
}

/* ============ PAGE CONTAINER ============ */
.raven-recover-page {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 3rem 1.5rem;
    background: linear-gradient(180deg, var(--raven-cream) 0%, #F5F3EE 100%);
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
    position: relative;
}

/* Subtle pattern overlay */
.raven-recover-page::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: radial-gradient(circle at 1px 1px, rgba(0,0,0,0.03) 1px, transparent 0);
    background-size: 32px 32px;
    pointer-events: none;
}

/* ============ BACK BUTTON ============ */
.back-home-btn {
    position: fixed;
    top: 1.5rem;
    left: 1.5rem;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.25rem;
    background: var(--raven-white);
    border: 1px solid var(--raven-gray-300);
    border-radius: 12px;
    color: var(--raven-gray-700);
    font-size: 0.875rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.2s ease;
    z-index: 100;
    box-shadow: 0 2px 8px rgba(0,0,0,0.06);
}

.back-home-btn:hover {
    background: var(--raven-gray-100);
    color: var(--raven-charcoal);
    transform: translateX(-2px);
}

.recover-wrapper {
    width: 100%;
    max-width: 480px;
    position: relative;
    z-index: 1;
}

/* ============ LUXURY CARD ============ */
.recover-card {
    background: var(--raven-white);
    border-radius: 24px;
    padding: 2.5rem;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.08), 0 0 0 1px rgba(0, 0, 0, 0.04);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.recover-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 28px 80px rgba(0, 0, 0, 0.1), 0 0 0 1px rgba(0, 0, 0, 0.04);
}

@media (min-width: 640px) {
    .recover-card {
        padding: 3rem;
    }
}

/* ============ CARD HEADER ============ */
.card-header {
    margin-bottom: 1.5rem;
    text-align: center;
}

.card-header h1 {
    font-family: 'Chakra Petch', sans-serif;
    font-size: 2rem;
    font-weight: 700;
    color: var(--raven-charcoal);
    margin: 0 0 0.625rem 0;
    letter-spacing: 0.02em;
    text-transform: uppercase;
}

.card-header p {
    font-size: 0.9375rem;
    color: var(--raven-gray-500);
    margin: 0;
    line-height: 1.5;
}

/* ============ SUCCESS MESSAGE ============ */
.recover-success {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    padding: 1.25rem 1.5rem;
    background: linear-gradient(135deg, rgba(34, 197, 94, 0.1) 0%, rgba(34, 197, 94, 0.05) 100%);
    border: 2px solid rgba(34, 197, 94, 0.3);
    border-radius: 14px;
    margin-bottom: 1.75rem;
    animation: slideDown 0.4s ease-out;
}

.recover-success svg {
    color: #22c55e;
    flex-shrink: 0;
    margin-top: 0.125rem;
}

.recover-success strong {
    display: block;
    font-size: 1rem;
    font-weight: 700;
    color: #166534;
    margin-bottom: 0.375rem;
}

.recover-success p {
    font-size: 0.875rem;
    color: #15803d;
    margin: 0;
    line-height: 1.5;
}

/* ============ ERROR MESSAGE ============ */
.recover-error {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    padding: 1.25rem 1.5rem;
    background: linear-gradient(135deg, rgba(239, 68, 68, 0.1) 0%, rgba(239, 68, 68, 0.05) 100%);
    border: 2px solid rgba(239, 68, 68, 0.3);
    border-radius: 14px;
    margin-bottom: 1.75rem;
    animation: slideDown 0.4s ease-out;
}

.recover-error svg {
    color: #ef4444;
    flex-shrink: 0;
    margin-top: 0.125rem;
}

.recover-error strong {
    display: block;
    font-size: 1rem;
    font-weight: 700;
    color: #991b1b;
    margin-bottom: 0.375rem;
}

.recover-error p {
    font-size: 0.875rem;
    color: #b91c1c;
    margin: 0;
    line-height: 1.5;
}

@keyframes slideDown {
    from {
        opacity: 0;
        transform: translateY(-10px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* ============ INFO BOX ============ */
.recover-info {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    padding: 1rem 1.25rem;
    background: rgba(212, 168, 71, 0.08);
    border: 1px solid rgba(212, 168, 71, 0.2);
    border-radius: 12px;
    margin-bottom: 1.75rem;
}

.recover-info svg {
    color: var(--raven-gold-dark);
    flex-shrink: 0;
    margin-top: 0.125rem;
}

.recover-info span {
    font-size: 0.875rem;
    color: var(--raven-gray-700);
    line-height: 1.5;
}

/* ============ FORM STYLES ============ */
.recover-form .form-group {
    margin-bottom: 1.5rem;
}

.recover-form label {
    display: block;
    font-weight: 600;
    color: var(--raven-charcoal);
    font-size: 0.8125rem;
    margin-bottom: 0.625rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

.recover-form input[type="email"] {
    width: 100%;
    padding: 1rem 1.25rem;
    font-size: 1rem;
    border: 2px solid var(--raven-gray-300);
    border-radius: 14px;
    background: var(--raven-white);
    color: var(--raven-charcoal);
    transition: all 0.25s ease;
    font-family: inherit;
}

.recover-form input:hover {
    border-color: var(--raven-gray-500);
}

.recover-form input:focus {
    outline: none;
    border-color: var(--raven-gold);
    box-shadow: 0 0 0 4px rgba(212, 168, 71, 0.15);
}

.recover-form input::placeholder {
    color: var(--raven-gray-500);
}

/* ============ LUXURY BUTTON ============ */
.recover-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.625rem;
    width: 100%;
    padding: 1.125rem 1.75rem;
    background: linear-gradient(135deg, var(--raven-gold) 0%, var(--raven-gold-light) 50%, var(--raven-gold) 100%);
    background-size: 200% 100%;
    border: 2px solid var(--raven-gold-dark);
    border-radius: 14px;
    color: var(--raven-charcoal);
    font-family: inherit;
    font-size: 1.0625rem;
    font-weight: 700;
    letter-spacing: 0.025em;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 6px 20px rgba(212, 168, 71, 0.35), inset 0 1px 0 rgba(255, 255, 255, 0.3);
}

.recover-btn:hover {
    background-position: 100% 0;
    transform: translateY(-2px);
    box-shadow: 0 10px 28px rgba(212, 168, 71, 0.45), inset 0 1px 0 rgba(255, 255, 255, 0.3);
}

.recover-btn:active {
    transform: translateY(0);
    box-shadow: 0 4px 16px rgba(212, 168, 71, 0.35);
}

/* ============ BACK LINK ============ */
.recover-back {
    margin-top: 1.75rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--raven-gray-100);
    text-align: center;
}

.back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9375rem;
    color: var(--raven-gray-500);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s ease;
}

.back-link:hover {
    color: var(--raven-gold-dark);
}

/* ============ TRUST BADGES ============ */
.trust-badges {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
    flex-wrap: wrap;
    margin-top: 2rem;
    padding: 1.25rem;
    background: rgba(255, 255, 255, 0.6);
    border-radius: 16px;
    border: 1px solid rgba(0, 0, 0, 0.04);
}

.trust-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.8125rem;
    font-weight: 500;
    color: var(--raven-gray-700);
}

.trust-item svg {
    color: var(--raven-gold);
}

/* ============ ANIMATIONS ============ */
.animate-fade-in-up {
    animation: fadeInUp 0.7s ease-out forwards;
}

.delay-200 {
    animation-delay: 0.3s;
    opacity: 0;
}

@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(24px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* ============ HIDE DEFAULT ELEMENTS ============ */
.account-recover-password,
.account-content {
    display: none !important;
}

/* ============ HIDE HEADER & FOOTER ON AUTH PAGES ============ */
.header-main,
.nav-main,
.header-row,
header,
.footer-main,
footer,
.js-cookie-permission-container,
.cookie-permission-container {
    display: none !important;
}

/* ============ RESPONSIVE ============ */
@media (max-width: 640px) {
    .recover-wrapper {
        max-width: 100%;
    }

    .recover-card {
        padding: 2rem;
        border-radius: 20px;
    }

    .card-header h1 {
        font-size: 1.625rem;
    }

    .back-home-btn {
        position: relative;
        top: auto;
        left: auto;
        margin-bottom: 1.5rem;
        width: fit-content;
    }

    .trust-badges {
        gap: 1rem;
        padding: 1rem;
    }

    .trust-item {
        font-size: 0.75rem;
    }
}
</style>
{% endblock %}
