{# Order history template - extends _page.html.twig to avoid recursion when placed at order-history/index.html.twig #}
{% sw_extends '@Storefront/storefront/page/account/_page.html.twig' %}

{% block page_account_main_content %}
<div class="raven-account-dashboard">
    <div class="account-container">
        {# Sidebar #}
        <aside class="account-sidebar">
            <div class="sidebar-header">
                <div class="user-avatar">
                    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                        <circle cx="12" cy="8" r="4"/>
                        <path d="M4 21v-1a4 4 0 0 1 4-4h8a4 4 0 0 1 4 4v1"/>
                    </svg>
                </div>
                <div class="user-info">
                    <p class="user-greeting">Willkommen zurück</p>
                    <h3 class="user-name">{{ context.customer.firstName }} {{ context.customer.lastName }}</h3>
                </div>
            </div>

            <nav class="sidebar-nav">
                <a href="{{ path('frontend.account.home.page') }}" class="nav-item">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <rect x="3" y="3" width="7" height="7"></rect>
                        <rect x="14" y="3" width="7" height="7"></rect>
                        <rect x="14" y="14" width="7" height="7"></rect>
                        <rect x="3" y="14" width="7" height="7"></rect>
                    </svg>
                    Übersicht
                </a>

                <a href="{{ path('frontend.account.profile.page') }}" class="nav-item">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                        <circle cx="12" cy="7" r="4"></circle>
                    </svg>
                    Mein Profil
                </a>

                <a href="{{ path('frontend.account.address.page') }}" class="nav-item">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                        <circle cx="12" cy="10" r="3"></circle>
                    </svg>
                    Adressen
                </a>

                <a href="{{ path('frontend.account.order.page') }}" class="nav-item active">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"></path>
                        <line x1="3" y1="6" x2="21" y2="6"></line>
                        <path d="M16 10a4 4 0 0 1-8 0"></path>
                    </svg>
                    Bestellungen
                </a>
            </nav>

            <div class="sidebar-footer">
                <a href="{{ path('frontend.account.logout.page') }}" class="logout-btn">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
                        <polyline points="16 17 21 12 16 7"></polyline>
                        <line x1="21" y1="12" x2="9" y2="12"></line>
                    </svg>
                    Abmelden
                </a>
            </div>
        </aside>

        {# Main Content #}
        <main class="account-main">
            {% if page.deepLinkCode and page.orders.elements|length > 0 %}
            {% set order = page.orders.elements|first %}
            {# ============ SINGLE ORDER DETAIL VIEW ============ #}
            <div class="page-header">
                <a href="{{ path('frontend.account.order.page') }}" class="back-link">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <polyline points="15 18 9 12 15 6"></polyline>
                    </svg>
                    Zurück zu Bestellungen
                </a>
                <h1 class="page-title">Bestellung #{{ order.orderNumber }}</h1>
                <p class="page-subtitle">{{ order.orderDateTime|format_datetime('full', 'short', locale='de') }}</p>
            </div>

            <div class="orders-section">
                <div class="section-card">
                    {# Order Status Header #}
                    <div class="order-detail-header">
                        <div class="order-status-info">
                            {% set stateColor = 'default' %}
                            {% set stateName = order.stateMachineState.translated.name|default('Unbekannt') %}
                            {% set technicalName = order.stateMachineState.technicalName|default('') %}
                            {% if technicalName == 'completed' or technicalName == 'done' %}
                                {% set stateColor = 'success' %}
                            {% elseif technicalName == 'cancelled' or technicalName == 'failed' %}
                                {% set stateColor = 'error' %}
                            {% elseif technicalName == 'in_progress' or technicalName == 'processing' %}
                                {% set stateColor = 'warning' %}
                            {% elseif technicalName == 'open' or technicalName == 'pending' %}
                                {% set stateColor = 'info' %}
                            {% elseif technicalName == 'paid' or technicalName == 'authorized' %}
                                {% set stateColor = 'success' %}
                            {% endif %}
                            <span class="status-badge {{ stateColor }}">{{ stateName }}</span>
                        </div>
                    </div>

                    {# Order Items #}
                    <div class="order-detail-items">
                        <h3 class="detail-section-title">Bestellte Artikel</h3>
                        {% for lineItem in order.lineItems %}
                        <div class="order-detail-item">
                            <div class="item-image">
                                {# Try to get variant image from payload, fallback to cover #}
                                {% set detailVariantImg = '' %}
                                {% if lineItem.payload is iterable and lineItem.payload.variantImageUrl is defined %}
                                    {% set detailVariantImg = lineItem.payload.variantImageUrl %}
                                {% endif %}
                                {% set detailCoverImg = '' %}
                                {% if lineItem.cover is defined and lineItem.cover %}
                                    {% if lineItem.cover.url is defined %}
                                        {% set detailCoverImg = lineItem.cover.url %}
                                    {% elseif lineItem.cover is iterable and lineItem.cover.media is defined and lineItem.cover.media.url is defined %}
                                        {% set detailCoverImg = lineItem.cover.media.url %}
                                    {% endif %}
                                {% endif %}
                                {% set accountOrderImage = detailVariantImg|default(detailCoverImg)|default('') %}
                                {% if accountOrderImage %}
                                    <img src="{{ accountOrderImage }}" alt="{{ lineItem.label }}">
                                {% else %}
                                    <div class="no-image">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                            <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                                            <circle cx="8.5" cy="8.5" r="1.5"></circle>
                                            <polyline points="21 15 16 10 5 21"></polyline>
                                        </svg>
                                    </div>
                                {% endif %}
                            </div>
                            <div class="item-details">
                                <p class="item-name">{{ lineItem.label }}</p>
                                {# Display variant info from payload #}
                                {% set detailVariantDisplay = '' %}
                                {% if lineItem.payload is iterable %}
                                    {% if lineItem.payload.variantenDisplay is defined and lineItem.payload.variantenDisplay %}
                                        {% set detailVariantDisplay = lineItem.payload.variantenDisplay %}
                                    {% else %}
                                        {% set detailColorPart = lineItem.payload.selectedColor|default('') %}
                                        {% set detailSizePart = lineItem.payload.selectedSize|default('') %}
                                        {% if detailColorPart or detailSizePart %}
                                            {% set detailParts = [] %}
                                            {% if detailColorPart %}{% set detailParts = detailParts|merge([detailColorPart]) %}{% endif %}
                                            {% if detailSizePart %}{% set detailParts = detailParts|merge([detailSizePart]) %}{% endif %}
                                            {% set detailVariantDisplay = detailParts|join(' / ') %}
                                        {% endif %}
                                    {% endif %}
                                {% endif %}
                                {# Also try Shopware's built-in options if no custom variant #}
                                {% if not detailVariantDisplay and lineItem.payload is iterable and lineItem.payload.options is defined %}
                                    {% set detailOptionParts = [] %}
                                    {% for option in lineItem.payload.options %}
                                        {% if option.option is defined %}
                                            {% set detailOptionParts = detailOptionParts|merge([option.option]) %}
                                        {% endif %}
                                    {% endfor %}
                                    {% if detailOptionParts|length > 0 %}
                                        {% set detailVariantDisplay = detailOptionParts|join(' / ') %}
                                    {% endif %}
                                {% endif %}
                                {% if detailVariantDisplay %}
                                    <p class="item-variant" style="font-size: 12px; color: #D97706; margin: 2px 0;">Variante: {{ detailVariantDisplay }}</p>
                                {% endif %}
                                {# Show article number #}
                                {% if lineItem.payload is iterable and lineItem.payload.productNumber is defined and lineItem.payload.productNumber %}
                                    <p class="item-sku">Art.-Nr.: {{ lineItem.payload.productNumber }}</p>
                                {% endif %}
                                <p class="item-quantity">Menge: {{ lineItem.quantity }}</p>
                            </div>
                            <div class="item-prices">
                                <span class="item-unit-price">{{ lineItem.unitPrice|currency }}</span>
                                <span class="item-total-price">{{ lineItem.totalPrice|currency }}</span>
                            </div>
                        </div>
                        {% endfor %}
                    </div>

                    {# Order Summary #}
                    <div class="order-detail-summary">
                        <div class="summary-row">
                            <span>Zwischensumme</span>
                            <span>{{ order.price.positionPrice|currency }}</span>
                        </div>
                        {% for delivery in order.deliveries %}
                        <div class="summary-row">
                            <span>Versand ({{ delivery.shippingMethod.translated.name }})</span>
                            <span>{{ delivery.shippingCosts.totalPrice|currency }}</span>
                        </div>
                        {% endfor %}
                        {% if order.price.calculatedTaxes|length > 0 %}
                        {% for tax in order.price.calculatedTaxes %}
                        <div class="summary-row tax-row">
                            <span>inkl. {{ tax.taxRate }}% MwSt.</span>
                            <span>{{ tax.tax|currency }}</span>
                        </div>
                        {% endfor %}
                        {% endif %}
                        <div class="summary-row total-row">
                            <span>Gesamtsumme</span>
                            <span>{{ order.amountTotal|currency }}</span>
                        </div>
                    </div>
                </div>

                {# Addresses #}
                <div class="order-detail-addresses">
                    <div class="address-card">
                        <h3 class="address-title">Rechnungsadresse</h3>
                        <div class="address-content">
                            <p>{{ order.billingAddress.firstName }} {{ order.billingAddress.lastName }}</p>
                            {% if order.billingAddress.company %}
                            <p>{{ order.billingAddress.company }}</p>
                            {% endif %}
                            <p>{{ order.billingAddress.street }}</p>
                            <p>{{ order.billingAddress.zipcode }} {{ order.billingAddress.city }}</p>
                            <p>{{ order.billingAddress.country.translated.name }}</p>
                        </div>
                    </div>
                    {% for delivery in order.deliveries %}
                    <div class="address-card">
                        <h3 class="address-title">Lieferadresse</h3>
                        <div class="address-content">
                            <p>{{ delivery.shippingOrderAddress.firstName }} {{ delivery.shippingOrderAddress.lastName }}</p>
                            {% if delivery.shippingOrderAddress.company %}
                            <p>{{ delivery.shippingOrderAddress.company }}</p>
                            {% endif %}
                            <p>{{ delivery.shippingOrderAddress.street }}</p>
                            <p>{{ delivery.shippingOrderAddress.zipcode }} {{ delivery.shippingOrderAddress.city }}</p>
                            <p>{{ delivery.shippingOrderAddress.country.translated.name }}</p>
                        </div>
                    </div>
                    {% endfor %}
                </div>

                {# Payment & Shipping Info #}
                <div class="order-detail-info-cards">
                    <div class="info-card">
                        <h3 class="info-title">Zahlungsart</h3>
                        <p class="info-value">
                            {% if order.transactions|length > 0 %}
                                {{ order.transactions|last.paymentMethod.translated.name }}
                            {% else %}
                                -
                            {% endif %}
                        </p>
                        {% if order.transactions|length > 0 %}
                        <p class="info-status">
                            Status: {{ order.transactions|last.stateMachineState.translated.name }}
                        </p>
                        {% endif %}
                    </div>
                    {% for delivery in order.deliveries %}
                    <div class="info-card">
                        <h3 class="info-title">Versandart</h3>
                        <p class="info-value">{{ delivery.shippingMethod.translated.name }}</p>
                        <p class="info-status">Status: {{ delivery.stateMachineState.translated.name }}</p>
                    </div>
                    {% endfor %}
                </div>
            </div>

            {% else %}
            {# ============ ORDERS LIST VIEW ============ #}
            <div class="page-header">
                <h1 class="page-title">Meine Bestellungen</h1>
                <p class="page-subtitle">Übersicht aller Ihrer Bestellungen</p>
            </div>

            {# Orders List #}
            <div class="orders-section">
                <div class="section-card">
                    {% if page.orders.elements|length > 0 %}
                    <div class="orders-list">
                        {% for order in page.orders %}
                        <div class="order-card">
                            <div class="order-header">
                                <div class="order-info">
                                    <div class="order-number">
                                        <span class="label">Bestellnummer</span>
                                        <span class="value">#{{ order.orderNumber }}</span>
                                    </div>
                                    <div class="order-date">
                                        <span class="label">Bestelldatum</span>
                                        <span class="value">{{ order.orderDateTime|format_datetime('medium', 'short', locale='de') }}</span>
                                    </div>
                                </div>
                                <div class="order-status">
                                    {% set stateColor = 'default' %}
                                    {% set stateName = order.stateMachineState.translated.name|default('Unbekannt') %}
                                    {% set technicalName = order.stateMachineState.technicalName|default('') %}

                                    {# Order states #}
                                    {% if technicalName == 'completed' or technicalName == 'done' %}
                                        {% set stateColor = 'success' %}
                                    {% elseif technicalName == 'cancelled' or technicalName == 'failed' %}
                                        {% set stateColor = 'error' %}
                                    {% elseif technicalName == 'in_progress' or technicalName == 'processing' %}
                                        {% set stateColor = 'warning' %}
                                    {% elseif technicalName == 'open' or technicalName == 'pending' %}
                                        {% set stateColor = 'info' %}

                                    {# Payment states #}
                                    {% elseif technicalName == 'paid' or technicalName == 'authorized' %}
                                        {% set stateColor = 'success' %}
                                    {% elseif technicalName == 'refunded' or technicalName == 'partially_refunded' %}
                                        {% set stateColor = 'warning' %}
                                    {% elseif technicalName == 'partially_paid' or technicalName == 'reminded' %}
                                        {% set stateColor = 'warning' %}
                                    {% elseif technicalName == 'unconfirmed' %}
                                        {% set stateColor = 'info' %}
                                    {% elseif technicalName == 'chargeback' %}
                                        {% set stateColor = 'error' %}

                                    {# Delivery states #}
                                    {% elseif technicalName == 'shipped' or technicalName == 'shipped_partially' %}
                                        {% set stateColor = 'success' %}
                                    {% elseif technicalName == 'returned' or technicalName == 'returned_partially' %}
                                        {% set stateColor = 'warning' %}
                                    {% endif %}

                                    <span class="status-badge {{ stateColor }}">{{ stateName }}</span>
                                </div>
                            </div>

                            <div class="order-items">
                                {% for lineItem in order.lineItems|slice(0, 3) %}
                                <div class="order-item">
                                    <div class="item-image">
                                        {# Try to get variant image from payload, fallback to cover #}
                                        {% set variantImg = '' %}
                                        {% if lineItem.payload is iterable and lineItem.payload.variantImageUrl is defined %}
                                            {% set variantImg = lineItem.payload.variantImageUrl %}
                                        {% endif %}
                                        {% set coverImg = '' %}
                                        {% if lineItem.cover is defined and lineItem.cover %}
                                            {% if lineItem.cover.url is defined %}
                                                {% set coverImg = lineItem.cover.url %}
                                            {% elseif lineItem.cover is iterable and lineItem.cover.media is defined and lineItem.cover.media.url is defined %}
                                                {% set coverImg = lineItem.cover.media.url %}
                                            {% endif %}
                                        {% endif %}
                                        {% set orderListImage = variantImg|default(coverImg)|default('') %}
                                        {% if orderListImage %}
                                            <img src="{{ orderListImage }}" alt="{{ lineItem.label }}">
                                        {% else %}
                                            <div class="no-image">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                    <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                                                    <circle cx="8.5" cy="8.5" r="1.5"></circle>
                                                    <polyline points="21 15 16 10 5 21"></polyline>
                                                </svg>
                                            </div>
                                        {% endif %}
                                    </div>
                                    <div class="item-details">
                                        <p class="item-name">{{ lineItem.label }}</p>
                                        {# Display variant info from payload #}
                                        {% set variantDisplay = '' %}
                                        {% if lineItem.payload is iterable %}
                                            {% if lineItem.payload.variantenDisplay is defined and lineItem.payload.variantenDisplay %}
                                                {% set variantDisplay = lineItem.payload.variantenDisplay %}
                                            {% else %}
                                                {% set colorPart = lineItem.payload.selectedColor|default('') %}
                                                {% set sizePart = lineItem.payload.selectedSize|default('') %}
                                                {% if colorPart or sizePart %}
                                                    {% set variantParts = [] %}
                                                    {% if colorPart %}{% set variantParts = variantParts|merge([colorPart]) %}{% endif %}
                                                    {% if sizePart %}{% set variantParts = variantParts|merge([sizePart]) %}{% endif %}
                                                    {% set variantDisplay = variantParts|join(' / ') %}
                                                {% endif %}
                                            {% endif %}
                                        {% endif %}
                                        {# Also try Shopware's built-in options if no custom variant #}
                                        {% if not variantDisplay and lineItem.payload is iterable and lineItem.payload.options is defined %}
                                            {% set optionParts = [] %}
                                            {% for option in lineItem.payload.options %}
                                                {% if option.option is defined %}
                                                    {% set optionParts = optionParts|merge([option.option]) %}
                                                {% endif %}
                                            {% endfor %}
                                            {% if optionParts|length > 0 %}
                                                {% set variantDisplay = optionParts|join(' / ') %}
                                            {% endif %}
                                        {% endif %}
                                        {% if variantDisplay %}
                                            <p class="item-variant" style="font-size: 12px; color: #D97706; margin: 2px 0;">Variante: {{ variantDisplay }}</p>
                                        {% endif %}
                                        {# Show article number #}
                                        {% if lineItem.payload is iterable and lineItem.payload.productNumber is defined and lineItem.payload.productNumber %}
                                            <p class="item-sku" style="font-size: 11px; color: #9ca3af; margin: 2px 0;">Art.-Nr.: {{ lineItem.payload.productNumber }}</p>
                                        {% endif %}
                                        <p class="item-quantity">Menge: {{ lineItem.quantity }}</p>
                                    </div>
                                    <div class="item-price">{{ lineItem.totalPrice|currency }}</div>
                                </div>
                                {% endfor %}
                                {% if order.lineItems|length > 3 %}
                                <div class="more-items">
                                    +{{ order.lineItems|length - 3 }} weitere Artikel
                                </div>
                                {% endif %}
                            </div>

                            <div class="order-footer">
                                <div class="order-total">
                                    <span class="total-label">Gesamtsumme</span>
                                    <span class="total-value">{{ order.amountTotal|currency }}</span>
                                </div>
                                <div class="order-actions">
                                    <a href="{{ path('frontend.account.order.single.page', { deepLinkCode: order.deepLinkCode }) }}" class="btn-view-order">
                                        Details anzeigen
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                            <polyline points="9 18 15 12 9 6"></polyline>
                                        </svg>
                                    </a>
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                    </div>

                    {# Pagination #}
                    {% if page.orders.totalPages > 1 %}
                    <div class="orders-pagination">
                        {% if page.orders.currentPage > 1 %}
                        <a href="{{ path('frontend.account.order.page', { p: page.orders.currentPage - 1 }) }}" class="pagination-btn prev">
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <polyline points="15 18 9 12 15 6"></polyline>
                            </svg>
                            Zurück
                        </a>
                        {% endif %}
                        <span class="pagination-info">Seite {{ page.orders.currentPage }} von {{ page.orders.totalPages }}</span>
                        {% if page.orders.currentPage < page.orders.totalPages %}
                        <a href="{{ path('frontend.account.order.page', { p: page.orders.currentPage + 1 }) }}" class="pagination-btn next">
                            Weiter
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <polyline points="9 18 15 12 9 6"></polyline>
                            </svg>
                        </a>
                        {% endif %}
                    </div>
                    {% endif %}

                    {% else %}
                    <div class="no-orders">
                        <div class="no-orders-icon">
                            <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"></path>
                                <line x1="3" y1="6" x2="21" y2="6"></line>
                                <path d="M16 10a4 4 0 0 1-8 0"></path>
                            </svg>
                        </div>
                        <h3 class="no-orders-title">Noch keine Bestellungen</h3>
                        <p class="no-orders-text">Sobald Sie eine Bestellung aufgeben, wird sie hier angezeigt.</p>
                        <a href="{{ path('frontend.home.page') }}" class="btn-primary">
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"></path>
                                <line x1="3" y1="6" x2="21" y2="6"></line>
                                <path d="M16 10a4 4 0 0 1-8 0"></path>
                            </svg>
                            Jetzt einkaufen
                        </a>
                    </div>
                    {% endif %}
                </div>
            </div>
            {% endif %}
        </main>
    </div>
</div>

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Chakra+Petch:wght@400;500;600;700&family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

<style>
/* ============================================
   RAVEN ACCOUNT - ORDERS PAGE
   ============================================ */

:root {
    --raven-gold: #D4A847;
    --raven-gold-light: #E8C76B;
    --raven-gold-dark: #B8922E;
    --raven-charcoal: #1A1A1A;
    --raven-gray-700: #374151;
    --raven-gray-500: #6b7280;
    --raven-gray-400: #9ca3af;
    --raven-gray-300: #d1d5db;
    --raven-gray-100: #f3f4f6;
    --raven-gray-50: #f9fafb;
    --raven-cream: #FDFCF9;
    --raven-white: #ffffff;
}

.raven-account-dashboard {
    min-height: calc(100vh - 200px);
    background: linear-gradient(180deg, var(--raven-cream) 0%, #F5F3EE 100%);
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
    padding: 2rem 1rem;
}

@media (min-width: 768px) {
    .raven-account-dashboard {
        padding: 3rem 2rem;
    }
}

.account-container {
    max-width: 1400px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
}

@media (min-width: 1024px) {
    .account-container {
        grid-template-columns: 280px 1fr;
        gap: 3rem;
