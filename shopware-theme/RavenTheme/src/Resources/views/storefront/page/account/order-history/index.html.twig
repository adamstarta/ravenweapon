{% sw_extends '@Storefront/storefront/page/account/index.html.twig' %}

{% block page_account %}
<div class="raven-account-dashboard">
    <div class="account-container">
        {# Sidebar #}
        <aside class="account-sidebar">
            <div class="sidebar-header">
                <div class="user-avatar">
                    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                        <circle cx="12" cy="8" r="4"/>
                        <path d="M4 21v-1a4 4 0 0 1 4-4h8a4 4 0 0 1 4 4v1"/>
                    </svg>
                </div>
                <div class="user-info">
                    <p class="user-greeting">Willkommen zurück</p>
                    <h3 class="user-name">{{ context.customer.firstName }} {{ context.customer.lastName }}</h3>
                </div>
            </div>

            <nav class="sidebar-nav">
                <a href="{{ path('frontend.account.home.page') }}" class="nav-item">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <rect x="3" y="3" width="7" height="7"></rect>
                        <rect x="14" y="3" width="7" height="7"></rect>
                        <rect x="14" y="14" width="7" height="7"></rect>
                        <rect x="3" y="14" width="7" height="7"></rect>
                    </svg>
                    Übersicht
                </a>

                <a href="{{ path('frontend.account.profile.page') }}" class="nav-item">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                        <circle cx="12" cy="7" r="4"></circle>
                    </svg>
                    Mein Profil
                </a>

                <a href="{{ path('frontend.account.address.page') }}" class="nav-item">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                        <circle cx="12" cy="10" r="3"></circle>
                    </svg>
                    Adressen
                </a>

                <a href="{{ path('frontend.account.order.page') }}" class="nav-item active">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"></path>
                        <line x1="3" y1="6" x2="21" y2="6"></line>
                        <path d="M16 10a4 4 0 0 1-8 0"></path>
                    </svg>
                    Bestellungen
                </a>
            </nav>

            <div class="sidebar-footer">
                <a href="{{ path('frontend.account.logout.page') }}" class="logout-btn">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
                        <polyline points="16 17 21 12 16 7"></polyline>
                        <line x1="21" y1="12" x2="9" y2="12"></line>
                    </svg>
                    Abmelden
                </a>
            </div>
        </aside>

        {# Main Content #}
        <main class="account-main">
            {% if page.deepLinkCode and page.orders.elements|length > 0 %}
            {# ============ SINGLE ORDER DETAIL VIEW ============ #}
            {% set order = page.orders.elements|first %}

            <a href="{{ path('frontend.account.order.page') }}" class="back-link">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="15 18 9 12 15 6"></polyline></svg>
                Zurück zu Bestellungen
            </a>

            <div class="page-header">
                <h1 class="page-title">Bestellung #{{ order.orderNumber }}</h1>
                <div class="order-meta-header">
                    <span class="order-date-text">{{ order.orderDateTime|date('d.m.Y H:i') }}</span>
                    <span class="status-badge">{{ order.stateMachineState.translated.name|default('Unbekannt') }}</span>
                </div>
            </div>

            {# Order Items #}
            <div class="order-section">
                <h2 class="section-title">Bestellte Artikel</h2>
                {% for lineItem in order.lineItems %}
                <div class="order-item-row">
                    <div class="item-image">
                        {% if lineItem.cover %}
                        <img src="{{ lineItem.cover.url }}" alt="{{ lineItem.label }}">
                        {% endif %}
                    </div>
                    <div class="item-info">
                        <p class="item-name">{{ lineItem.label }}</p>
                        <p class="item-qty">Menge: {{ lineItem.quantity }}</p>
                    </div>
                    <div class="item-prices">
                        <span class="unit-price">CHF {{ lineItem.unitPrice|number_format(2, '.', ' ') }}</span>
                        <span class="total-price">CHF {{ lineItem.totalPrice|number_format(2, '.', ' ') }}</span>
                    </div>
                </div>
                {% endfor %}
            </div>

            {# Order Summary #}
            <div class="order-section">
                <div class="summary-row">
                    <span>Zwischensumme</span>
                    <span>CHF {{ order.price.positionPrice|number_format(2, '.', ' ') }}</span>
                </div>
                {% for delivery in order.deliveries %}
                <div class="summary-row">
                    <span>Versand</span>
                    <span>CHF {{ delivery.shippingCosts.totalPrice|number_format(2, '.', ' ') }}</span>
                </div>
                {% endfor %}
                <div class="summary-row total">
                    <span>Gesamtsumme</span>
                    <span>CHF {{ order.amountTotal|number_format(2, '.', ' ') }}</span>
                </div>
            </div>

            {# Addresses #}
            <div class="addresses-grid">
                <div class="address-box">
                    <h3>Rechnungsadresse</h3>
                    <p class="address-name">{{ order.billingAddress.firstName }} {{ order.billingAddress.lastName }}</p>
                    <p>{{ order.billingAddress.street }}</p>
                    <p>{{ order.billingAddress.zipcode }} {{ order.billingAddress.city }}</p>
                    <p>{{ order.billingAddress.country.translated.name }}</p>
                </div>
                {% for delivery in order.deliveries %}
                <div class="address-box">
                    <h3>Lieferadresse</h3>
                    <p class="address-name">{{ delivery.shippingOrderAddress.firstName }} {{ delivery.shippingOrderAddress.lastName }}</p>
                    <p>{{ delivery.shippingOrderAddress.street }}</p>
                    <p>{{ delivery.shippingOrderAddress.zipcode }} {{ delivery.shippingOrderAddress.city }}</p>
                    <p>{{ delivery.shippingOrderAddress.country.translated.name }}</p>
                </div>
                {% endfor %}
            </div>

            {% else %}
            {# ============ ORDERS LIST VIEW ============ #}
            <div class="page-header">
                <h1 class="page-title">Meine Bestellungen</h1>
                <p class="page-subtitle">Übersicht aller Ihrer Bestellungen</p>
            </div>

            {% if page.orders.elements|length > 0 %}
            <div class="orders-list">
                {% for order in page.orders %}
                <div class="order-card">
                    <div class="card-header">
                        <div class="order-meta">
                            <span class="order-number">#{{ order.orderNumber }}</span>
                            <span class="order-date">{{ order.orderDateTime|date('d.m.Y H:i') }}</span>
                        </div>
                        <span class="status-badge">{{ order.stateMachineState.translated.name|default('Unbekannt') }}</span>
                    </div>

                    <div class="card-items">
                        {% for lineItem in order.lineItems|slice(0, 3) %}
                        <div class="item-row">
                            <div class="item-thumb">
                                {% if lineItem.cover %}
                                <img src="{{ lineItem.cover.url }}" alt="{{ lineItem.label }}">
                                {% endif %}
                            </div>
                            <span class="item-label">{{ lineItem.label }}</span>
                            <span class="item-price">CHF {{ lineItem.totalPrice|number_format(2, '.', ' ') }}</span>
                        </div>
                        {% endfor %}
                        {% if order.lineItems|length > 3 %}
                        <p class="more-items">+{{ order.lineItems|length - 3 }} weitere Artikel</p>
                        {% endif %}
                    </div>

                    <div class="card-footer">
                        <div class="order-total">
                            <span class="label">Gesamt</span>
                            <span class="value">CHF {{ order.amountTotal|number_format(2, '.', ' ') }}</span>
                        </div>
                        <a href="{{ path('frontend.account.order.single.page', { deepLinkCode: order.deepLinkCode }) }}" class="view-btn">
                            Details anzeigen
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="9 18 15 12 9 6"></polyline></svg>
                        </a>
                    </div>
                </div>
                {% endfor %}
            </div>
            {% else %}
            <div class="no-orders">
                <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"></path>
                    <line x1="3" y1="6" x2="21" y2="6"></line>
                    <path d="M16 10a4 4 0 0 1-8 0"></path>
                </svg>
                <h3>Noch keine Bestellungen</h3>
                <p>Sobald Sie eine Bestellung aufgeben, wird sie hier angezeigt.</p>
                <a href="{{ path('frontend.home.page') }}" class="shop-btn">Jetzt einkaufen</a>
            </div>
            {% endif %}
            {% endif %}
        </main>
    </div>
</div>

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Chakra+Petch:wght@400;500;600;700&family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

<style>
/* ============================================
   RAVEN ORDERS PAGE - Consistent with Dashboard
   ============================================ */

:root {
    --raven-gold: #D4A847;
    --raven-gold-light: #E8C76B;
    --raven-gold-dark: #B8922E;
    --raven-charcoal: #1A1A1A;
    --raven-dark: #111111;
    --raven-gray-900: #1f2937;
    --raven-gray-700: #374151;
    --raven-gray-500: #6b7280;
    --raven-gray-400: #9ca3af;
    --raven-gray-300: #d1d5db;
    --raven-gray-200: #e5e7eb;
    --raven-gray-100: #f3f4f6;
    --raven-gray-50: #f9fafb;
    --raven-cream: #FDFCF9;
    --raven-white: #ffffff;
}

.raven-account-dashboard {
    min-height: calc(100vh - 200px);
    background: linear-gradient(180deg, var(--raven-cream) 0%, #F5F3EE 100%);
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
    padding: 2rem 1rem;
}

@media (min-width: 768px) {
    .raven-account-dashboard {
        padding: 3rem 2rem;
    }
}

.account-container {
    max-width: 1400px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
}

@media (min-width: 1024px) {
    .account-container {
        grid-template-columns: 280px 1fr;
        gap: 3rem;
    }
}

/* ============ SIDEBAR ============ */
.account-sidebar {
    background: var(--raven-white);
    border-radius: 20px;
    padding: 1.5rem;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
    height: fit-content;
    position: sticky;
    top: 2rem;
}

.sidebar-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--raven-gray-100);
    margin-bottom: 1.5rem;
}

.user-avatar {
    width: 56px;
    height: 56px;
    background: linear-gradient(135deg, var(--raven-gold) 0%, var(--raven-gold-light) 100%);
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--raven-charcoal);
}

.user-info {
    flex: 1;
}

.user-greeting {
    font-size: 0.75rem;
    color: var(--raven-gray-500);
    margin: 0 0 0.25rem 0;
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

.user-name {
    font-family: 'Chakra Petch', sans-serif;
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--raven-charcoal);
    margin: 0;
}

.sidebar-nav {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
}

.nav-item {
    display: flex;
    align-items: center;
    gap: 0.875rem;
    padding: 0.875rem 1rem;
    border-radius: 12px;
    color: var(--raven-gray-700);
    text-decoration: none;
    font-size: 0.9375rem;
    font-weight: 500;
    transition: all 0.2s ease;
}

.nav-item:hover {
    background: var(--raven-gray-50);
    color: var(--raven-charcoal);
}

.nav-item.active {
    background: linear-gradient(135deg, rgba(212, 168, 71, 0.15) 0%, rgba(232, 199, 107, 0.1) 100%);
    color: var(--raven-gold-dark);
}

.nav-item.active svg {
    color: var(--raven-gold);
}

.nav-item svg {
    flex-shrink: 0;
    color: var(--raven-gray-400);
    transition: color 0.2s ease;
}

.nav-item:hover svg {
    color: var(--raven-gray-700);
}

.sidebar-footer {
    margin-top: 1.5rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--raven-gray-100);
}

.logout-btn {
    display: flex;
    align-items: center;
    gap: 0.875rem;
    padding: 0.875rem 1rem;
    border-radius: 12px;
    color: var(--raven-gray-500);
    text-decoration: none;
    font-size: 0.9375rem;
    font-weight: 500;
    transition: all 0.2s ease;
    width: 100%;
}

.logout-btn:hover {
    background: #FEF2F2;
    color: #DC2626;
}

.logout-btn:hover svg {
    color: #DC2626;
}

/* ============ MAIN CONTENT ============ */
.account-main {
    min-width: 0;
}

.page-header {
    margin-bottom: 2rem;
}

.page-title {
    font-family: 'Chakra Petch', sans-serif;
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--raven-charcoal);
    margin: 0 0 0.5rem 0;
    text-transform: uppercase;
    letter-spacing: 0.02em;
}

.page-subtitle {
    font-size: 1rem;
    color: var(--raven-gray-500);
    margin: 0;
}

.order-meta-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    flex-wrap: wrap;
}

.order-date-text {
    color: var(--raven-gray-500);
}

/* ============ BACK LINK ============ */
.back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--raven-gray-500);
    text-decoration: none;
    margin-bottom: 1.5rem;
    font-size: 0.9375rem;
    transition: color 0.2s ease;
}

.back-link:hover {
    color: var(--raven-gold-dark);
}

/* ============ STATUS BADGE ============ */
.status-badge {
    font-size: 0.6875rem;
    font-weight: 700;
    padding: 0.375rem 0.75rem;
    border-radius: 20px;
    text-transform: uppercase;
    background: rgba(59, 130, 246, 0.15);
    color: #2563EB;
}

/* ============ ORDERS LIST ============ */
.orders-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
}

.order-card {
    background: var(--raven-white);
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
}

.card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.25rem;
    border-bottom: 1px solid var(--raven-gray-100);
}

.order-meta {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
}

.order-number {
    font-family: 'Chakra Petch', sans-serif;
    font-weight: 600;
    color: var(--raven-charcoal);
}

.order-date {
    font-size: 0.875rem;
    color: var(--raven-gray-500);
}

.card-items {
    padding: 1rem 1.25rem;
}

.item-row {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 0.5rem 0;
}

.item-thumb {
    width: 48px;
    height: 48px;
    border-radius: 10px;
    overflow: hidden;
    background: var(--raven-gray-100);
    flex-shrink: 0;
}

.item-thumb img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.item-label {
    flex: 1;
    font-size: 0.875rem;
    color: var(--raven-charcoal);
}

.item-price {
    font-weight: 600;
    color: var(--raven-charcoal);
}

.more-items {
    text-align: center;
    color: var(--raven-gray-400);
    font-size: 0.8125rem;
    font-style: italic;
    margin: 0.5rem 0 0 0;
}

.card-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.25rem;
    background: var(--raven-gray-50);
    border-top: 1px solid var(--raven-gray-100);
}

.order-total .label {
    font-size: 0.75rem;
    color: var(--raven-gray-500);
    text-transform: uppercase;
    display: block;
}

.order-total .value {
    font-family: 'Chakra Petch', sans-serif;
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--raven-charcoal);
}

.view-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--raven-gold-dark);
    text-decoration: none;
    transition: all 0.2s ease;
}

.view-btn:hover {
    color: var(--raven-gold);
    gap: 0.75rem;
}

/* ============ ORDER DETAIL ============ */
.order-section {
    background: var(--raven-white);
    border-radius: 20px;
    padding: 1.5rem;
    margin-bottom: 1.5rem;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
}

.section-title {
    font-family: 'Chakra Petch', sans-serif;
    font-size: 1rem;
    font-weight: 600;
    color: var(--raven-charcoal);
    margin: 0 0 1rem 0;
    text-transform: uppercase;
    letter-spacing: 0.02em;
}

.order-item-row {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 0;
    border-bottom: 1px solid var(--raven-gray-100);
}

.order-item-row:last-child {
    border-bottom: none;
}

.item-image {
    width: 64px;
    height: 64px;
    border-radius: 12px;
    overflow: hidden;
    background: var(--raven-gray-100);
    flex-shrink: 0;
}

.item-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.item-info {
    flex: 1;
}

.item-name {
    font-weight: 600;
    color: var(--raven-charcoal);
    margin: 0 0 0.25rem 0;
}

.item-qty {
    font-size: 0.75rem;
    color: var(--raven-gray-500);
    margin: 0;
}

.item-prices {
    text-align: right;
}

.unit-price {
    display: block;
    font-size: 0.75rem;
    color: var(--raven-gray-400);
}

.total-price {
    font-weight: 700;
    color: var(--raven-charcoal);
}

/* ============ ORDER SUMMARY ============ */
.summary-row {
    display: flex;
    justify-content: space-between;
    padding: 0.5rem 0;
    color: var(--raven-gray-700);
}

.summary-row.total {
    padding-top: 1rem;
    margin-top: 0.5rem;
    border-top: 2px solid var(--raven-gray-200);
    font-weight: 700;
    color: var(--raven-charcoal);
    font-size: 1.125rem;
}

/* ============ ADDRESSES ============ */
.addresses-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
}

@media (min-width: 640px) {
    .addresses-grid {
        grid-template-columns: repeat(2, 1fr);
    }
}

.address-box {
    background: var(--raven-white);
    border-radius: 20px;
    padding: 1.5rem;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
}

.address-box h3 {
    font-family: 'Chakra Petch', sans-serif;
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--raven-charcoal);
    margin: 0 0 1rem 0;
    text-transform: uppercase;
    padding-bottom: 0.75rem;
    border-bottom: 1px solid var(--raven-gray-100);
}

.address-box p {
    margin: 0.25rem 0;
    color: var(--raven-gray-700);
}

.address-box .address-name {
    font-weight: 600;
    color: var(--raven-charcoal);
}

/* ============ NO ORDERS ============ */
.no-orders {
    text-align: center;
    padding: 4rem 2rem;
    background: var(--raven-white);
    border-radius: 20px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
}

.no-orders svg {
    margin-bottom: 1rem;
    color: var(--raven-gray-300);
}

.no-orders h3 {
    font-family: 'Chakra Petch', sans-serif;
    font-size: 1.5rem;
    color: var(--raven-charcoal);
    margin: 0 0 0.5rem 0;
}

.no-orders p {
    color: var(--raven-gray-500);
    margin: 0 0 2rem 0;
}

.shop-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.875rem 2rem;
    background: linear-gradient(135deg, var(--raven-gold) 0%, var(--raven-gold-light) 50%, var(--raven-gold) 100%);
    background-size: 200% 100%;
    border: 2px solid var(--raven-gold-dark);
    border-radius: 12px;
    color: var(--raven-charcoal);
    font-size: 0.9375rem;
    font-weight: 700;
    text-decoration: none;
    transition: all 0.3s ease;
}

.shop-btn:hover {
    background-position: 100% 0;
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(212, 168, 71, 0.4);
}

/* ============ HIDE DEFAULT ELEMENTS ============ */
.account-content,
