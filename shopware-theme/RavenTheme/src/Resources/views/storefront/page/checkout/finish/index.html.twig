{% sw_extends '@Storefront/storefront/page/checkout/finish/index.html.twig' %}

{% block base_esi_header %}
    <header class="raven-checkout-header">
        <div class="checkout-header-inner">
            <a href="{{ path('frontend.home.page') }}" class="checkout-logo" aria-label="Raven Weapon home">
                <div style="background-image:url('{{ asset('bundles/raventheme/assets/logo.svg') }}');background-size:100% 455%;background-position:left;background-repeat:no-repeat;height:36px;width:160px;"></div>
            </a>
            <a href="{{ path('frontend.home.page') }}" class="back-to-shop-link">Weiter einkaufen</a>
        </div>
    </header>
{% endblock %}

{% block base_esi_footer %}
    <footer class="raven-checkout-footer">
        <div class="checkout-footer-inner">
            <div class="footer-trust">
                <span class="trust-badge">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect><path d="M7 11V7a5 5 0 0 1 10 0v4"></path></svg>
                    SSL-verschlüsselt
                </span>
                <span class="trust-badge">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path></svg>
                    Sicherer Checkout
                </span>
            </div>
            <p class="footer-copyright">&copy; {{ 'now'|date('Y') }} Raven Weapon AG</p>
        </div>
    </footer>
{% endblock %}

{% block page_checkout_finish %}
<style>
/* ============================================
   RAVEN CHECKOUT FINISH - Professional E-commerce
   ============================================ */

* { box-sizing: border-box; }

body.raven-checkout-finish {
    background: #f8fafc !important;
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif !important;
}

/* Header */
.raven-checkout-header {
    background: white;
    border-bottom: 1px solid #e5e7eb;
    padding: 1rem 0;
}

.checkout-header-inner {
    max-width: 1000px;
    margin: 0 auto;
    padding: 0 1.5rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.checkout-contact {
    font-size: 0.875rem;
    color: #6b7280;
}

.checkout-contact a {
    color: #F2B90D;
    font-weight: 600;
    text-decoration: none;
}

.back-to-shop-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: linear-gradient(135deg, #F2B90D, #f59e0b);
    color: #1f2937;
    font-weight: 700;
    font-size: 0.875rem;
    padding: 0.625rem 1.25rem;
    border-radius: 8px;
    text-decoration: none;
    transition: all 0.2s ease;
    box-shadow: 0 4px 12px rgba(242, 185, 13, 0.3);
}

.back-to-shop-link:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 16px rgba(242, 185, 13, 0.4);
    color: #1f2937;
}

/* Progress Steps */
.checkout-progress {
    display: flex;
    align-items: center;
    justify-content: center;
    max-width: 400px;
    margin: 2rem auto;
    padding: 0 1rem;
}

.progress-step {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
}

.step-number {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: #e5e7eb;
    color: #6b7280;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 0.875rem;
}

.progress-step.completed .step-number {
    background: #22c55e;
    color: white;
}

.progress-step.active .step-number {
    background: linear-gradient(135deg, #F2B90D, #f59e0b);
    color: #1f2937;
    box-shadow: 0 4px 12px rgba(242, 185, 13, 0.35);
}

.step-label {
    font-size: 0.75rem;
    color: #6b7280;
    font-weight: 500;
}

.progress-step.active .step-label,
.progress-step.completed .step-label {
    color: #111827;
    font-weight: 600;
}

.progress-line {
    flex: 1;
    height: 2px;
    background: #e5e7eb;
    margin: 0 0.75rem;
    max-width: 60px;
    margin-bottom: 1.5rem;
}

.progress-line.completed {
    background: #22c55e;
}

/* Success Container */
.raven-success-container {
    max-width: 700px;
    margin: 0 auto;
    padding: 1.5rem;
    text-align: center;
}

.raven-success-icon {
    width: 70px;
    height: 70px;
    background: linear-gradient(135deg, #22c55e, #16a34a);
    border-radius: 50%;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1.25rem;
    box-shadow: 0 8px 24px rgba(34, 197, 94, 0.3);
}

.raven-success-icon svg {
    width: 35px;
    height: 35px;
    color: white;
}

.raven-success-title {
    font-family: 'Chakra Petch', sans-serif;
    font-size: 1.75rem;
    font-weight: 700;
    color: #111827;
    margin: 0 0 0.5rem 0;
}

.raven-success-subtitle {
    font-size: 1rem;
    color: #6b7280;
    margin: 0 0 1.5rem 0;
}

.raven-order-number {
    display: inline-block;
    background: white;
    border: 1px solid #e5e7eb;
    border-radius: 12px;
    padding: 0.75rem 1.5rem;
    margin-bottom: 1.5rem;
}

.raven-order-number-label {
    font-size: 0.75rem;
    color: #6b7280;
    margin-bottom: 0.25rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

.raven-order-number-value {
    font-family: 'Chakra Petch', monospace;
    font-size: 1.25rem;
    font-weight: 700;
    color: #111827;
}

/* Bank Transfer Info */
.raven-bank-transfer-info {
    background: linear-gradient(135deg, #fffbeb, #fef3c7);
    border: 2px solid #F2B90D;
    border-radius: 12px;
    padding: 1.25rem;
    margin: 0 auto 1.5rem;
    max-width: 420px;
    text-align: left;
}

.raven-bank-transfer-info h3 {
    font-family: 'Chakra Petch', sans-serif;
    font-size: 1rem;
    font-weight: 700;
    color: #92400e;
    margin: 0 0 0.75rem 0;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.raven-bank-transfer-info h3 svg {
    color: #f59e0b;
}

.bank-transfer-intro {
    font-size: 0.875rem;
    color: #78350f;
    margin: 0 0 0.75rem 0;
}

.bank-details-grid {
    background: white;
    border-radius: 8px;
    overflow: hidden;
    border: 1px solid #fcd34d;
}

.bank-detail-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.625rem 0.875rem;
    border-bottom: 1px solid #fef3c7;
}

.bank-detail-row:last-child {
    border-bottom: none;
}

.bank-detail-row.highlight {
    background: #fef3c7;
}

.bank-detail-label {
    font-size: 0.8125rem;
    color: #78350f;
    font-weight: 500;
}

.bank-detail-value {
    font-size: 0.8125rem;
    color: #1f2937;
    text-align: right;
}

.bank-detail-value strong {
    font-weight: 700;
    color: #111827;
}

.bank-transfer-note {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.75rem;
    color: #92400e;
    margin: 0.75rem 0 0 0;
    padding-top: 0.75rem;
    border-top: 1px dashed #fcd34d;
}

/* Continue Button */
.raven-continue-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: linear-gradient(135deg, #F2B90D, #f59e0b);
    color: #1f2937;
    font-weight: 700;
    border: none;
    border-radius: 10px;
    padding: 0.875rem 1.5rem;
    font-size: 0.9375rem;
    text-decoration: none;
    box-shadow: 0 4px 14px rgba(242, 185, 13, 0.35);
    transition: all 0.2s ease;
    margin-bottom: 2rem;
}

.raven-continue-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(242, 185, 13, 0.45);
    color: #1f2937;
}

/* ============================================
   ORDER DETAILS SECTION
   ============================================ */

.raven-order-details {
    max-width: 700px;
    margin: 0 auto 2rem;
    padding: 0 1.5rem;
}

/* Info Cards Row */
.order-info-row {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1rem;
    margin-bottom: 1.5rem;
}

@media (max-width: 640px) {
    .order-info-row {
        grid-template-columns: 1fr;
    }
}

.info-card {
    background: white;
    border: 1px solid #e5e7eb;
    border-radius: 10px;
    overflow: hidden;
}

.info-card-header {
    font-family: 'Chakra Petch', sans-serif;
    font-size: 0.6875rem;
    font-weight: 600;
    color: #6b7280;
    background: #f9fafb;
    padding: 0.625rem 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border-bottom: 1px solid #e5e7eb;
}

.info-card-body {
    padding: 0.875rem;
    font-size: 0.8125rem;
    color: #374151;
    line-height: 1.5;
}

.info-card-body strong {
    color: #111827;
    font-weight: 600;
}

/* Product Table */
.order-products {
    background: white;
    border: 1px solid #e5e7eb;
    border-radius: 10px;
    overflow: hidden;
    margin-bottom: 1.5rem;
}

.order-products-header {
    font-family: 'Chakra Petch', sans-serif;
    font-size: 0.6875rem;
    font-weight: 600;
    color: #6b7280;
    background: #f9fafb;
    padding: 0.625rem 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border-bottom: 1px solid #e5e7eb;
    display: grid;
    grid-template-columns: 50px 1fr auto auto;
    gap: 0.75rem;
}

.order-products-header .header-menge {
    text-align: center;
    min-width: 40px;
}

.order-products-header .header-preis {
    text-align: right;
    min-width: 90px;
}

.product-item {
    display: grid;
    grid-template-columns: 50px 1fr auto auto;
    gap: 0.75rem;
    padding: 0.875rem;
    align-items: center;
    border-bottom: 1px solid #f3f4f6;
}

.product-item:last-child {
    border-bottom: none;
}

.product-img {
    width: 50px;
    height: 50px;
    object-fit: contain;
    border-radius: 6px;
    background: #f9fafb;
    border: 1px solid #e5e7eb;
}

.product-info {
    min-width: 0;
}

.product-name {
    font-size: 0.8125rem;
    font-weight: 600;
    color: #111827;
    margin: 0 0 0.25rem 0;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.product-sku {
    font-size: 0.6875rem;
    color: #6b7280;
}

.product-qty {
    font-size: 0.8125rem;
    color: #374151;
    text-align: center;
    min-width: 40px;
}

.product-price {
    font-size: 0.875rem;
    font-weight: 600;
    color: #111827;
    text-align: right;
    min-width: 90px;
}

/* Order Summary */
.order-summary {
    background: white;
    border: 1px solid #e5e7eb;
    border-radius: 10px;
    overflow: hidden;
    max-width: 320px;
    margin-left: auto;
}

.order-summary-header {
    font-family: 'Chakra Petch', sans-serif;
    font-size: 0.75rem;
    font-weight: 600;
    color: #111827;
    background: #f9fafb;
    padding: 0.625rem 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.03em;
    border-bottom: 1px solid #e5e7eb;
}

.order-summary-body {
    padding: 0.875rem;
}

.summary-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.375rem 0;
    font-size: 0.8125rem;
}

.summary-row .label {
    color: #6b7280;
}

.summary-row .value {
    color: #111827;
    font-weight: 500;
}

.summary-row.total {
    border-top: 2px solid #111827;
    margin-top: 0.5rem;
    padding-top: 0.625rem;
}

.summary-row.total .label,
.summary-row.total .value {
    font-size: 0.9375rem;
    font-weight: 700;
    color: #111827;
}

/* Footer */
.raven-checkout-footer {
    background: white;
    border-top: 1px solid #e5e7eb;
    padding: 1.25rem 0;
    margin-top: 2rem;
}

.checkout-footer-inner {
    max-width: 1000px;
    margin: 0 auto;
    padding: 0 1.5rem;
    text-align: center;
}

.footer-trust {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
    margin-bottom: 0.75rem;
}

.trust-badge {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.75rem;
    color: #6b7280;
}

.trust-badge svg {
    color: #9ca3af;
}

.footer-copyright {
    font-size: 0.75rem;
    color: #9ca3af;
    margin: 0;
}

/* Hide default Shopware finish page elements */
.finish-order-details,
.checkout-finish-container,
.checkout-aside {
    display: none !important;
}
</style>

{% if page.order is not defined or page.order is null %}
{# Fallback when order not found #}
<div style="max-width: 500px; margin: 4rem auto; text-align: center; padding: 2rem;">
    <div style="width: 70px; height: 70px; background: #f3f4f6; border-radius: 50%; display: inline-flex; align-items: center; justify-content: center; margin-bottom: 1.5rem;">
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="#6b7280" stroke-width="2"><circle cx="12" cy="12" r="10"></circle><line x1="12" y1="8" x2="12" y2="12"></line><line x1="12" y1="16" x2="12.01" y2="16"></line></svg>
    </div>
    <h2 style="font-family: 'Chakra Petch', sans-serif; font-size: 1.5rem; color: #111827; margin: 0 0 0.75rem 0;">Bestellung nicht gefunden</h2>
    <p style="color: #6b7280; margin: 0 0 1.5rem 0;">Diese Bestellung ist nicht mehr verfügbar oder der Link ist abgelaufen.</p>
    <a href="{{ path('frontend.home.page') }}" style="display: inline-flex; align-items: center; gap: 0.5rem; background: linear-gradient(135deg, #F2B90D, #f59e0b); color: #1f2937; font-weight: 700; border-radius: 10px; padding: 0.875rem 1.5rem; text-decoration: none;">
        Zur Startseite
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><line x1="5" y1="12" x2="19" y2="12"></line><polyline points="12 5 19 12 12 19"></polyline></svg>
    </a>
</div>
{% else %}

<div class="raven-success-container">
    {# Success Icon #}
    <div class="raven-success-icon">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="20 6 9 17 4 12"></polyline>
        </svg>
    </div>

    {# Success Message #}
    <h1 class="raven-success-title">Vielen Dank für Ihre Bestellung!</h1>
    <p class="raven-success-subtitle">Bestellbestätigung wurde an Ihre E-Mail gesendet.</p>

    {# Order Number #}
    {% if page.order.orderNumber is defined %}
    <div class="raven-order-number">
        <div class="raven-order-number-label">Bestellnummer</div>
        <div class="raven-order-number-value">#{{ page.order.orderNumber }}</div>
    </div>
    {% endif %}

    {# Bank Transfer Details - Show for prepayment/bank transfer payment methods #}
    {% set paymentMethod = page.order.transactions.first.paymentMethod %}
    {% set paymentName = paymentMethod.translated.name|default('')|lower %}
    {% set paymentShortName = paymentMethod.shortName|default('')|lower %}
    {% set isBankTransfer = paymentShortName matches '/paid_in_advance|prepayment|bank|vorkasse/'
        or paymentName matches '/vorkasse|bank|prepayment|paid in advance|banküberweisung|überweisung/' %}
    {% if paymentMethod and isBankTransfer %}
    <div class="raven-bank-transfer-info">
        <h3>
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <rect x="1" y="4" width="22" height="16" rx="2" ry="2"></rect>
                <line x1="1" y1="10" x2="23" y2="10"></line>
            </svg>
            Zahlungsinformationen
        </h3>
        <p class="bank-transfer-intro">Bitte überweisen Sie den Betrag auf folgendes Konto:</p>
        <div class="bank-details-grid">
            <div class="bank-detail-row">
                <span class="bank-detail-label">Kontoinhaber</span>
                <span class="bank-detail-value">Raven Weapon AG</span>
            </div>
            <div class="bank-detail-row">
                <span class="bank-detail-label">Bank</span>
                <span class="bank-detail-value">PostFinance</span>
            </div>
            <div class="bank-detail-row">
                <span class="bank-detail-label">IBAN</span>
                <span class="bank-detail-value"><strong>CH6009000000165059892</strong></span>
            </div>
            <div class="bank-detail-row">
                <span class="bank-detail-label">BIC/SWIFT</span>
                <span class="bank-detail-value">POFICHBEXXX</span>
            </div>
            <div class="bank-detail-row highlight">
                <span class="bank-detail-label">Verwendungszweck</span>
                <span class="bank-detail-value"><strong>{{ page.order.orderNumber }}</strong></span>
            </div>
        </div>
        <p class="bank-transfer-note">
            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"></circle><line x1="12" y1="16" x2="12" y2="12"></line><line x1="12" y1="8" x2="12.01" y2="8"></line></svg>
            Nach Zahlungseingang wird Ihre Bestellung bearbeitet.
        </p>
    </div>
    {% endif %}

    {# Continue Shopping Button #}
    <a href="{{ path('frontend.home.page') }}" class="raven-continue-btn">
        Weiter einkaufen
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
            <line x1="5" y1="12" x2="19" y2="12"></line>
            <polyline points="12 5 19 12 12 19"></polyline>
        </svg>
    </a>
</div>

{# Custom Order Details #}
<div class="raven-order-details">
    {# Address & Info Row #}
    <div class="order-info-row">
        {# Shipping Address #}
        <div class="info-card">
            <div class="info-card-header">Lieferadresse</div>
            <div class="info-card-body">
                {% set delivery = page.order.deliveries.first %}
                {% if delivery %}
                    <strong>{{ delivery.shippingOrderAddress.firstName }} {{ delivery.shippingOrderAddress.lastName }}</strong><br>
                    {{ delivery.shippingOrderAddress.street }}<br>
                    {{ delivery.shippingOrderAddress.zipcode }} {{ delivery.shippingOrderAddress.city }}<br>
                    {{ delivery.shippingOrderAddress.country.translated.name }}
                {% endif %}
            </div>
        </div>

        {# Billing Address #}
        <div class="info-card">
            <div class="info-card-header">Rechnungsadresse</div>
            <div class="info-card-body">
                {% set billingAddress = page.order.billingAddress %}
                {% if billingAddress %}
                    <strong>{{ billingAddress.firstName }} {{ billingAddress.lastName }}</strong><br>
                    {{ billingAddress.street }}<br>
                    {{ billingAddress.zipcode }} {{ billingAddress.city }}<br>
                    {% if billingAddress.country %}{{ billingAddress.country.translated.name }}{% endif %}
                {% elseif delivery %}
                    <em>Gleich wie Lieferadresse</em>
                {% endif %}
            </div>
        </div>

        {# Payment & Shipping Info #}
        <div class="info-card">
            <div class="info-card-header">Informationen</div>
            <div class="info-card-body">
                {% set paymentName = page.order.transactions.first.paymentMethod.translated.name %}
                <strong>Zahlung:</strong> {{ paymentName == 'Paid in advance' ? 'Vorkasse' : paymentName }}<br>
                <strong>Versand:</strong> {% if page.order.deliveries.first %}{{ page.order.deliveries.first.shippingMethod.translated.name }}{% else %}Standard{% endif %}
            </div>
        </div>
    </div>

    {# Products #}
    <div class="order-products">
        <div class="order-products-header">
            <span></span>
            <span>Produkt</span>
            <span class="header-menge">Menge</span>
            <span class="header-preis">Preis</span>
        </div>
        {% for lineItem in page.order.lineItems %}
        <div class="product-item">
            <img class="product-img" src="{% if lineItem.cover %}{{ lineItem.cover.url }}{% else %}{{ asset('bundles/storefront/assets/icon/default/placeholder.svg') }}{% endif %}" alt="{{ lineItem.label }}">
            <div class="product-info">
                <p class="product-name">{{ lineItem.label }}</p>
                {% if lineItem.payload.productNumber is defined %}
                <p class="product-sku">Art.Nr: {{ lineItem.payload.productNumber }}</p>
                {% endif %}
                {# Display combined variantenDisplay, or fall back to individual fields #}
                {% if lineItem.payload.variantenDisplay is defined and lineItem.payload.variantenDisplay %}
                <p class="product-variant" style="font-size: 0.75rem; color: #059669; font-weight: 600; margin: 0.25rem 0 0 0;">Variante: {{ lineItem.payload.variantenDisplay }}</p>
                {% elseif lineItem.payload.selectedColor is defined and lineItem.payload.selectedColor %}
                <p class="product-variant" style="font-size: 0.75rem; color: #059669; font-weight: 600; margin: 0.25rem 0 0 0;">Variante: {{ lineItem.payload.selectedColor }}</p>
                {% elseif lineItem.payload.selectedSize is defined and lineItem.payload.selectedSize %}
                <p class="product-variant" style="font-size: 0.75rem; color: #059669; font-weight: 600; margin: 0.25rem 0 0 0;">Variante: {{ lineItem.payload.selectedSize }}</p>
                {% endif %}
            </div>
            <div class="product-qty">{{ lineItem.quantity }}</div>
            <div class="product-price">CHF {{ lineItem.totalPrice|number_format(2, '.', "'") }}</div>
        </div>
        {% endfor %}
    </div>

    {# Order Summary #}
    <div class="order-summary">
        <div class="order-summary-header">Zusammenfassung</div>
        <div class="order-summary-body">
            <div class="summary-row">
                <span class="label">Zwischensumme</span>
                <span class="value">CHF {{ page.order.positionPrice|number_format(2, '.', "'") }}</span>
            </div>
            {% for delivery in page.order.deliveries %}
            <div class="summary-row">
                <span class="label">Versand</span>
                <span class="value">CHF {{ delivery.shippingCosts.totalPrice|number_format(2, '.', "'") }}</span>
            </div>
            {% endfor %}
            {# Tax breakdown hidden - GROSS pricing like Lee-Sport #}
            <div class="summary-row total">
                <span class="label">Gesamtsumme</span>
                <span class="value">CHF {{ page.order.amountTotal|number_format(2, '.', "'") }}</span>
            </div>
        </div>
    </div>
</div>
{% endif %}

{% endblock %}

