{% block page_checkout_summary_header %}
    <h2 class="raven-summary-header">Bestelluebersicht</h2>
{% endblock %}

{% block page_checkout_address_products_header %}
    <h2 class="raven-products-header">Warenkorb</h2>
{% endblock %}

