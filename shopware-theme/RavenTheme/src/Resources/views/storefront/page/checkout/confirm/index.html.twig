    });
    document.querySelectorAll('.payment-method-item').forEach(item => {
        item.style.cssText = 'display: block !important; width: 100% !important;';
    });
}

// Call immediately and on load (in case DOM is already ready)
forcePaymentMethodStyles();
if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', forcePaymentMethodStyles);
} else {
