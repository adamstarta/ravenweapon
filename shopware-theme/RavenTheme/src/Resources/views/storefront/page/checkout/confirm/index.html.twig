document.head.appendChild(spinStyle);

// Handle payment method selection and content toggle
function initPaymentMethodToggle() {
    const paymentMethods = document.querySelectorAll('.payment-method-item, .payment-method, .confirm-payment-method');

    paymentMethods.forEach(method => {
        const radio = method.querySelector('input[type="radio"]');
        if (radio) {
            // Initial state - show content for selected payment
            if (radio.checked) {
                showPaymentContent(method);
            }

            // Listen for changes - store state before form submits
            radio.addEventListener('change', function() {
                // Store that payment accordion should be open after redirect
                sessionStorage.setItem('paymentAccordionOpen', 'true');

                // Hide all payment contents
                document.querySelectorAll('.payment-method-content').forEach(content => {
                    content.classList.remove('is-visible');
                });
                document.querySelectorAll('.payment-method-item, .payment-method').forEach(m => {
                    m.classList.remove('is-selected');
                });

                // Show selected payment content
                if (this.checked) {
                    showPaymentContent(method);
                }
            });
        }
    });

    // Scroll to payment section if we came from a payment method change
    const urlParams = new URLSearchParams(window.location.search);
    if (urlParams.has('redirected')) {
        const paymentSection = document.querySelector('.accordion-section:nth-child(3)');
        if (paymentSection) {
            setTimeout(() => {
                paymentSection.scrollIntoView({ behavior: 'smooth', block: 'start' });
            }, 100);
        }
    }
}

function showPaymentContent(method) {
    method.classList.add('is-selected');
    const content = method.querySelector('.payment-method-content');
    if (content) {
        content.classList.add('is-visible');
    }
    // Force full-width styling on payment methods
    forcePaymentMethodStyles();
}

// Force payment method styles to override Shopware defaults
function forcePaymentMethodStyles() {
    document.querySelectorAll('.payment-method').forEach(pm => {
