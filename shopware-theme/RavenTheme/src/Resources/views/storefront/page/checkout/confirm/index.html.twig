{% block base_head %}
    {{ parent() }}
    <style>
        /* =============================================
           RAVEN ONE-PAGE CHECKOUT - Accordion Style
           ============================================= */

        :root {
            --gold: #D4A847;
            --gold-light: #E8C76B;
            --gold-dark: #B8922E;
            --dark: #1A1A1A;
            --gray-900: #111827;
            --gray-700: #374151;
            --gray-500: #6b7280;
            --gray-300: #d1d5db;
            --gray-200: #e5e7eb;
            --gray-100: #f3f4f6;
            --gray-50: #f9fafb;
            --white: #ffffff;
            --red: #dc2626;
            --green: #059669;
        }

        * { box-sizing: border-box; }

        body.is-checkout-confirm {
            background: var(--gray-50) !important;
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
        }

        /* ============ HEADER ============ */
        .raven-checkout-header {
            background: var(--dark);
            padding: 0.875rem 0;
            position: sticky;
            top: 0;
            z-index: 100;
        }

        .checkout-header-inner {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 1.5rem;
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 1rem;
        }

        .checkout-secure-badge {
            display: flex;
            align-items: center;
            gap: 0.375rem;
            padding: 0.375rem 0.75rem;
            background: rgba(212, 168, 71, 0.15);
            border: 1px solid rgba(212, 168, 71, 0.3);
            border-radius: 100px;
            font-size: 0.75rem;
            color: var(--gold);
            font-weight: 500;
        }

        .checkout-back {
            display: flex;
            align-items: center;
            gap: 0.375rem;
            color: rgba(255,255,255,0.7);
            font-size: 0.8125rem;
            text-decoration: none;
            transition: color 0.2s;
        }
        .checkout-back:hover { color: var(--gold); }

        @media (max-width: 640px) {
            .checkout-secure-badge { display: none; }
        }

        /* ============ MAIN LAYOUT ============ */
        .raven-checkout-wrapper {
            max-width: 1200px;
            margin: 0 auto;
            padding: 2rem 1.5rem 3rem;
        }

        .checkout-main-header {
            text-align: center;
            margin-bottom: 2rem;
        }

        .checkout-main-header h1 {
            font-size: 1.75rem;
            font-weight: 600;
            color: var(--gray-900);
            margin: 0 0 0.25rem;
        }

        .checkout-main-header p {
            font-size: 0.875rem;
            color: var(--gray-500);
            margin: 0;
        }

        .checkout-grid {
            display: grid;
            grid-template-columns: 1fr;
            gap: 1.5rem;
        }

        @media (min-width: 1024px) {
            .checkout-grid {
                grid-template-columns: 1fr 400px;
                gap: 2.5rem;
                align-items: start;
            }
        }

        /* ============ ACCORDION SECTIONS ============ */
        .checkout-accordion {
            display: flex;
            flex-direction: column;
            gap: 0.75rem;
        }

        .accordion-section {
            background: var(--white);
            border: 1px solid var(--gray-200);
            border-radius: 12px;
            overflow: hidden;
            transition: all 0.2s ease;
        }

        .accordion-section.is-open {
            border-color: var(--gold);
            box-shadow: 0 4px 20px rgba(212, 168, 71, 0.1);
        }

        .accordion-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 1rem 1.25rem;
            cursor: pointer;
            background: var(--white);
            border: none;
            width: 100%;
            text-align: left;
            transition: background 0.15s;
        }

        .accordion-header:hover {
            background: var(--gray-50);
        }

        .accordion-header-left {
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .accordion-number {
            display: none !important;
        }

        .accordion-title {
            font-size: 1rem;
            font-weight: 600;
            color: var(--gray-900);
            margin: 0;
        }

        .accordion-summary {
            font-size: 0.8125rem;
            color: var(--gray-500);
            margin: 0.125rem 0 0;
        }

        .accordion-chevron {
            width: 20px;
            height: 20px;
            color: var(--gray-400);
            transition: transform 0.2s;
        }

        .accordion-section.is-open .accordion-chevron {
            transform: rotate(180deg);
            color: var(--gold);
        }

        .accordion-content {
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.3s ease;
        }

        .accordion-section.is-open .accordion-content {
            max-height: 2000px;
        }

        .accordion-inner {
            padding: 0 1.25rem 1.25rem;
            border-top: 1px solid var(--gray-100);
        }

        /* ============ ADDRESS DISPLAY ============ */
        .address-box {
            background: var(--gray-50);
            border: 1px solid var(--gray-200);
            border-radius: 8px;
            padding: 1rem;
            font-size: 0.875rem;
            line-height: 1.6;
            color: var(--gray-700);
            margin-top: 1rem;
        }

        .address-box strong {
            color: var(--gray-900);
            display: block;
            margin-bottom: 0.25rem;
        }

        .address-edit {
            display: inline-flex;
            align-items: center;
            gap: 0.25rem;
            margin-top: 0.75rem;
            font-size: 0.8125rem;
            color: var(--gold-dark);
            text-decoration: none;
            font-weight: 500;
        }
        .address-edit:hover { text-decoration: underline; }

        /* ============ PAYMENT & SHIPPING METHODS ============ */
        /* NOTE: These styles are for non-accordion payment methods */
        /* Accordion payment method styles are defined later with .accordion-inner prefix */
        .shipping-methods {
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
            margin-top: 1rem;
        }

        .shipping-method {
            border: 1.5px solid var(--gray-200) !important;
            border-radius: 8px !important;
            overflow: hidden;
            transition: all 0.15s ease;
            background: var(--white) !important;
        }

        .shipping-method:hover {
            border-color: var(--gold) !important;
        }

        .shipping-method.is-active {
            border-color: var(--gold) !important;
            background: rgba(212, 168, 71, 0.04) !important;
        }

        .shipping-method-label {
            padding: 0.875rem 1rem !important;
            display: flex !important;
            align-items: center !important;
            gap: 0.75rem !important;
            cursor: pointer;
        }

        .payment-method input[type="radio"],
        .shipping-method input[type="radio"] {
            width: 18px;
            height: 18px;
            accent-color: var(--gold);
        }

        .payment-method-image, .shipping-method-image {
            width: 40px;
            height: 28px;
            object-fit: contain;
        }

        .payment-method-name, .shipping-method-name {
            font-size: 0.875rem;
            font-weight: 500;
            color: var(--gray-900);
        }

        .payment-method-description, .shipping-method-description {
            font-size: 0.75rem;
            color: var(--gray-500);
        }

        /* ============ ORDER SUMMARY SIDEBAR ============ */
        .order-summary {
            background: var(--white);
            border: 1px solid var(--gray-200);
            border-radius: 12px;
            padding: 1.5rem;
            position: sticky;
            top: 80px;
        }

        .summary-title {
            font-size: 1rem;
            font-weight: 600;
            color: var(--gray-900);
            margin: 0 0 1rem;
            padding-bottom: 1rem;
            border-bottom: 1px solid var(--gray-100);
        }

        .summary-items {
            max-height: 300px;
            overflow-y: auto;
            margin-bottom: 1rem;
        }

        .summary-item {
            display: flex;
            gap: 0.75rem;
            padding: 0.75rem 0;
            border-bottom: 1px solid var(--gray-50);
        }
        .summary-item:last-child { border-bottom: none; }

        .summary-item-image {
            position: relative;
            width: 56px;
            height: 56px;
            flex-shrink: 0;
        }

        .summary-item-image img {
            width: 100%;
            height: 100%;
            object-fit: contain;
            border: 1px solid var(--gray-200);
            border-radius: 6px;
            padding: 4px;
            background: var(--white);
        }

        .summary-item-qty {
            position: absolute;
            top: -6px;
            right: -6px;
            width: 20px;
            height: 20px;
            background: var(--dark);
            color: var(--gold);
            font-size: 0.625rem;
            font-weight: 700;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .summary-item-details {
            flex: 1;
            min-width: 0;
        }

        .summary-item-name {
            font-size: 0.8125rem;
            font-weight: 500;
            color: var(--gray-900);
            margin: 0 0 0.125rem;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

        .summary-item-variant {
            font-size: 0.75rem;
            color: var(--gray-500);
        }

        .summary-item-price {
            font-size: 0.875rem;
            font-weight: 600;
            color: var(--gray-900);
            white-space: nowrap;
        }

        /* Summary totals */
        .summary-totals {
            border-top: 1px solid var(--gray-200);
            padding-top: 1rem;
            margin-top: 0.5rem;
        }

        .summary-row {
            display: flex;
            justify-content: space-between;
            padding: 0.375rem 0;
            font-size: 0.875rem;
            color: var(--gray-600);
        }

        .summary-row.total {
            font-size: 1.125rem;
            font-weight: 700;
            color: var(--gray-900);
            padding-top: 0.75rem;
            margin-top: 0.5rem;
            border-top: 2px solid var(--gray-900);
        }

        .summary-row .includes-tax {
            font-size: 0.75rem;
            color: var(--gray-500);
            font-weight: 400;
        }

        /* ============ TOS CHECKBOX ============ */
        .tos-section {
            background: var(--gray-50);
            border-radius: 8px;
            padding: 1rem;
            margin-top: 1.5rem;
        }

        .tos-checkbox {
            display: flex;
            align-items: flex-start;
            gap: 0.75rem;
        }

        .tos-checkbox input[type="checkbox"] {
            width: 18px;
            height: 18px;
            margin-top: 2px;
            accent-color: var(--gold);
            flex-shrink: 0;
        }

        .tos-checkbox label {
            font-size: 0.8125rem;
            color: var(--gray-700);
            line-height: 1.5;
        }

        .tos-checkbox label a {
            color: var(--gold-dark);
            text-decoration: underline;
        }

        /* ============ SUBMIT BUTTON ============ */
        .checkout-submit-btn {
            width: 100%;
            padding: 1rem 1.5rem;
            background: linear-gradient(135deg, var(--gold) 0%, var(--gold-light) 100%);
            color: var(--dark);
            font-size: 1rem;
            font-weight: 700;
            border: 2px solid var(--gold-dark);
            border-radius: 10px;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            transition: all 0.2s;
            box-shadow: 0 4px 14px rgba(212, 168, 71, 0.3);
            margin-top: 1.5rem;
        }

        .checkout-submit-btn:hover {
            transform: translateY(-1px);
            box-shadow: 0 6px 20px rgba(212, 168, 71, 0.4);
        }

        .checkout-submit-btn:active {
            transform: translateY(0);
        }

        .checkout-submit-btn svg {
            width: 18px;
            height: 18px;
        }

        /* ============ FOOTER ============ */
        .raven-checkout-footer {
            background: var(--dark);
            padding: 1.5rem 0;
            margin-top: 3rem;
        }

        .checkout-footer-inner {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 1.5rem;
        }

        .footer-trust-row {
            display: flex;
            justify-content: center;
            gap: 2rem;
            margin-bottom: 1rem;
            flex-wrap: wrap;
        }

        .trust-item {
            display: flex;
            align-items: center;
            gap: 0.375rem;
            color: rgba(255,255,255,0.7);
            font-size: 0.75rem;
        }

        .trust-item svg { color: var(--gold); }

        .footer-bottom {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding-top: 1rem;
            border-top: 1px solid rgba(255,255,255,0.1);
            font-size: 0.75rem;
            color: rgba(255,255,255,0.5);
            flex-wrap: wrap;
            gap: 0.5rem;
            background: transparent !important;
        }

        .footer-links {
            display: flex;
            gap: 1rem;
        }

        .footer-links a {
            color: rgba(255,255,255,0.5);
            text-decoration: none;
        }
        .footer-links a:hover { color: var(--gold); }

        /* Hide any default footer elements that show as white box */
        .raven-checkout-footer .footer-service-menu,
        .raven-checkout-footer .footer-copyright,
        .raven-checkout-footer .footer-payment-shipping,
        .raven-checkout-footer .footer-vat,
        .raven-checkout-footer .card,
        .raven-checkout-footer .footer-main,
        .footer-main,
        .is-checkout-confirm .footer-main,
        .is-checkout-confirm footer.footer-main,
        .is-checkout-confirm .footer-service-menu,
        .is-checkout-confirm .footer-payment-shipping,
        .is-checkout-confirm .footer-copyright {
            display: none !important;
        }

        /* ============ HIDE DEFAULT ELEMENTS ============ */
        .checkout-main .card {
            border: none !important;
            box-shadow: none !important;
            background: transparent !important;
        }

        .checkout-aside .card {
            border: 1px solid var(--gray-200) !important;
            border-radius: 12px !important;
            box-shadow: none !important;
        }

        /* ============ ACCORDION CONTENT STYLING ============ */
        /* Remove ugly section headers with underlines */
        .accordion-inner .confirm-address-header,
        .accordion-inner .confirm-payment-header,
        .accordion-inner .confirm-shipping-header,
        .accordion-inner .card-title,
        .accordion-inner h5,
        .accordion-inner .h5 {
            font-size: 0.75rem !important;
            font-weight: 600 !important;
            text-transform: uppercase !important;
            letter-spacing: 0.05em !important;
            color: var(--gray-500) !important;
            border: none !important;
            border-bottom: none !important;
            padding: 0 !important;
            margin: 1rem 0 0.75rem !important;
            background: transparent !important;
        }

        /* Address boxes styling */
        .accordion-inner .address-box,
        .accordion-inner .confirm-address,
        .accordion-inner .address-editor-select,
        .accordion-inner .card-body {
            background: transparent !important;
            border: none !important;
            padding: 0 !important;
        }

        .accordion-inner .confirm-address-col {
            background: var(--gray-50) !important;
            border: 1px solid var(--gray-200) !important;
            border-radius: 10px !important;
            padding: 1rem !important;
            margin-bottom: 0.5rem !important;
        }

        .accordion-inner .confirm-address-col:hover {
            border-color: var(--gold) !important;
            background: rgba(212, 168, 71, 0.03) !important;
        }

        /* Address text styling */
        .accordion-inner .confirm-address p,
        .accordion-inner .address-editor-select p,
        .accordion-inner address {
            font-size: 0.875rem !important;
            line-height: 1.6 !important;
            color: var(--gray-700) !important;
            margin: 0 !important;
        }

        /* Change address links */
        .accordion-inner .confirm-address-btn,
        .accordion-inner .address-editor-change,
        .accordion-inner a[href*="address"] {
            display: inline-flex !important;
            align-items: center !important;
            gap: 0.25rem !important;
            font-size: 0.8125rem !important;
            font-weight: 500 !important;
            color: var(--gold-dark) !important;
            text-decoration: none !important;
            margin-top: 0.75rem !important;
            padding: 0.5rem 0.75rem !important;
            background: transparent !important;
            border: 1px solid var(--gold) !important;
            border-radius: 6px !important;
            transition: all 0.15s ease !important;
        }

        .accordion-inner .confirm-address-btn:hover,
        .accordion-inner .address-editor-change:hover,
        .accordion-inner a[href*="address"]:hover {
            background: var(--gold) !important;
            color: var(--dark) !important;
        }

        /* ============ SHIPPING & PAYMENT METHOD OPTIONS ============ */
        /* Clean compact list styling */
        .accordion-inner .shipping-method-list,
        .accordion-inner .payment-method-list,
        .accordion-inner .confirm-shipping-methods,
        .accordion-inner .confirm-payment-methods {
            display: flex !important;
            flex-direction: column !important;
            gap: 0 !important;
            margin-top: 0.5rem !important;
            padding: 0 !important;
            border: 1px solid var(--gray-200) !important;
            border-radius: 10px !important;
            overflow: visible !important;
            background: var(--white) !important;
        }

        /* Individual method option - clean list items */
        .accordion-inner .shipping-method,
        .accordion-inner .confirm-shipping-method,
        .accordion-inner .shipping-method-radio {
            display: flex !important;
            align-items: center !important;
            gap: 0.75rem !important;
            padding: 0.75rem 1rem !important;
            background: var(--white) !important;
            border: none !important;
            border-bottom: 1px solid var(--gray-100) !important;
            border-radius: 0 !important;
            cursor: pointer !important;
            transition: background 0.15s ease !important;
            margin: 0 !important;
            box-shadow: none !important;
            width: 100% !important;
        }

        /* Payment methods - allow vertical expansion for content - NO PADDING */
        /* Using multiple selectors for higher specificity */
        .accordion-inner .payment-method,
        .accordion-inner .confirm-payment-method,
        .accordion-inner .payment-method-radio,
        .accordion-section .accordion-inner .payment-method,
        .accordion-section .accordion-content .accordion-inner .payment-method,
        div.payment-method,
        .payment-methods .payment-method {
            display: block !important;
            padding: 0 !important;
            background: var(--white) !important;
            border: none !important;
            border-bottom: 1px solid var(--gray-100) !important;
            border-radius: 0 !important;
            margin: 0 !important;
            box-shadow: none !important;
            width: 100% !important;
        }

        /* Override any padding on selected payment method - high specificity */
        .accordion-inner .payment-method.is-selected,
        .accordion-inner .payment-method:has(input:checked),
        .payment-methods .payment-method.is-selected,
        .payment-methods .payment-method:has(input:checked),
        div.payment-method.is-selected {
            display: block !important;
            padding: 0 !important;
        }

        .accordion-inner .shipping-method:last-child,
        .accordion-inner .payment-method:last-child,
        .accordion-inner .confirm-shipping-method:last-child,
        .accordion-inner .confirm-payment-method:last-child,
        .accordion-inner .payment-method-radio:last-child,
        .accordion-inner .shipping-method-radio:last-child {
            border-bottom: none !important;
        }

        .accordion-inner .shipping-method:hover,
        .accordion-inner .payment-method:hover,
        .accordion-inner .confirm-shipping-method:hover,
        .accordion-inner .confirm-payment-method:hover,
        .accordion-inner .payment-method-radio:hover,
        .accordion-inner .shipping-method-radio:hover {
            background: var(--gray-50) !important;
        }

        /* Selected/checked state for shipping - subtle highlight */
        .accordion-inner .shipping-method.is-active,
        .accordion-inner .shipping-method:has(input:checked),
        .accordion-inner .confirm-shipping-method:has(input:checked),
        .accordion-inner .shipping-method-radio:has(input:checked) {
            background: rgba(212, 168, 71, 0.08) !important;
            border: none !important;
            box-shadow: none !important;
            outline: none !important;
        }

        /* Payment methods don't get background on container - handled by payment-method-item */
        .accordion-inner .payment-method.is-active,
        .accordion-inner .payment-method:has(input:checked),
        .accordion-inner .confirm-payment-method:has(input:checked),
        .accordion-inner .payment-method-radio:has(input:checked) {
            background: transparent !important;
            border: none !important;
            box-shadow: none !important;
            outline: none !important;
        }

        /* Remove any card styling from payment/shipping method wrappers */
        .accordion-inner .payment-method-radio .card,
        .accordion-inner .shipping-method-radio .card,
        .accordion-inner .payment-method .card,
        .accordion-inner .shipping-method .card,
        .accordion-inner .confirm-payment-method .card,
        .accordion-inner .confirm-shipping-method .card {
            border: none !important;
            box-shadow: none !important;
            background: transparent !important;
            padding: 0 !important;
            margin: 0 !important;
        }

        /* Remove card body styling */
        .accordion-inner .payment-method-radio .card-body,
        .accordion-inner .shipping-method-radio .card-body,
        .accordion-inner .payment-method .card-body,
        .accordion-inner .shipping-method .card-body {
            padding: 0 !important;
            background: transparent !important;
        }

        /* Radio buttons - gold accent */
        .accordion-inner input[type="radio"] {
            width: 18px !important;
            height: 18px !important;
            accent-color: var(--gold) !important;
            margin: 0 !important;
            flex-shrink: 0 !important;
        }

