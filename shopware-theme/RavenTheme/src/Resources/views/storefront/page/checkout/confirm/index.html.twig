                    <div class="tos-checkbox">
                        <input type="checkbox"
                               class="checkout-confirm-tos-checkbox{% if formViolations.getViolations('/tos') is not empty %} is-invalid{% endif %}"
                               required="required"
                               id="tos"
                               form="confirmOrderForm"
                               name="tos">
                        <label for="tos">
                            Ich habe die <a href="/agb" target="_blank">AGB</a>
                            und <a href="/datenschutz" target="_blank">Datenschutzerklärung</a> gelesen und akzeptiere diese.
                        </label>
                    </div>
                </div>

                <button type="submit"
                        class="checkout-submit-btn"
                        form="confirmOrderForm"
                        id="confirmFormSubmit">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path></svg>
                    <span>Jetzt kaufen</span>
                </button>
            </div>
        </div>

        {# Right column: Order Summary #}
        <div class="order-summary">
            <h2 class="summary-title">Bestellübersicht</h2>

            <div class="summary-items">
                {% for lineItem in page.cart.lineItems %}
                <div class="summary-item" data-product-id="{{ lineItem.referencedId }}">
                    <div class="summary-item-image">
                        {% if lineItem.cover %}
                        <img src="{{ lineItem.cover.url }}" alt="{{ lineItem.label }}" class="summary-item-img">
                        {% endif %}
                        <span class="summary-item-qty">{{ lineItem.quantity }}</span>
                    </div>
                    <div class="summary-item-details">
                        <p class="summary-item-name">{{ lineItem.label }}</p>
                        {# Display combined variantenDisplay, or fall back to individual fields #}
                        {% if lineItem.payload.variantenDisplay is defined and lineItem.payload.variantenDisplay %}
                            <p class="summary-item-variant" style="font-size: 0.75rem; color: #6b7280;">{{ lineItem.payload.variantenDisplay }}</p>
                        {% elseif lineItem.payload.selectedColor is defined and lineItem.payload.selectedColor %}
                            <p class="summary-item-variant" style="font-size: 0.75rem; color: #6b7280;">{{ lineItem.payload.selectedColor }}{% if lineItem.payload.selectedSize is defined and lineItem.payload.selectedSize %} / {{ lineItem.payload.selectedSize }}{% endif %}</p>
                        {% elseif lineItem.payload.selectedSize is defined and lineItem.payload.selectedSize %}
                            <p class="summary-item-variant" style="font-size: 0.75rem; color: #6b7280;">{{ lineItem.payload.selectedSize }}</p>
                        {% elseif lineItem.payload.options|length > 0 %}
                            <p class="summary-item-variant" style="font-size: 0.75rem; color: #6b7280;">
                                {% for option in lineItem.payload.options %}
                                    {{ option.option }}{% if not loop.last %}, {% endif %}
                                {% endfor %}
                            </p>
                        {% endif %}
                    </div>
                    <div class="summary-item-price">{{ lineItem.price.totalPrice|currency }}</div>
                </div>
                {% endfor %}
            </div>

            <div class="summary-totals">
                <div class="summary-row">
                    <span>Zwischensumme</span>
                    <span>{{ page.cart.price.positionPrice|currency }}</span>
                </div>
                {% for delivery in page.cart.deliveries %}
                <div class="summary-row">
                    <span>Versand ({{ delivery.shippingMethod.translated.name }})</span>
                    <span>{{ delivery.shippingCosts.totalPrice|currency }}</span>
                </div>
                {% endfor %}
                <div class="summary-row total">
                    <span>Gesamtsumme</span>
                    <span>{{ page.cart.price.totalPrice|currency }}</span>
                </div>
                {# Tax breakdown hidden - GROSS pricing like Lee-Sport (tax included in price) #}
            </div>
        </div>
    </div>
</div>

<script>
function toggleAccordion(sectionId) {
    const sections = document.querySelectorAll('.accordion-section');
    const targetSection = document.querySelector('[data-accordion="' + sectionId + '"]');

    sections.forEach(section => {
        if (section !== targetSection) {
            section.classList.remove('is-open');
        }
    });

    targetSection.classList.toggle('is-open');
}

// Initialize - open accordion (check sessionStorage for payment section after redirect)
document.addEventListener('DOMContentLoaded', function() {
    const sections = document.querySelectorAll('.accordion-section');
    const urlParams = new URLSearchParams(window.location.search);
    const wasRedirected = urlParams.has('redirected') || sessionStorage.getItem('paymentAccordionOpen') === 'true';

    // If we came from a payment method change, open the payment accordion (3rd section)
    if (wasRedirected && sections.length >= 3) {
        sections[2].classList.add('is-open'); // Payment section is 3rd (index 2)
        sessionStorage.removeItem('paymentAccordionOpen');
    } else {
        // Default: open first accordion
        const firstSection = document.querySelector('.accordion-section');
        if (firstSection) {
            firstSection.classList.add('is-open');
        }
    }

    // Payment method toggle functionality
    initPaymentMethodToggle();

    // Make shipping method rows clickable (click on name to select)
    initShippingMethodClick();
});

// ========== SHIPPING METHOD SELECTION ==========
function initShippingMethodClick() {
    // Get all shipping option elements
    const shippingOptions = document.querySelectorAll('.raven-shipping-option');

    shippingOptions.forEach(option => {
        option.addEventListener('click', function(e) {
            // Don't trigger if clicking directly on the radio button
            if (e.target.tagName === 'INPUT') return;

            const radio = this.querySelector('input[type="radio"]');
            if (radio && !radio.checked) {
                // Trigger the radio change
                radio.checked = true;
                radio.dispatchEvent(new Event('change', { bubbles: true }));
            }
        });
    });

    // Listen for radio button changes
    document.querySelectorAll('.raven-shipping-radio').forEach(radio => {
        radio.addEventListener('change', function() {
            if (this.checked) {
                // Update visual state immediately
                document.querySelectorAll('.raven-shipping-option').forEach(opt => {
                    opt.classList.remove('is-selected');
                });
                this.closest('.raven-shipping-option').classList.add('is-selected');

                // Update price highlights
                document.querySelectorAll('.shipping-method-price').forEach(price => {
                    price.classList.remove('is-active-price');
                });
                const priceEl = this.closest('.raven-shipping-option').querySelector('.shipping-method-price');
                if (priceEl) priceEl.classList.add('is-active-price');

                // Submit the shipping form to update cart
                const shippingForm = document.querySelector('#confirmShippingForm');
                if (shippingForm) {
                    // Show loading state
                    showShippingUpdateLoader();

                    // Use AJAX to update shipping method
                    const formData = new FormData();
                    formData.append('shippingMethodId', this.value);

                    fetch(shippingForm.action, {
                        method: 'POST',
                        body: formData,
                        headers: {
                            'X-Requested-With': 'XMLHttpRequest'
                        }
                    }).then(response => {
                        // Reload the page to get updated prices
                        window.location.reload();
                    }).catch(error => {
                        console.error('Shipping update failed:', error);
                        window.location.reload();
                    });
                } else {
                    // Fallback: find any form with shipping and submit
                    const form = this.closest('form');
                    if (form) {
                        form.submit();
                    }
                }
            }
        });
    });

    // Also handle legacy selectors for backwards compatibility
    document.querySelectorAll('.shipping-method, .confirm-shipping-method, .shipping-method-radio').forEach(method => {
        if (!method.classList.contains('raven-shipping-option')) {
            method.style.cursor = 'pointer';
            method.addEventListener('click', function(e) {
                if (e.target.tagName !== 'INPUT') {
                    const radio = this.querySelector('input[type="radio"]');
                    if (radio && !radio.checked) {
                        radio.click();
                    }
                }
            });
        }
    });
}

// Show loading indicator while shipping updates
function showShippingUpdateLoader() {
    const summarySection = document.querySelector('.order-summary');
    if (summarySection) {
        const loader = document.createElement('div');
        loader.className = 'shipping-update-loader';
        loader.innerHTML = '<div style="position:absolute;inset:0;background:rgba(255,255,255,0.8);display:flex;align-items:center;justify-content:center;z-index:10;border-radius:12px;"><svg width="24" height="24" viewBox="0 0 24 24" fill="none" style="animation:spin 1s linear infinite;"><circle cx="12" cy="12" r="10" stroke="#D4A847" stroke-width="3" stroke-linecap="round" stroke-dasharray="32" stroke-dashoffset="12"></circle></svg></div>';
        summarySection.style.position = 'relative';
        summarySection.appendChild(loader);
    }
}

// Add spin animation
const spinStyle = document.createElement('style');
