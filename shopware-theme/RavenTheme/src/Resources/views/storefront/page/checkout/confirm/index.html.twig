{% block base_body_classes %}{{ parent() }} is-checkout-confirm{% endblock %}

{# Single Page Checkout with Accordion Layout #}
{% block page_checkout %}
{# The main order confirmation form #}
<form id="confirmOrderForm"
      action="{{ path('frontend.checkout.finish.order') }}"
      method="post"
      data-form-csrf-handler="true">
</form>

<div class="raven-checkout-wrapper">
    <div class="checkout-main-header">
        <h1>Checkout</h1>
        <p>Alle Informationen auf einen Blick</p>
    </div>

    <div class="checkout-grid">
        {# Left column: Accordion Sections #}
        <div class="checkout-accordion">
            {# 1. Address Section #}
            <div class="accordion-section is-open" data-accordion="address">
                <button type="button" class="accordion-header" onclick="toggleAccordion('address')">
                    <div class="accordion-header-left">
                        <span class="accordion-number">1</span>
                        <div>
                            <h3 class="accordion-title">Lieferadresse</h3>
                            <p class="accordion-summary" id="address-summary">
                                {% if context.customer %}
                                    {{ context.customer.activeBillingAddress.firstName }} {{ context.customer.activeBillingAddress.lastName }}, {{ context.customer.activeBillingAddress.city }}
                                {% endif %}
                            </p>
                        </div>
                    </div>
                    <svg class="accordion-chevron" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="6 9 12 15 18 9"></polyline></svg>
                </button>
                <div class="accordion-content">
                    <div class="accordion-inner">
                        {% sw_include '@Storefront/storefront/page/checkout/confirm/confirm-address.html.twig' %}
                    </div>
                </div>
            </div>

            {# 2. Shipping Section #}
            <div class="accordion-section" data-accordion="shipping">
                <button type="button" class="accordion-header" onclick="toggleAccordion('shipping')">
                    <div class="accordion-header-left">
                        <span class="accordion-number">2</span>
                        <div>
                            <h3 class="accordion-title">Versandart</h3>
                            <p class="accordion-summary" id="shipping-summary">
                                {% if context.shippingMethod %}
                                    {{ context.shippingMethod.translated.name }}
                                {% endif %}
                            </p>
                        </div>
                    </div>
                    <svg class="accordion-chevron" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="6 9 12 15 18 9"></polyline></svg>
                </button>
                <div class="accordion-content">
                    <div class="accordion-inner">
                        {% sw_include '@Storefront/storefront/page/checkout/confirm/confirm-shipping.html.twig' %}
                    </div>
                </div>
            </div>

            {# 3. Payment Section #}
            <div class="accordion-section" data-accordion="payment">
                <button type="button" class="accordion-header" onclick="toggleAccordion('payment')">
                    <div class="accordion-header-left">
                        <span class="accordion-number">3</span>
                        <div>
                            <h3 class="accordion-title">Zahlungsart</h3>
                            <p class="accordion-summary" id="payment-summary">
                                {% if context.paymentMethod %}
                                    {{ context.paymentMethod.translated.name }}
                                {% endif %}
                            </p>
                        </div>
                    </div>
                    <svg class="accordion-chevron" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="6 9 12 15 18 9"></polyline></svg>
                </button>
                <div class="accordion-content">
                    <div class="accordion-inner">
                        {% sw_include '@Storefront/storefront/page/checkout/confirm/confirm-payment.html.twig' %}
                    </div>
                </div>
            </div>

            {# TOS and Submit #}
            <div class="checkout-final-section">
                <div class="tos-section">
                    <div class="tos-checkbox">
                        <input type="checkbox"
                               class="checkout-confirm-tos-checkbox{% if formViolations.getViolations('/tos') is not empty %} is-invalid{% endif %}"
                               required="required"
                               id="tos"
                               form="confirmOrderForm"
                               name="tos">
                        <label for="tos">
                            Ich habe die <a href="{{ path('frontend.cms.page', { id: config('core.basicInformation.tosPage') }) }}" target="_blank">AGB</a>
                            und <a href="{{ path('frontend.cms.page', { id: config('core.basicInformation.privacyPage') }) }}" target="_blank">Datenschutzerklaerung</a> gelesen und akzeptiere diese.
                        </label>
                    </div>
                </div>

                <button type="submit"
                        class="checkout-submit-btn"
                        form="confirmOrderForm"
                        id="confirmFormSubmit">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path></svg>
                    <span>Jetzt kaufen</span>
                </button>
            </div>
        </div>

        {# Right column: Order Summary #}
        <div class="order-summary">
            <h2 class="summary-title">Bestelluebersicht</h2>

            <div class="summary-items">
                {% for lineItem in page.cart.lineItems %}
                <div class="summary-item">
                    <div class="summary-item-image">
                        {% if lineItem.cover %}
                        <img src="{{ lineItem.cover.url }}" alt="{{ lineItem.label }}">
                        {% endif %}
                        <span class="summary-item-qty">{{ lineItem.quantity }}</span>
                    </div>
                    <div class="summary-item-details">
                        <p class="summary-item-name">{{ lineItem.label }}</p>
                        {% if lineItem.payload.options|length > 0 %}
                        <p class="summary-item-variant">
                            {% for option in lineItem.payload.options %}
                                {{ option.option }}{% if not loop.last %}, {% endif %}
                            {% endfor %}
                        </p>
                        {% endif %}
                    </div>
                    <div class="summary-item-price">{{ lineItem.price.totalPrice|currency }}</div>
                </div>
                {% endfor %}
            </div>

            <div class="summary-totals">
                <div class="summary-row">
                    <span>Zwischensumme</span>
                    <span>{{ page.cart.price.positionPrice|currency }}</span>
                </div>
                {% for delivery in page.cart.deliveries %}
                <div class="summary-row">
                    <span>Versand ({{ delivery.shippingMethod.translated.name }})</span>
                    <span>{{ delivery.shippingCosts.totalPrice|currency }}</span>
                </div>
                {% endfor %}
                {% if page.cart.price.calculatedTaxes %}
                <div class="summary-row">
                    <span>inkl. MwSt.</span>
                    <span>{{ page.cart.price.calculatedTaxes.amount|currency }}</span>
                </div>
                {% endif %}
                <div class="summary-row total">
                    <span>Gesamtsumme</span>
                    <span>{{ page.cart.price.totalPrice|currency }}</span>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function toggleAccordion(sectionId) {
    const sections = document.querySelectorAll('.accordion-section');
    const targetSection = document.querySelector('[data-accordion="' + sectionId + '"]');

    sections.forEach(section => {
        if (section !== targetSection) {
            section.classList.remove('is-open');
        }
    });

    targetSection.classList.toggle('is-open');
}

// Initialize - open first accordion by default
document.addEventListener('DOMContentLoaded', function() {
    const firstSection = document.querySelector('.accordion-section');
    if (firstSection) {
        firstSection.classList.add('is-open');
    }
});
</script>
