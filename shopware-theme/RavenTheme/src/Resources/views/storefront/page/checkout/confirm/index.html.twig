{% block base_head %}
    {{ parent() }}
    <style>
        /* =============================================
           RAVEN ONE-PAGE CHECKOUT - Clean & Minimal
           ============================================= */

        :root {
            --gold: #D4A847;
            --gold-light: #E8C76B;
            --gold-dark: #B8922E;
            --dark: #1A1A1A;
            --gray-900: #111827;
            --gray-700: #374151;
            --gray-500: #6b7280;
            --gray-300: #d1d5db;
            --gray-100: #f3f4f6;
            --gray-50: #f9fafb;
            --white: #ffffff;
            --red: #dc2626;
        }

        * { box-sizing: border-box; }

        body.is-checkout-confirm {
            background: var(--gray-50) !important;
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
        }

        /* ============ HEADER ============ */
        .raven-checkout-header {
            background: var(--dark);
            padding: 0.875rem 0;
            position: sticky;
            top: 0;
            z-index: 100;
        }

        .checkout-header-inner {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 1.5rem;
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 1rem;
        }

        .checkout-secure-badge {
            display: flex;
            align-items: center;
            gap: 0.375rem;
            padding: 0.375rem 0.75rem;
            background: rgba(212, 168, 71, 0.15);
            border: 1px solid rgba(212, 168, 71, 0.3);
            border-radius: 100px;
            font-size: 0.75rem;
            color: var(--gold);
            font-weight: 500;
        }

        .checkout-back {
            display: flex;
            align-items: center;
            gap: 0.375rem;
            color: rgba(255,255,255,0.7);
            font-size: 0.8125rem;
            text-decoration: none;
            transition: color 0.2s;
        }
        .checkout-back:hover { color: var(--gold); }

        @media (max-width: 640px) {
            .checkout-secure-badge { display: none; }
        }

        /* ============ MAIN LAYOUT ============ */
        .raven-checkout-wrapper {
            max-width: 1200px;
            margin: 0 auto;
            padding: 2rem 1.5rem 3rem;
        }

        .checkout-main-header {
            text-align: center;
            margin-bottom: 2rem;
        }

        .checkout-main-header h1 {
            font-size: 1.75rem;
            font-weight: 600;
            color: var(--gray-900);
            margin: 0 0 0.25rem;
        }

        .checkout-main-header p {
            font-size: 0.875rem;
            color: var(--gray-500);
            margin: 0;
        }

        .checkout-grid {
            display: grid;
            grid-template-columns: 1fr;
            gap: 1.5rem;
        }

        @media (min-width: 1024px) {
            .checkout-grid {
                grid-template-columns: 1fr 400px;
                gap: 2.5rem;
                align-items: start;
            }
        }

        /* ============ FORM SECTIONS ============ */
        .checkout-section {
            background: var(--white);
            border: 1px solid var(--gray-100);
            border-radius: 12px;
            padding: 1.5rem;
            margin-bottom: 1rem;
        }

        .checkout-section:last-child { margin-bottom: 0; }

        .section-title {
            font-size: 1rem;
            font-weight: 600;
            color: var(--gray-900);
            margin: 0 0 1rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .section-title svg {
            color: var(--gold);
        }

        /* ============ ADDRESS DISPLAY ============ */
        .address-box {
            background: var(--gray-50);
            border: 1px solid var(--gray-200);
            border-radius: 8px;
            padding: 1rem;
            font-size: 0.875rem;
            line-height: 1.6;
            color: var(--gray-700);
        }

        .address-box strong {
            color: var(--gray-900);
            display: block;
            margin-bottom: 0.25rem;
        }

        .address-edit {
            display: inline-flex;
            align-items: center;
            gap: 0.25rem;
            margin-top: 0.75rem;
            font-size: 0.8125rem;
            color: var(--gold-dark);
            text-decoration: none;
            font-weight: 500;
        }
        .address-edit:hover { text-decoration: underline; }

        /* ============ PAYMENT METHODS ============ */
        .payment-methods, .shipping-methods {
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
        }

        .payment-method, .shipping-method {
            border: 1.5px solid var(--gray-200) !important;
            border-radius: 8px !important;
            overflow: hidden;
            transition: all 0.15s ease;
            background: var(--white) !important;
        }

        .payment-method:hover, .shipping-method:hover {
            border-color: var(--gold) !important;
        }

        .payment-method.is-active, .shipping-method.is-active {
            border-color: var(--gold) !important;
            background: rgba(212, 168, 71, 0.04) !important;
        }

        .payment-method-label, .shipping-method-label {
            padding: 0.875rem 1rem !important;
            display: flex !important;
            align-items: center !important;
            gap: 0.75rem !important;
            cursor: pointer;
        }

        .payment-method input[type="radio"],
        .shipping-method input[type="radio"] {
            width: 18px;
            height: 18px;
            accent-color: var(--gold);
        }

        .payment-method-image, .shipping-method-image {
            width: 40px;
            height: 28px;
            object-fit: contain;
        }

        .payment-method-name, .shipping-method-name {
            font-size: 0.875rem;
            font-weight: 500;
            color: var(--gray-900);
        }

        .payment-method-description, .shipping-method-description {
            font-size: 0.75rem;
            color: var(--gray-500);
        }

        /* ============ ORDER SUMMARY SIDEBAR ============ */
        .order-summary {
            background: var(--white);
            border: 1px solid var(--gray-100);
            border-radius: 12px;
            padding: 1.5rem;
            position: sticky;
            top: 80px;
        }

        .summary-title {
            font-size: 1rem;
            font-weight: 600;
            color: var(--gray-900);
            margin: 0 0 1rem;
            padding-bottom: 1rem;
            border-bottom: 1px solid var(--gray-100);
        }

        .summary-items {
            max-height: 300px;
            overflow-y: auto;
            margin-bottom: 1rem;
        }

        .summary-item {
            display: flex;
            gap: 0.75rem;
            padding: 0.75rem 0;
            border-bottom: 1px solid var(--gray-50);
        }
        .summary-item:last-child { border-bottom: none; }

        .summary-item-image {
            position: relative;
            width: 56px;
            height: 56px;
            flex-shrink: 0;
        }

        .summary-item-image img {
            width: 100%;
            height: 100%;
            object-fit: contain;
            border: 1px solid var(--gray-200);
            border-radius: 6px;
            padding: 4px;
            background: var(--white);
        }

        .summary-item-qty {
            position: absolute;
            top: -6px;
            right: -6px;
            width: 20px;
            height: 20px;
            background: var(--dark);
            color: var(--gold);
            font-size: 0.625rem;
            font-weight: 700;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .summary-item-details {
            flex: 1;
            min-width: 0;
        }

        .summary-item-name {
            font-size: 0.8125rem;
            font-weight: 500;
            color: var(--gray-900);
            margin: 0 0 0.125rem;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

        .summary-item-variant {
            font-size: 0.75rem;
            color: var(--gray-500);
        }

        .summary-item-price {
            font-size: 0.875rem;
            font-weight: 600;
            color: var(--gray-900);
            white-space: nowrap;
        }

        /* Summary totals */
        .summary-totals {
            border-top: 1px solid var(--gray-200);
            padding-top: 1rem;
            margin-top: 0.5rem;
        }

        .summary-row {
            display: flex;
            justify-content: space-between;
            padding: 0.375rem 0;
            font-size: 0.875rem;
            color: var(--gray-600);
        }

        .summary-row.total {
            font-size: 1.125rem;
            font-weight: 700;
            color: var(--gray-900);
            padding-top: 0.75rem;
            margin-top: 0.5rem;
            border-top: 2px solid var(--gray-900);
        }

        .summary-row .includes-tax {
            font-size: 0.75rem;
            color: var(--gray-500);
            font-weight: 400;
        }

        /* ============ TOS CHECKBOX ============ */
        .tos-section {
            background: var(--gray-50);
            border-radius: 8px;
            padding: 1rem;
            margin-bottom: 1rem;
        }

        .tos-checkbox {
            display: flex;
            align-items: flex-start;
            gap: 0.75rem;
        }

        .tos-checkbox input[type="checkbox"] {
            width: 18px;
            height: 18px;
            margin-top: 2px;
            accent-color: var(--gold);
            flex-shrink: 0;
        }

        .tos-checkbox label {
            font-size: 0.8125rem;
            color: var(--gray-700);
            line-height: 1.5;
        }

        .tos-checkbox label a {
            color: var(--gold-dark);
            text-decoration: underline;
        }

        /* ============ SUBMIT BUTTON ============ */
        .checkout-submit-btn {
            width: 100%;
            padding: 1rem 1.5rem;
            background: linear-gradient(135deg, var(--gold) 0%, var(--gold-light) 100%);
            color: var(--dark);
            font-size: 1rem;
            font-weight: 700;
            border: 2px solid var(--gold-dark);
            border-radius: 10px;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            transition: all 0.2s;
            box-shadow: 0 4px 14px rgba(212, 168, 71, 0.3);
        }

        .checkout-submit-btn:hover {
            transform: translateY(-1px);
            box-shadow: 0 6px 20px rgba(212, 168, 71, 0.4);
        }

        .checkout-submit-btn:active {
            transform: translateY(0);
        }

        .checkout-submit-btn svg {
            width: 18px;
            height: 18px;
        }

        /* ============ FOOTER ============ */
        .raven-checkout-footer {
            background: var(--dark);
            padding: 1.5rem 0;
            margin-top: 3rem;
        }

        .checkout-footer-inner {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 1.5rem;
        }

        .footer-trust-row {
            display: flex;
            justify-content: center;
            gap: 2rem;
            margin-bottom: 1rem;
            flex-wrap: wrap;
        }

        .trust-item {
            display: flex;
            align-items: center;
            gap: 0.375rem;
            color: rgba(255,255,255,0.7);
            font-size: 0.75rem;
        }

        .trust-item svg { color: var(--gold); }

        .footer-bottom {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding-top: 1rem;
            border-top: 1px solid rgba(255,255,255,0.1);
            font-size: 0.75rem;
            color: rgba(255,255,255,0.5);
            flex-wrap: wrap;
            gap: 0.5rem;
        }

        .footer-links {
            display: flex;
            gap: 1rem;
        }

        .footer-links a {
            color: rgba(255,255,255,0.5);
            text-decoration: none;
        }
        .footer-links a:hover { color: var(--gold); }

        /* ============ HIDE DEFAULT ELEMENTS ============ */
        .checkout-aside-container .card,
        .checkout-aside-container .checkout-aside-summary,
        .checkout-main .confirm-product,
        .confirm-product-table,
        .confirm-main-header,
        .checkout-main .card-body > h2,
        .checkout-container > .row > .col-lg-8 > .card:first-child {
            /* Keep original but style with our classes */
        }

        /* Override Shopware defaults */
        .checkout-main .card {
            border: none !important;
            box-shadow: none !important;
            background: transparent !important;
        }

        .checkout-aside .card {
            border: 1px solid var(--gray-100) !important;
            border-radius: 12px !important;
            box-shadow: none !important;
        }

        /* Forms */
        .form-control, .form-select {
            padding: 0.75rem 1rem;
            border: 1.5px solid var(--gray-300);
            border-radius: 8px;
            font-size: 0.875rem;
            transition: border-color 0.15s, box-shadow 0.15s;
        }

        .form-control:focus, .form-select:focus {
            border-color: var(--gold);
            box-shadow: 0 0 0 3px rgba(212, 168, 71, 0.1);
            outline: none;
        }

        /* Buttons */
        .btn-primary {
            background: linear-gradient(135deg, var(--gold) 0%, var(--gold-light) 100%) !important;
            color: var(--dark) !important;
            font-weight: 600 !important;
            border: 2px solid var(--gold-dark) !important;
            border-radius: 8px !important;
            padding: 0.75rem 1.5rem !important;
            box-shadow: 0 4px 14px rgba(212, 168, 71, 0.3) !important;
        }

        .btn-primary:hover {
            transform: translateY(-1px);
            box-shadow: 0 6px 20px rgba(212, 168, 71, 0.4) !important;
        }

        /* Alerts */
        .alert {
            border-radius: 8px;
            font-size: 0.875rem;
        }

        .alert-danger {
            background: #fef2f2;
            border: 1px solid #fecaca;
            color: var(--red);
        }

        /* ============ MOBILE ============ */
        @media (max-width: 1023px) {
            .order-summary {
                position: relative;
                top: 0;
            }
        }

        @media (max-width: 640px) {
            .raven-checkout-wrapper {
                padding: 1rem;
            }

            .checkout-section {
                padding: 1rem;
            }

            .footer-trust-row {
                gap: 1rem;
            }

            .footer-bottom {
                flex-direction: column;
                text-align: center;
            }
        }
    </style>
{% endblock %}

