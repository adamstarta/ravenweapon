{% sw_extends '@Storefront/storefront/page/checkout/confirm/index.html.twig' %}

{% block page_checkout_confirm %}
<div class="raven-checkout max-w-7xl mx-auto px-6 lg:px-24 py-8 md:py-12">
    {{ parent() }}
</div>
{% endblock %}

{% block page_checkout_confirm_header %}
<h1 class="text-2xl md:text-3xl font-bold text-gray-900 mb-8" style="font-family: 'Chakra Petch', sans-serif;">
    Bestellung abschliessen
</h1>
{% endblock %}

{% block page_checkout_confirm_submit %}
<button type="submit" class="raven-btn-primary w-full justify-center py-3 text-lg" form="confirmOrderForm">
    Zahlungspflichtig bestellen
</button>
{% endblock %}

{% block page_checkout_confirm_tos %}
<div class="checkout-confirm-tos-container mb-6">
    {{ parent() }}
</div>
{% endblock %}

{% block page_checkout_confirm_address %}
<div class="raven-checkout-section bg-white rounded-lg border border-gray-200 p-6 mb-6">
    <h2 class="text-lg font-semibold text-gray-900 mb-4" style="font-family: 'Chakra Petch', sans-serif;">
        Adresse
    </h2>
    {{ parent() }}
</div>
{% endblock %}

{% block page_checkout_confirm_payment %}
<div class="raven-checkout-section bg-white rounded-lg border border-gray-200 p-6 mb-6">
    <h2 class="text-lg font-semibold text-gray-900 mb-4" style="font-family: 'Chakra Petch', sans-serif;">
        Zahlungsart
    </h2>
    {{ parent() }}
</div>
{% endblock %}

{% block page_checkout_confirm_shipping %}
<div class="raven-checkout-section bg-white rounded-lg border border-gray-200 p-6 mb-6">
    <h2 class="text-lg font-semibold text-gray-900 mb-4" style="font-family: 'Chakra Petch', sans-serif;">
        Versandart
    </h2>
    {{ parent() }}
</div>
{% endblock %}

{% block page_checkout_confirm_product_table %}
<div class="raven-checkout-section bg-white rounded-lg border border-gray-200 p-6 mb-6">
    <h2 class="text-lg font-semibold text-gray-900 mb-4" style="font-family: 'Chakra Petch', sans-serif;">
        Ihre Bestellung
    </h2>
    {{ parent() }}
</div>
{% endblock %}
