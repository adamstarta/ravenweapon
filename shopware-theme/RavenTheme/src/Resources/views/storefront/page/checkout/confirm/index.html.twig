// ========== CHECKOUT COLOR UPDATE FUNCTIONALITY ==========
// Read selected colors from localStorage and update checkout summary items
(function() {
    function updateCheckoutColors() {
        document.querySelectorAll('.summary-item[data-product-id]').forEach(function(item) {
            var productId = item.getAttribute('data-product-id');
            if (!productId) return;
            try {
                var colorData = localStorage.getItem('raven_color_' + productId);
                if (!colorData) return;
                var data = JSON.parse(colorData);
                // Update image
                if (data.image) {
                    var img = item.querySelector('.summary-item-img');
                    if (img && img.src !== data.image) {
                        img.src = data.image;
                    }
                }
                // Update color name
                if (data.color) {
                    var colorSpan = item.querySelector('.summary-item-color');
                    if (colorSpan && colorSpan.textContent !== data.color) {
                        colorSpan.textContent = data.color;
                    }
                }
            } catch(e) {
                console.log('Error updating checkout color:', e);
            }
        });
    }
    // Run immediately and after DOM ready
    updateCheckoutColors();
    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', updateCheckoutColors);
    }
    // Also run after short delays to catch any late rendering
    setTimeout(updateCheckoutColors, 100);
    setTimeout(updateCheckoutColors, 300);
})();
