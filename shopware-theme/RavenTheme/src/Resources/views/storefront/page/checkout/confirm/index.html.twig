{% block base_head %}
    {{ parent() }}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        /* ============================================
           RAVEN LUXURY CHECKOUT - Premium Design
           ============================================ */

        :root {
            --raven-gold: #D4A847;
            --raven-gold-light: #E8C76B;
            --raven-gold-dark: #B8922E;
            --raven-charcoal: #1A1A1A;
            --raven-dark: #111111;
            --raven-gray-900: #1f2937;
            --raven-gray-700: #374151;
            --raven-gray-500: #6b7280;
            --raven-gray-300: #d1d5db;
            --raven-gray-100: #f3f4f6;
            --raven-cream: #FDFCF9;
            --raven-white: #ffffff;
        }

        body.is-checkout-confirm {
            background: linear-gradient(180deg, #FDFCF9 0%, #F5F3EE 100%) !important;
            min-height: 100vh;
        }

        /* ============ LUXURY HEADER ============ */
        .raven-checkout-header {
            background: linear-gradient(180deg, var(--raven-charcoal) 0%, var(--raven-dark) 100%);
            padding: 1.25rem 0;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
        }

        .checkout-header-inner {
            max-width: 1280px;
            margin: 0 auto;
            padding: 0 2rem;
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 1.5rem;
        }

        .checkout-secure-badge {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.5rem 1rem;
            background: rgba(212, 168, 71, 0.15);
            border: 1px solid rgba(212, 168, 71, 0.3);
            border-radius: 100px;
            font-size: 0.8125rem;
            color: var(--raven-gold);
            font-weight: 500;
        }

        .checkout-secure-badge svg {
            color: var(--raven-gold);
        }

        .checkout-contact {
            font-size: 0.875rem;
            color: rgba(255, 255, 255, 0.6);
            display: flex;
            align-items: center;
            gap: 0.25rem;
        }

        .checkout-contact a {
            display: flex;
            align-items: center;
            gap: 0.375rem;
            color: var(--raven-white);
            font-weight: 500;
            text-decoration: none;
            transition: color 0.2s;
        }

        .checkout-contact a:hover {
            color: var(--raven-gold);
        }

        /* ============ PROGRESS STEPS - Luxury ============ */
        .checkout-progress {
            display: flex !important;
            align-items: center !important;
            justify-content: center !important;
            max-width: 600px;
            margin: 3rem auto 2.5rem;
            padding: 0 1.5rem;
        }

        .progress-step {
            display: flex !important;
            flex-direction: column !important;
            align-items: center !important;
            gap: 0.75rem;
        }

        .step-number {
            width: 52px !important;
            height: 52px !important;
            min-width: 52px !important;
            min-height: 52px !important;
            border-radius: 50% !important;
            background: var(--raven-white) !important;
            border: 2px solid var(--raven-gray-300) !important;
            color: var(--raven-gray-500) !important;
            display: inline-flex !important;
            align-items: center !important;
            justify-content: center !important;
            font-weight: 600 !important;
            font-size: 1.125rem !important;
            line-height: 1 !important;
            transition: all 0.3s ease !important;
        }

        .progress-step.active .step-number {
            background: linear-gradient(135deg, var(--raven-gold) 0%, var(--raven-gold-light) 100%) !important;
            border: 2px solid var(--raven-gold-dark) !important;
            color: var(--raven-charcoal) !important;
            box-shadow: 0 6px 20px rgba(212, 168, 71, 0.4), 0 0 0 6px rgba(212, 168, 71, 0.1) !important;
        }

        .progress-step.completed .step-number {
            background: var(--raven-charcoal) !important;
            border: 2px solid var(--raven-charcoal) !important;
            color: var(--raven-gold) !important;
        }

        .step-label {
            display: block !important;
            font-size: 0.875rem !important;
            color: var(--raven-gray-500) !important;
            font-weight: 500 !important;
            text-align: center !important;
            letter-spacing: 0.025em !important;
        }

        .progress-step.active .step-label {
            color: var(--raven-charcoal) !important;
            font-weight: 600 !important;
        }

        .progress-step.completed .step-label {
            color: var(--raven-charcoal) !important;
            font-weight: 600 !important;
        }

        .progress-line {
            flex: 1 !important;
            height: 2px !important;
            background: var(--raven-gray-300) !important;
            margin: 0 1.25rem !important;
            max-width: 100px;
            margin-bottom: 2rem !important;
            position: relative;
        }

        .progress-line.completed {
            background: var(--raven-charcoal) !important;
        }

        /* ============ LUXURY FOOTER ============ */
        .raven-checkout-footer {
            background: linear-gradient(180deg, var(--raven-charcoal) 0%, var(--raven-dark) 100%);
            padding: 3rem 0 2rem;
            margin-top: 4rem;
        }

        .checkout-footer-inner {
            max-width: 1280px;
            margin: 0 auto;
            padding: 0 2rem;
        }

        .footer-trust {
            display: flex;
            justify-content: center;
            gap: 3rem;
            margin-bottom: 2.5rem;
            flex-wrap: wrap;
        }

        .footer-trust .trust-badge {
            display: flex;
            align-items: center;
            gap: 0.875rem;
            padding: 1rem 1.5rem;
            background: rgba(255, 255, 255, 0.03);
            border: 1px solid rgba(255, 255, 255, 0.08);
            border-radius: 12px;
        }

        .footer-trust .trust-badge svg {
            color: var(--raven-gold);
            flex-shrink: 0;
        }

        .footer-trust .trust-badge div {
            display: flex;
            flex-direction: column;
            gap: 0.125rem;
        }

        .footer-trust .trust-badge strong {
            color: var(--raven-white);
            font-size: 0.875rem;
            font-weight: 600;
        }

        .footer-trust .trust-badge span {
            color: rgba(255, 255, 255, 0.5);
            font-size: 0.75rem;
        }

        .footer-bottom {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding-top: 1.5rem;
            border-top: 1px solid rgba(255, 255, 255, 0.08);
            flex-wrap: wrap;
            gap: 1rem;
        }

        .footer-copyright {
            font-size: 0.8125rem;
            color: rgba(255, 255, 255, 0.5);
            margin: 0;
        }

        .footer-links {
            display: flex;
            gap: 1.5rem;
        }

        .footer-links a {
            font-size: 0.8125rem;
            color: rgba(255, 255, 255, 0.5);
            text-decoration: none;
            transition: color 0.2s;
        }

        .footer-links a:hover {
            color: var(--raven-gold);
        }

        /* ============ WRAPPER ============ */
        .raven-checkout-wrapper {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
        }

        /* ============ FORM INPUTS - Luxury ============ */
        .raven-checkout-wrapper .form-control,
        .raven-checkout-wrapper .form-select,
        .raven-checkout-wrapper select.form-control {
            padding: 0.9375rem 1.125rem;
            border: 1.5px solid var(--raven-gray-300);
            border-radius: 10px;
            font-size: 0.9375rem;
            background: var(--raven-white);
            transition: all 0.25s ease;
        }

        .raven-checkout-wrapper .form-control:focus,
        .raven-checkout-wrapper .form-select:focus {
            border-color: var(--raven-gold);
            box-shadow: 0 0 0 4px rgba(212, 168, 71, 0.12);
            outline: none;
        }

        /* ============ SECTION CARDS - Premium ============ */
        .raven-checkout-section {
            background: var(--raven-white);
            border: 1px solid rgba(0, 0, 0, 0.06);
            border-radius: 16px;
            padding: 2rem;
            margin-bottom: 1.75rem;
            box-shadow: 0 4px 24px rgba(0, 0, 0, 0.04);
            transition: box-shadow 0.3s ease;
        }

        .raven-checkout-section:hover {
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.06);
        }

        .raven-checkout-section h2,
        .raven-section-title {
            font-family: 'Playfair Display', serif;
            font-size: 1.375rem;
            font-weight: 600;
            color: var(--raven-charcoal);
            margin: 0 0 1.25rem 0;
            letter-spacing: -0.01em;
        }

        /* ============ PAYMENT/SHIPPING METHODS - Luxury ============ */
        .raven-checkout-wrapper .payment-method,
        .raven-checkout-wrapper .shipping-method {
            border: 1.5px solid var(--raven-gray-300);
            border-radius: 12px;
            margin-bottom: 0.875rem;
            overflow: hidden;
            transition: all 0.25s ease;
        }

        .raven-checkout-wrapper .payment-method .payment-method-label,
        .raven-checkout-wrapper .shipping-method .shipping-method-label {
            padding: 1.125rem 1.25rem;
            display: flex;
            align-items: center;
            gap: 0.875rem;
            cursor: pointer;
            transition: background 0.25s;
        }

        .raven-checkout-wrapper .payment-method:hover,
        .raven-checkout-wrapper .shipping-method:hover {
            border-color: var(--raven-gold);
            box-shadow: 0 2px 12px rgba(212, 168, 71, 0.1);
        }

        .raven-checkout-wrapper .payment-method.is-active,
        .raven-checkout-wrapper .shipping-method.is-active {
            border-color: var(--raven-gold);
            background: linear-gradient(135deg, rgba(212, 168, 71, 0.04) 0%, rgba(232, 199, 107, 0.04) 100%);
            box-shadow: 0 4px 16px rgba(212, 168, 71, 0.12);
        }

        .raven-checkout-wrapper input[type="radio"] {
            accent-color: var(--raven-gold);
            width: 20px;
            height: 20px;
        }

        /* ============ ADDRESS CARDS ============ */
        .raven-address-card {
            background: linear-gradient(135deg, var(--raven-gray-100) 0%, var(--raven-cream) 100%);
            border: 1px solid var(--raven-gray-300);
            border-radius: 12px;
            padding: 1.25rem;
            margin-bottom: 1rem;
        }

        .raven-address-card .address-name {
            font-weight: 600;
            color: var(--raven-charcoal);
            margin-bottom: 0.5rem;
        }

        .raven-address-card .address-details {
            font-size: 0.875rem;
            color: var(--raven-gray-700);
            line-height: 1.7;
        }

        /* ============ TOS CHECKBOX ============ */
        .raven-checkout-wrapper .checkout-confirm-tos-label {
            font-size: 0.9375rem;
            color: var(--raven-gray-700);
            line-height: 1.6;
        }

        .raven-checkout-wrapper .checkout-confirm-tos-label a {
            color: var(--raven-gold-dark);
            font-weight: 500;
            text-decoration: underline;
            text-decoration-color: rgba(212, 168, 71, 0.3);
            transition: text-decoration-color 0.2s;
        }

        .raven-checkout-wrapper .checkout-confirm-tos-label a:hover {
            text-decoration-color: var(--raven-gold);
        }

        .raven-checkout-wrapper .form-check-input {
            accent-color: var(--raven-gold);
            width: 20px;
            height: 20px;
            margin-top: 0.25rem;
        }

        /* ============ CART SUMMARY ============ */
        .raven-summary-section {
            background: var(--raven-white);
            border: 1px solid rgba(0, 0, 0, 0.06);
            border-radius: 16px;
            padding: 1.75rem;
            box-shadow: 0 4px 24px rgba(0, 0, 0, 0.04);
        }

        .raven-summary-item {
            display: flex;
            gap: 1rem;
            padding: 1rem 0;
            border-bottom: 1px solid var(--raven-gray-100);
        }

        .raven-summary-item:last-child {
            border-bottom: none;
        }

        .raven-summary-image {
            position: relative;
            width: 72px;
            height: 72px;
            flex-shrink: 0;
        }

        .raven-summary-image img {
            width: 100%;
            height: 100%;
            object-fit: contain;
            border: 1px solid var(--raven-gray-300);
            border-radius: 10px;
            padding: 0.375rem;
            background: var(--raven-white);
        }

        .raven-summary-qty {
            position: absolute;
            top: -8px;
            left: -8px;
            width: 24px;
            height: 24px;
            background: var(--raven-charcoal);
            color: var(--raven-gold);
            font-size: 0.75rem;
            font-weight: 700;
            border-radius: 9999px;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
        }

        /* ============ TOTALS ============ */
        .raven-totals {
            border-top: 1px solid var(--raven-gray-300);
            padding-top: 1.25rem;
            margin-top: 1.25rem;
        }

        .raven-total-row {
            display: flex;
            justify-content: space-between;
            padding: 0.5rem 0;
            font-size: 0.9375rem;
            color: var(--raven-gray-700);
        }

        .raven-total-row.total {
            font-family: 'Playfair Display', serif;
            font-size: 1.375rem;
            font-weight: 600;
            color: var(--raven-charcoal);
            padding-top: 1rem;
            margin-top: 0.75rem;
            border-top: 2px solid var(--raven-charcoal);
        }

        /* ============ LUXURY SUBMIT BUTTON ============ */
        .raven-btn-primary,
        .raven-checkout-wrapper .btn-primary,
        .raven-checkout-wrapper .begin-checkout-btn {
            background: linear-gradient(135deg, var(--raven-gold) 0%, var(--raven-gold-light) 50%, var(--raven-gold) 100%) !important;
            background-size: 200% 100% !important;
            color: var(--raven-charcoal) !important;
            font-weight: 700 !important;
            border: 2px solid var(--raven-gold-dark) !important;
            border-radius: 12px !important;
            padding: 1.125rem 2rem !important;
            font-size: 1.0625rem !important;
            letter-spacing: 0.025em !important;
            box-shadow: 0 6px 20px rgba(212, 168, 71, 0.35), inset 0 1px 0 rgba(255, 255, 255, 0.3) !important;
            transition: all 0.3s ease !important;
            position: relative;
            overflow: hidden;
        }

        .raven-btn-primary:hover,
        .raven-checkout-wrapper .btn-primary:hover {
            background-position: 100% 0 !important;
            box-shadow: 0 8px 28px rgba(212, 168, 71, 0.45), inset 0 1px 0 rgba(255, 255, 255, 0.3) !important;
            transform: translateY(-2px);
        }

        .raven-btn-primary:active,
        .raven-checkout-wrapper .btn-primary:active {
            transform: translateY(0);
            box-shadow: 0 4px 16px rgba(212, 168, 71, 0.35), inset 0 1px 0 rgba(255, 255, 255, 0.3) !important;
        }

        /* ============ MAIN HEADER ============ */
        .confirm-main-header {
            font-family: 'Playfair Display', serif !important;
            font-size: 2.25rem !important;
            font-weight: 600 !important;
            color: var(--raven-charcoal) !important;
            margin-bottom: 2rem !important;
            letter-spacing: -0.02em !important;
        }

        /* ============ CARD OVERRIDES ============ */
        .raven-checkout-wrapper .card,
        .raven-checkout-wrapper .checkout-card {
            border: 1px solid rgba(0, 0, 0, 0.06) !important;
            border-radius: 16px !important;
            box-shadow: 0 4px 24px rgba(0, 0, 0, 0.04) !important;
            overflow: hidden;
        }

        .raven-checkout-wrapper .card-body {
            padding: 2rem !important;
        }

        .raven-checkout-wrapper .card-title {
            font-family: 'Playfair Display', serif !important;
            font-size: 1.25rem !important;
            font-weight: 600 !important;
            color: var(--raven-charcoal) !important;
            margin-bottom: 1.25rem !important;
        }

        /* ============ LINE ITEMS ============ */
        .raven-checkout-wrapper .line-item-row {
            border-bottom: 1px solid var(--raven-gray-100);
            padding: 1.25rem 0;
        }

        .raven-checkout-wrapper .line-item-img {
            border-radius: 10px;
            border: 1px solid var(--raven-gray-300);
        }

        /* ============ ALERTS ============ */
        .raven-checkout-wrapper .alert {
            border-radius: 12px;
            border: none;
            padding: 1rem 1.25rem;
        }

        /* ============ COUPON FORM ============ */
        .raven-coupon-form {
            display: flex;
            gap: 0.625rem;
            margin: 1.25rem 0;
        }

        .raven-coupon-form input {
            flex: 1;
            padding: 0.875rem 1.125rem;
            border: 1.5px solid var(--raven-gray-300);
            border-radius: 10px;
            font-size: 0.9375rem;
            transition: border-color 0.2s, box-shadow 0.2s;
        }

        .raven-coupon-form input:focus {
            border-color: var(--raven-gold);
            box-shadow: 0 0 0 4px rgba(212, 168, 71, 0.12);
            outline: none;
        }

        .raven-coupon-form button {
            padding: 0.875rem 1.25rem;
            border: 1.5px solid var(--raven-charcoal);
            border-radius: 10px;
            background: var(--raven-charcoal);
            color: var(--raven-white);
            font-weight: 600;
            font-size: 0.875rem;
            cursor: pointer;
            transition: all 0.2s;
        }

        .raven-coupon-form button:hover {
            background: var(--raven-gold);
            border-color: var(--raven-gold);
            color: var(--raven-charcoal);
        }

        /* ============ CHECKOUT LAYOUT ============ */
        .checkout-main {
            background: transparent !important;
        }

        @media (min-width: 992px) {
            .checkout-container .row {
                display: grid;
                grid-template-columns: 1fr minmax(360px, 440px);
                gap: 3rem;
            }

            .checkout-aside {
                padding-left: 2.5rem;
                border-left: 1px solid rgba(0, 0, 0, 0.06);
            }

            .checkout-aside-container {
                position: sticky;
                top: 2rem;
            }
        }

        /* ============ ANIMATIONS ============ */
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(16px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .raven-checkout-section {
            animation: fadeInUp 0.5s ease-out forwards;
        }

        .raven-checkout-section:nth-child(1) { animation-delay: 0.1s; }
        .raven-checkout-section:nth-child(2) { animation-delay: 0.15s; }
        .raven-checkout-section:nth-child(3) { animation-delay: 0.2s; }
        .raven-checkout-section:nth-child(4) { animation-delay: 0.25s; }

        /* ============ RESPONSIVE ============ */
        @media (max-width: 767px) {
            .checkout-header-inner {
                flex-wrap: wrap;
                justify-content: center;
                text-align: center;
            }

            .checkout-secure-badge {
                order: 3;
                margin-top: 0.75rem;
            }

            .footer-trust {
                gap: 1rem;
            }

