{% sw_extends '@Storefront/storefront/page/error/_page.html.twig' %}

{% block base_content %}
    <main class="content-main">
        {% block not_found_error_content %}
            <div class="container mt-5">
                <img src="{{ asset('assets/illustration/404_error.svg', 'theme') }}"
                     alt="Seite nicht gefunden"
                     class="rounded mx-auto d-block w-75">

                <h1 class="mt-5 text-center">Seite nicht gefunden</h1>
                <p class="text-center w-60-l">Es tut uns leid, die gesuchte Seite konnte nicht gefunden werden. Sie existiert möglicherweise nicht mehr oder wurde verschoben.</p>

                {% block not_found_error_return %}
                    <div class="text-center">
                        <a href="{{ path('frontend.home.page') }}"
                           class="btn btn-primary justify-center">
                            Zurück zum Shop
                        </a>
                    </div>
                {% endblock %}
            </div>
        {% endblock %}
    </main>
{% endblock %}
