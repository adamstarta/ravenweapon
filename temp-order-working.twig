{% sw_extends '@Storefront/storefront/page/account/_page.html.twig' %}

{% block page_account_main_content %}
<div class="raven-account-dashboard">
    <div class="account-container">
        {# Sidebar #}
        <aside class="account-sidebar">
            <div class="sidebar-header">
                <div class="user-avatar">
                    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                        <circle cx="12" cy="8" r="4"/>
                        <path d="M4 21v-1a4 4 0 0 1 4-4h8a4 4 0 0 1 4 4v1"/>
                    </svg>
                </div>
                <div class="user-info">
                    <p class="user-greeting">Willkommen zurück</p>
                    <h3 class="user-name">{{ context.customer.firstName }} {{ context.customer.lastName }}</h3>
                </div>
            </div>

            <nav class="sidebar-nav">
                <a href="{{ path('frontend.account.home.page') }}" class="nav-item">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <rect x="3" y="3" width="7" height="7"></rect>
                        <rect x="14" y="3" width="7" height="7"></rect>
                        <rect x="14" y="14" width="7" height="7"></rect>
                        <rect x="3" y="14" width="7" height="7"></rect>
                    </svg>
                    Übersicht
                </a>
                <a href="{{ path('frontend.account.profile.page') }}" class="nav-item">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                        <circle cx="12" cy="7" r="4"></circle>
                    </svg>
                    Mein Profil
                </a>
                <a href="{{ path('frontend.account.address.page') }}" class="nav-item">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                        <circle cx="12" cy="10" r="3"></circle>
                    </svg>
                    Adressen
                </a>
                <a href="{{ path('frontend.account.order.page') }}" class="nav-item active">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"></path>
                        <line x1="3" y1="6" x2="21" y2="6"></line>
                        <path d="M16 10a4 4 0 0 1-8 0"></path>
                    </svg>
                    Bestellungen
                </a>
            </nav>

            <div class="sidebar-footer">
                <a href="{{ path('frontend.account.logout.page') }}" class="logout-btn">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
                        <polyline points="16 17 21 12 16 7"></polyline>
                        <line x1="21" y1="12" x2="9" y2="12"></line>
                    </svg>
                    Abmelden
                </a>
            </div>
        </aside>

        {# Main Content #}
        <main class="account-main">
            {% if page.deepLinkCode and page.orders.elements|length > 0 %}
            {% set order = page.orders.elements|first %}
            {# ============ SINGLE ORDER DETAIL VIEW ============ #}
            <div class="page-header">
                <a href="{{ path('frontend.account.order.page') }}" class="back-link">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polyline points="15 18 9 12 15 6"></polyline>
                    </svg>
                    Zurück zu Bestellungen
                </a>
                <h1 class="page-title">Bestellung #{{ order.orderNumber }}</h1>
                <p class="page-subtitle">{{ order.orderDateTime|date('d.m.Y H:i') }}</p>
            </div>

            <div class="orders-section">
                <div class="section-card">
                    <div class="order-detail-header">
                        <div class="order-status-info">
                            {% set stateName = order.stateMachineState.translated.name|default('Unbekannt') %}
                            <span class="status-badge">{{ stateName }}</span>
                        </div>
                    </div>

                    <div class="order-detail-items">
                        <h3 class="detail-section-title">Bestellte Artikel</h3>
                        {% for lineItem in order.lineItems %}
                        <div class="order-detail-item">
                            <div class="item-image">
                                {% if lineItem.cover %}
                                    <img src="{{ lineItem.cover.url }}" alt="{{ lineItem.label }}">
                                {% else %}
                                    <div class="no-image">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                                            <circle cx="8.5" cy="8.5" r="1.5"></circle>
                                            <polyline points="21 15 16 10 5 21"></polyline>
                                        </svg>
                                    </div>
                                {% endif %}
                            </div>
                            <div class="item-details">
                                <p class="item-name">{{ lineItem.label }}</p>
                                <p class="item-quantity">Menge: {{ lineItem.quantity }}</p>
                            </div>
                            <div class="item-prices">
                                <span class="item-unit-price">CHF {{ lineItem.unitPrice|number_format(2, '.', ' ') }}</span>
                                <span class="item-total-price">CHF {{ lineItem.totalPrice|number_format(2, '.', ' ') }}</span>
                            </div>
                        </div>
                        {% endfor %}
                    </div>

                    <div class="order-detail-summary">
                        <div class="summary-row">
                            <span>Zwischensumme</span>
                            <span>CHF {{ order.price.positionPrice|number_format(2, '.', ' ') }}</span>
                        </div>
                        {% for delivery in order.deliveries %}
                        <div class="summary-row">
                            <span>Versand</span>
                            <span>CHF {{ delivery.shippingCosts.totalPrice|number_format(2, '.', ' ') }}</span>
                        </div>
                        {% endfor %}
                        <div class="summary-row total-row">
                            <span>Gesamtsumme</span>
                            <span>CHF {{ order.amountTotal|number_format(2, '.', ' ') }}</span>
                        </div>
                    </div>
                </div>

                <div class="order-detail-addresses">
                    <div class="address-card">
                        <h3 class="address-title">Rechnungsadresse</h3>
                        <div class="address-content">
                            <p>{{ order.billingAddress.firstName }} {{ order.billingAddress.lastName }}</p>
                            <p>{{ order.billingAddress.street }}</p>
                            <p>{{ order.billingAddress.zipcode }} {{ order.billingAddress.city }}</p>
                            <p>{{ order.billingAddress.country.translated.name }}</p>
                        </div>
                    </div>
                    {% for delivery in order.deliveries %}
                    <div class="address-card">
                        <h3 class="address-title">Lieferadresse</h3>
                        <div class="address-content">
                            <p>{{ delivery.shippingOrderAddress.firstName }} {{ delivery.shippingOrderAddress.lastName }}</p>
                            <p>{{ delivery.shippingOrderAddress.street }}</p>
                            <p>{{ delivery.shippingOrderAddress.zipcode }} {{ delivery.shippingOrderAddress.city }}</p>
                            <p>{{ delivery.shippingOrderAddress.country.translated.name }}</p>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>

            {% else %}
            {# ============ ORDERS LIST VIEW ============ #}
            <div class="page-header">
                <h1 class="page-title">Meine Bestellungen</h1>
                <p class="page-subtitle">Übersicht aller Ihrer Bestellungen</p>
            </div>

            <div class="orders-section">
                <div class="section-card">
                    {% if page.orders.elements|length > 0 %}
                    <div class="orders-list">
                        {% for order in page.orders %}
                        <div class="order-card">
                            <div class="order-header">
                                <div class="order-info">
                                    <div class="order-number">
                                        <span class="label">Bestellnummer</span>
                                        <span class="value">#{{ order.orderNumber }}</span>
                                    </div>
                                    <div class="order-date">
                                        <span class="label">Bestelldatum</span>
                                        <span class="value">{{ order.orderDateTime|date('d.m.Y H:i') }}</span>
                                    </div>
                                </div>
                                <div class="order-status">
                                    {% set stateName = order.stateMachineState.translated.name|default('Unbekannt') %}
                                    <span class="status-badge">{{ stateName }}</span>
                                </div>
                            </div>

                            <div class="order-items">
                                {% for lineItem in order.lineItems|slice(0, 3) %}
                                <div class="order-item">
                                    <div class="item-image">
                                        {% if lineItem.cover %}
                                            <img src="{{ lineItem.cover.url }}" alt="{{ lineItem.label }}">
                                        {% else %}
                                            <div class="no-image">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                    <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                                                    <circle cx="8.5" cy="8.5" r="1.5"></circle>
                                                    <polyline points="21 15 16 10 5 21"></polyline>
                                                </svg>
                                            </div>
                                        {% endif %}
                                    </div>
                                    <div class="item-details">
                                        <p class="item-name">{{ lineItem.label }}</p>
                                        <p class="item-quantity">Menge: {{ lineItem.quantity }}</p>
                                    </div>
                                    <div class="item-price">CHF {{ lineItem.totalPrice|number_format(2, '.', ' ') }}</div>
                                </div>
                                {% endfor %}
                                {% if order.lineItems|length > 3 %}
                                <div class="more-items">
                                    +{{ order.lineItems|length - 3 }} weitere Artikel
                                </div>
                                {% endif %}
                            </div>

                            <div class="order-footer">
                                <div class="order-total">
                                    <span class="total-label">Gesamtsumme</span>
                                    <span class="total-value">CHF {{ order.amountTotal|number_format(2, '.', ' ') }}</span>
                                </div>
                                <div class="order-actions">
                                    <a href="{{ path('frontend.account.order.single.page', { deepLinkCode: order.deepLinkCode }) }}" class="btn-view-order">
                                        Details anzeigen
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <polyline points="9 18 15 12 9 6"></polyline>
                                        </svg>
                                    </a>
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                    {% else %}
                    <div class="no-orders">
                        <h3 class="no-orders-title">Noch keine Bestellungen</h3>
                        <p class="no-orders-text">Sobald Sie eine Bestellung aufgeben, wird sie hier angezeigt.</p>
                        <a href="{{ path('frontend.home.page') }}" class="btn-primary">Jetzt einkaufen</a>
                    </div>
                    {% endif %}
                </div>
            </div>
            {% endif %}
        </main>
    </div>
</div>

<style>
:root {
    --raven-gold: #D4A847;
    --raven-gold-light: #E8C76B;
    --raven-gold-dark: #B8922E;
    --raven-charcoal: #1A1A1A;
    --raven-gray-700: #374151;
    --raven-gray-500: #6b7280;
    --raven-gray-400: #9ca3af;
    --raven-gray-300: #d1d5db;
    --raven-gray-100: #f3f4f6;
    --raven-gray-50: #f9fafb;
    --raven-cream: #FDFCF9;
    --raven-white: #ffffff;
}

.raven-account-dashboard {
    min-height: calc(100vh - 200px);
    background: linear-gradient(180deg, var(--raven-cream) 0%, #F5F3EE 100%);
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
    padding: 2rem 1rem;
}

@media (min-width: 768px) {
    .raven-account-dashboard { padding: 3rem 2rem; }
}

.account-container {
    max-width: 1400px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
}

@media (min-width: 1024px) {
    .account-container { grid-template-columns: 280px 1fr; gap: 3rem; }
}

.account-sidebar {
    background: var(--raven-white);
    border-radius: 20px;
    padding: 1.5rem;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
    height: fit-content;
}

@media (min-width: 1024px) {
    .account-sidebar { position: sticky; top: 2rem; }
}

.sidebar-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--raven-gray-100);
    margin-bottom: 1.5rem;
}

.user-avatar {
    width: 56px;
    height: 56px;
    background: linear-gradient(135deg, var(--raven-gold) 0%, var(--raven-gold-light) 100%);
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--raven-charcoal);
}

.user-info { flex: 1; }
.user-greeting { font-size: 0.75rem; color: var(--raven-gray-500); margin: 0 0 0.25rem 0; text-transform: uppercase; letter-spacing: 0.05em; }
.user-name { font-family: 'Chakra Petch', sans-serif; font-size: 1.125rem; font-weight: 600; color: var(--raven-charcoal); margin: 0; }

.sidebar-nav { display: flex; flex-direction: column; gap: 0.5rem; }

.nav-item {
    display: flex;
    align-items: center;
    gap: 0.875rem;
    padding: 0.875rem 1rem;
    border-radius: 12px;
    color: var(--raven-gray-700);
    text-decoration: none;
    font-size: 0.9375rem;
    font-weight: 500;
    transition: all 0.2s ease;
}

.nav-item:hover { background: var(--raven-gray-50); color: var(--raven-charcoal); }
.nav-item.active { background: linear-gradient(135deg, rgba(212, 168, 71, 0.15) 0%, rgba(232, 199, 107, 0.1) 100%); color: var(--raven-gold-dark); }
.nav-item.active svg { color: var(--raven-gold); }
.nav-item svg { flex-shrink: 0; color: var(--raven-gray-400); transition: color 0.2s ease; }
.nav-item:hover svg { color: var(--raven-gray-700); }

.sidebar-footer { margin-top: 1.5rem; padding-top: 1.5rem; border-top: 1px solid var(--raven-gray-100); }

.logout-btn {
    display: flex;
    align-items: center;
    gap: 0.875rem;
    padding: 0.875rem 1rem;
    border-radius: 12px;
    color: var(--raven-gray-500);
    text-decoration: none;
    font-size: 0.9375rem;
    font-weight: 500;
    transition: all 0.2s ease;
    width: 100%;
}

.logout-btn:hover { background: #FEF2F2; color: #DC2626; }
.logout-btn:hover svg { color: #DC2626; }

.account-main { min-width: 0; }
.page-header { margin-bottom: 2rem; }
.page-title { font-family: 'Chakra Petch', sans-serif; font-size: 1.75rem; font-weight: 700; color: var(--raven-charcoal); margin: 0 0 0.5rem 0; text-transform: uppercase; letter-spacing: 0.02em; }
.page-subtitle { font-size: 1rem; color: var(--raven-gray-500); margin: 0; }

.section-card { background: var(--raven-white); border-radius: 20px; padding: 1.5rem; box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06); }
.orders-list { display: flex; flex-direction: column; gap: 1.5rem; }

.order-card { background: var(--raven-gray-50); border-radius: 16px; overflow: hidden; transition: all 0.2s ease; }
.order-card:hover { box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08); }

.order-header { display: flex; justify-content: space-between; align-items: flex-start; padding: 1.25rem; background: var(--raven-white); border-bottom: 1px solid var(--raven-gray-100); }
.order-info { display: flex; gap: 2rem; }
.order-number, .order-date { display: flex; flex-direction: column; gap: 0.25rem; }
.order-number .label, .order-date .label { font-size: 0.6875rem; font-weight: 600; color: var(--raven-gray-500); text-transform: uppercase; letter-spacing: 0.05em; }
.order-number .value { font-family: 'Chakra Petch', sans-serif; font-size: 1rem; font-weight: 600; color: var(--raven-charcoal); }
.order-date .value { font-size: 0.875rem; color: var(--raven-gray-700); }

.status-badge { font-size: 0.6875rem; font-weight: 700; padding: 0.375rem 0.75rem; border-radius: 20px; text-transform: uppercase; letter-spacing: 0.05em; background: rgba(59, 130, 246, 0.15); color: #2563EB; }

.order-items { padding: 1rem 1.25rem; }
.order-item { display: flex; align-items: center; gap: 1rem; padding: 0.75rem 0; border-bottom: 1px solid var(--raven-gray-100); }
.order-item:last-child { border-bottom: none; }

.item-image { width: 56px; height: 56px; border-radius: 10px; overflow: hidden; background: var(--raven-white); flex-shrink: 0; }
.item-image img { width: 100%; height: 100%; object-fit: cover; }
.item-image .no-image { width: 100%; height: 100%; display: flex; align-items: center; justify-content: center; color: var(--raven-gray-300); }

.item-details { flex: 1; min-width: 0; }
.item-name { font-size: 0.875rem; font-weight: 600; color: var(--raven-charcoal); margin: 0 0 0.25rem 0; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; }
.item-quantity { font-size: 0.75rem; color: var(--raven-gray-500); margin: 0; }
.item-price { font-size: 0.875rem; font-weight: 600; color: var(--raven-charcoal); }

.more-items { text-align: center; padding: 0.75rem; font-size: 0.8125rem; color: var(--raven-gray-500); font-style: italic; }

.order-footer { display: flex; justify-content: space-between; align-items: center; padding: 1.25rem; background: var(--raven-white); border-top: 1px solid var(--raven-gray-100); }
.order-total { display: flex; align-items: baseline; gap: 0.75rem; }
.total-label { font-size: 0.75rem; font-weight: 600; color: var(--raven-gray-500); text-transform: uppercase; letter-spacing: 0.05em; }
.total-value { font-family: 'Chakra Petch', sans-serif; font-size: 1.25rem; font-weight: 700; color: var(--raven-charcoal); }

.btn-view-order { display: inline-flex; align-items: center; gap: 0.5rem; font-size: 0.875rem; font-weight: 600; color: var(--raven-gold-dark); text-decoration: none; transition: all 0.2s ease; }
.btn-view-order:hover { color: var(--raven-gold); gap: 0.75rem; }

.no-orders { text-align: center; padding: 4rem 2rem; }
.no-orders-title { font-family: 'Chakra Petch', sans-serif; font-size: 1.5rem; font-weight: 700; color: var(--raven-charcoal); margin: 0 0 0.5rem 0; text-transform: uppercase; }
.no-orders-text { font-size: 1rem; color: var(--raven-gray-500); margin: 0 0 2rem 0; }

.btn-primary { display: inline-flex; align-items: center; gap: 0.5rem; padding: 0.875rem 2rem; background: linear-gradient(135deg, var(--raven-gold) 0%, var(--raven-gold-light) 50%, var(--raven-gold) 100%); border: 2px solid var(--raven-gold-dark); border-radius: 12px; color: var(--raven-charcoal); font-size: 0.9375rem; font-weight: 700; text-decoration: none; transition: all 0.3s ease; }
.btn-primary:hover { transform: translateY(-2px); box-shadow: 0 8px 24px rgba(212, 168, 71, 0.4); }

.back-link { display: inline-flex; align-items: center; gap: 0.5rem; font-size: 0.875rem; font-weight: 500; color: var(--raven-gray-500); text-decoration: none; margin-bottom: 1rem; transition: all 0.2s ease; }
.back-link:hover { color: var(--raven-gold-dark); }

.order-detail-header { padding: 1.25rem; border-bottom: 1px solid var(--raven-gray-100); }
.order-status-info { display: flex; align-items: center; gap: 1rem; }
.order-detail-items { padding: 1.5rem; }
.detail-section-title { font-family: 'Chakra Petch', sans-serif; font-size: 1rem; font-weight: 600; color: var(--raven-charcoal); margin: 0 0 1rem 0; text-transform: uppercase; }

.order-detail-item { display: flex; align-items: center; gap: 1rem; padding: 1rem 0; border-bottom: 1px solid var(--raven-gray-100); }
.order-detail-item:last-child { border-bottom: none; }

.item-prices { display: flex; flex-direction: column; align-items: flex-end; gap: 0.25rem; }
.item-unit-price { font-size: 0.75rem; color: var(--raven-gray-500); }
.item-total-price { font-size: 1rem; font-weight: 700; color: var(--raven-charcoal); }

.order-detail-summary { padding: 1.5rem; background: var(--raven-gray-50); border-radius: 0 0 16px 16px; }
.summary-row { display: flex; justify-content: space-between; padding: 0.5rem 0; font-size: 0.9375rem; color: var(--raven-gray-700); }
.summary-row.total-row { padding-top: 1rem; margin-top: 0.5rem; border-top: 2px solid var(--raven-gray-200); font-size: 1.125rem; font-weight: 700; color: var(--raven-charcoal); }

.order-detail-addresses { display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 1.5rem; margin-top: 1.5rem; }

.address-card { background: var(--raven-white); border-radius: 16px; padding: 1.5rem; box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06); }
.address-title { font-family: 'Chakra Petch', sans-serif; font-size: 0.875rem; font-weight: 600; color: var(--raven-charcoal); margin: 0 0 1rem 0; text-transform: uppercase; padding-bottom: 0.75rem; border-bottom: 1px solid var(--raven-gray-100); }
.address-content p { margin: 0.25rem 0; font-size: 0.9375rem; color: var(--raven-gray-700); }
.address-content p:first-child { font-weight: 600; color: var(--raven-charcoal); }

.account-content, .account-sidebar-menu, .account-welcome, .account-orders, .order-table { display: none !important; }

@media (max-width: 640px) {
    .order-header { flex-direction: column; gap: 1rem; }
    .order-info { flex-direction: column; gap: 0.75rem; }
    .order-footer { flex-direction: column; gap: 1rem; align-items: stretch; }
    .btn-view-order { justify-content: center; padding: 0.75rem; background: var(--raven-gray-50); border-radius: 10px; }
}
</style>

<script>
document.body.classList.add('raven-account-page-bg');
</script>
{% endblock %}
