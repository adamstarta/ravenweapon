{% sw_extends '@Storefront/storefront/page/account/_page.html.twig' %}

{% block page_account_main_content %}
<div class="raven-orders-page">
    {% if page.deepLinkCode and page.orders.elements|length > 0 %}
    {# ============ SINGLE ORDER DETAIL VIEW ============ #}
    {% set order = page.orders.elements|first %}
    <div class="order-detail-container">
        <a href="{{ path('frontend.account.order.page') }}" class="back-link">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="15 18 9 12 15 6"></polyline></svg>
            Zurück zu Bestellungen
        </a>

        <div class="order-header-section">
            <h1>Bestellung #{{ order.orderNumber }}</h1>
            <p class="order-date">{{ order.orderDateTime|date('d.m.Y H:i') }}</p>
            <span class="status-badge">{{ order.stateMachineState.translated.name|default('Unbekannt') }}</span>
        </div>

        <div class="order-section">
            <h2>Bestellte Artikel</h2>
            {% for lineItem in order.lineItems %}
            <div class="order-item-row">
                <div class="item-image">
                    {% if lineItem.cover %}
                    <img src="{{ lineItem.cover.url }}" alt="{{ lineItem.label }}">
                    {% else %}
                    <div class="no-image-placeholder"></div>
                    {% endif %}
                </div>
                <div class="item-info">
                    <p class="item-name">{{ lineItem.label }}</p>
                    <p class="item-qty">Menge: {{ lineItem.quantity }}</p>
                </div>
                <div class="item-prices">
                    <span class="unit-price">CHF {{ lineItem.unitPrice|number_format(2, '.', ' ') }}</span>
                    <span class="total-price">CHF {{ lineItem.totalPrice|number_format(2, '.', ' ') }}</span>
                </div>
            </div>
            {% endfor %}
        </div>

        <div class="order-summary-section">
            <div class="summary-row">
                <span>Zwischensumme</span>
                <span>CHF {{ order.price.positionPrice|number_format(2, '.', ' ') }}</span>
            </div>
            {% for delivery in order.deliveries %}
            <div class="summary-row">
                <span>Versand</span>
                <span>CHF {{ delivery.shippingCosts.totalPrice|number_format(2, '.', ' ') }}</span>
            </div>
            {% endfor %}
            <div class="summary-row total">
                <span>Gesamtsumme</span>
                <span>CHF {{ order.amountTotal|number_format(2, '.', ' ') }}</span>
            </div>
        </div>

        <div class="addresses-grid">
            <div class="address-box">
                <h3>Rechnungsadresse</h3>
                <p>{{ order.billingAddress.firstName }} {{ order.billingAddress.lastName }}</p>
                <p>{{ order.billingAddress.street }}</p>
                <p>{{ order.billingAddress.zipcode }} {{ order.billingAddress.city }}</p>
                <p>{{ order.billingAddress.country.translated.name }}</p>
            </div>
            {% for delivery in order.deliveries %}
            <div class="address-box">
                <h3>Lieferadresse</h3>
                <p>{{ delivery.shippingOrderAddress.firstName }} {{ delivery.shippingOrderAddress.lastName }}</p>
                <p>{{ delivery.shippingOrderAddress.street }}</p>
                <p>{{ delivery.shippingOrderAddress.zipcode }} {{ delivery.shippingOrderAddress.city }}</p>
                <p>{{ delivery.shippingOrderAddress.country.translated.name }}</p>
            </div>
            {% endfor %}
        </div>
    </div>

    {% else %}
    {# ============ ORDERS LIST VIEW ============ #}
    <div class="orders-list-container">
        <div class="page-header">
            <h1>Meine Bestellungen</h1>
            <p>Übersicht aller Ihrer Bestellungen</p>
        </div>

        {% if page.orders.elements|length > 0 %}
        <div class="orders-list">
            {% for order in page.orders %}
            <div class="order-card">
                <div class="card-header">
                    <div class="order-meta">
                        <span class="order-number">#{{ order.orderNumber }}</span>
                        <span class="order-date">{{ order.orderDateTime|date('d.m.Y H:i') }}</span>
                    </div>
                    <span class="status-badge">{{ order.stateMachineState.translated.name|default('Unbekannt') }}</span>
                </div>

                <div class="card-items">
                    {% for lineItem in order.lineItems|slice(0, 3) %}
                    <div class="item-row">
                        <div class="item-thumb">
                            {% if lineItem.cover %}
                            <img src="{{ lineItem.cover.url }}" alt="{{ lineItem.label }}">
                            {% endif %}
                        </div>
                        <span class="item-label">{{ lineItem.label }}</span>
                        <span class="item-price">CHF {{ lineItem.totalPrice|number_format(2, '.', ' ') }}</span>
                    </div>
                    {% endfor %}
                    {% if order.lineItems|length > 3 %}
                    <p class="more-items">+{{ order.lineItems|length - 3 }} weitere Artikel</p>
                    {% endif %}
                </div>

                <div class="card-footer">
                    <div class="order-total">
                        <span class="label">Gesamt</span>
                        <span class="value">CHF {{ order.amountTotal|number_format(2, '.', ' ') }}</span>
                    </div>
                    <a href="{{ path('frontend.account.order.single.page', { deepLinkCode: order.deepLinkCode }) }}" class="view-btn">
                        Details anzeigen
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="9 18 15 12 9 6"></polyline></svg>
                    </a>
                </div>
            </div>
            {% endfor %}
        </div>
        {% else %}
        <div class="no-orders">
            <h3>Noch keine Bestellungen</h3>
            <p>Sobald Sie eine Bestellung aufgeben, wird sie hier angezeigt.</p>
            <a href="{{ path('frontend.home.page') }}" class="shop-btn">Jetzt einkaufen</a>
        </div>
        {% endif %}
    </div>
    {% endif %}
</div>

<style>
.raven-orders-page {
    padding: 2rem;
    background: linear-gradient(180deg, #FDFCF9 0%, #F5F3EE 100%);
    min-height: 400px;
    font-family: Inter, sans-serif;
}

.page-header h1 {
    font-family: Chakra Petch, sans-serif;
    font-size: 1.75rem;
    font-weight: 700;
    color: #1A1A1A;
    margin: 0 0 0.5rem 0;
    text-transform: uppercase;
}

.page-header p {
    color: #6b7280;
    margin: 0 0 2rem 0;
}

.orders-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
}

.order-card {
    background: #fff;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0,0,0,0.06);
}

.card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.25rem;
    border-bottom: 1px solid #f3f4f6;
}

.order-meta {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
}

.order-number {
    font-family: Chakra Petch, sans-serif;
    font-weight: 600;
    color: #1A1A1A;
}

.order-date {
    font-size: 0.875rem;
    color: #6b7280;
}

.status-badge {
    font-size: 0.6875rem;
    font-weight: 700;
    padding: 0.375rem 0.75rem;
    border-radius: 20px;
    text-transform: uppercase;
    background: rgba(59, 130, 246, 0.15);
    color: #2563EB;
}

.card-items {
    padding: 1rem 1.25rem;
}

.item-row {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 0.5rem 0;
}

.item-thumb {
    width: 48px;
    height: 48px;
    border-radius: 8px;
    overflow: hidden;
    background: #f3f4f6;
}

.item-thumb img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.item-label {
    flex: 1;
    font-size: 0.875rem;
    color: #1A1A1A;
}

.item-price {
    font-weight: 600;
    color: #1A1A1A;
}

.more-items {
    text-align: center;
    color: #9ca3af;
    font-size: 0.8125rem;
    font-style: italic;
    margin: 0.5rem 0 0 0;
}

.card-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.25rem;
    background: #f9fafb;
    border-top: 1px solid #f3f4f6;
}

.order-total .label {
    font-size: 0.75rem;
    color: #6b7280;
    text-transform: uppercase;
    display: block;
}

.order-total .value {
    font-family: Chakra Petch, sans-serif;
    font-size: 1.25rem;
    font-weight: 700;
    color: #1A1A1A;
}

.view-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    font-weight: 600;
    color: #B8922E;
    text-decoration: none;
}

.view-btn:hover {
    color: #D4A847;
}

.order-detail-container {
    max-width: 900px;
}

.back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: #6b7280;
    text-decoration: none;
    margin-bottom: 1.5rem;
}

.back-link:hover {
    color: #B8922E;
}

.order-header-section {
    margin-bottom: 2rem;
}

.order-header-section h1 {
    font-family: Chakra Petch, sans-serif;
    font-size: 1.75rem;
    font-weight: 700;
    color: #1A1A1A;
    margin: 0 0 0.5rem 0;
}

.order-section {
    background: #fff;
    border-radius: 16px;
    padding: 1.5rem;
    margin-bottom: 1.5rem;
    box-shadow: 0 4px 20px rgba(0,0,0,0.06);
}

.order-section h2 {
    font-family: Chakra Petch, sans-serif;
    font-size: 1rem;
    font-weight: 600;
    color: #1A1A1A;
    margin: 0 0 1rem 0;
    text-transform: uppercase;
}

.order-item-row {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 0;
    border-bottom: 1px solid #f3f4f6;
}

.order-item-row:last-child {
    border-bottom: none;
}

.item-image {
    width: 64px;
    height: 64px;
    border-radius: 10px;
    overflow: hidden;
    background: #f3f4f6;
}

.item-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.item-info {
    flex: 1;
}

.item-name {
    font-weight: 600;
    color: #1A1A1A;
    margin: 0 0 0.25rem 0;
}

