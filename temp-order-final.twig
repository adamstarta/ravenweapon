    font-size: 0.75rem;
    color: #6b7280;
    margin: 0;
}

.item-prices {
    text-align: right;
}

.unit-price {
    display: block;
    font-size: 0.75rem;
    color: #9ca3af;
}

.total-price {
    font-weight: 700;
    color: #1A1A1A;
}

.order-summary-section {
    background: #fff;
    border-radius: 16px;
    padding: 1.5rem;
    margin-bottom: 1.5rem;
    box-shadow: 0 4px 20px rgba(0,0,0,0.06);
}

.summary-row {
    display: flex;
    justify-content: space-between;
    padding: 0.5rem 0;
    color: #374151;
}

.summary-row.total {
    padding-top: 1rem;
    margin-top: 0.5rem;
    border-top: 2px solid #e5e7eb;
    font-weight: 700;
    color: #1A1A1A;
    font-size: 1.125rem;
}

.addresses-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
}

.address-box {
    background: #fff;
    border-radius: 16px;
    padding: 1.5rem;
    box-shadow: 0 4px 20px rgba(0,0,0,0.06);
}

.address-box h3 {
    font-family: Chakra Petch, sans-serif;
    font-size: 0.875rem;
    font-weight: 600;
    color: #1A1A1A;
    margin: 0 0 1rem 0;
    text-transform: uppercase;
    padding-bottom: 0.75rem;
    border-bottom: 1px solid #f3f4f6;
}

.address-box p {
    margin: 0.25rem 0;
    color: #374151;
}

.address-box p:first-of-type {
    font-weight: 600;
    color: #1A1A1A;
}

.no-orders {
    text-align: center;
    padding: 4rem 2rem;
    background: #fff;
    border-radius: 16px;
    box-shadow: 0 4px 20px rgba(0,0,0,0.06);
}

.no-orders h3 {
    font-family: Chakra Petch, sans-serif;
    font-size: 1.5rem;
    color: #1A1A1A;
    margin: 0 0 0.5rem 0;
}

.no-orders p {
    color: #6b7280;
    margin: 0 0 2rem 0;
}

.shop-btn {
    display: inline-block;
    padding: 0.875rem 2rem;
    background: linear-gradient(135deg, #D4A847 0%, #E8C76B 100%);
    border: 2px solid #B8922E;
    border-radius: 12px;
    color: #1A1A1A;
    font-weight: 700;
    text-decoration: none;
}

.shop-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(212, 168, 71, 0.4);
}

.account-content, .account-orders { display: none !important; }
</style>
{% endblock %}
